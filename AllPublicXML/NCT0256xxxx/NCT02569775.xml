  <primary_outcome>
    <measure>Change in Total Score of Gross Motor Function Measure (GMFM)-88</measure>
    <time_frame>3 months and 6 months after transplantation</time_frame>
    <description>GMFM-88</description>
  </primary_outcome>
  <primary_outcome>
    <measure>Change in Gross Motor Function Measure (GMFM)-66 Percentile</measure>
    <time_frame>3 months and 6 months after transplantation</time_frame>
    <description>GMFM-66 percentile</description>
  </primary_outcome>
