  <brief_title>Lansoprazole in Preterm Infants With Gastroesophageal Reflux (GER)</brief_title>
  <official_title>Lansoprazole in Preterm Infants With Gastroesophageal Reflux</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Seoul National University Hospital</agency>
      <agency_class>Other</agency_class>
