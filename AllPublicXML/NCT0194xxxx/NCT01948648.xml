  <brief_title>Effects of Fish Oil and Colesevelam</brief_title>
  <official_title>Effects of Fish Oil, Colesevelam and Combination Therapy on Sterol Metabolism in Sitosterolemia</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>University of Manitoba</agency>
      <agency_class>Other</agency_class>
    </lead_sponsor>
