  <primary_outcome>
    <measure>acute pancreatitis</measure>
    <time_frame>one to 10 days</time_frame>
    <description>Definition of acute pancreatitis: Serum lipase or amylase obtained 2 to 6 hours following ERCP + onset of abdominal pain after ERCP persisting for 24h+ need for analgesia</description>
  </primary_outcome>
  <secondary_outcome>
    <measure>severity of pancreatitis using the Imrie score system (according to Imrie et al.)</measure>
    <time_frame>one to 10 days</time_frame>
    <description>assessment of severity by Imrie score: mild pancreatitis defined by Imrie score &lt;3, severe pancreatitis if Imrie score &gt;=3</description>
  </secondary_outcome>
  <secondary_outcome>
    <measure>endoscopic perforation</measure>
    <time_frame>one to two days</time_frame>
    <description>signs of perforation after ERCP, proven by CT scan or surgery</description>
  </secondary_outcome>
  <secondary_outcome>
    <measure>major bleeding</measure>
    <time_frame>one to two days</time_frame>
    <description>any bleeding events associated with ERCP. Drop of Hemoglobin of &gt; 2g/dl and signs of bleeding</description>
  </secondary_outcome>
