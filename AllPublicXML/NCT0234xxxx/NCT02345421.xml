  <brief_title>A Study to Identify and Characterize LAL-D Patients in High-risk Populations</brief_title>
  <official_title>A Study to Identify the Frequency of Lysosomal Acid Lipase Deficiency in At-Risk Patient Populations</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Alexion Pharmaceuticals</agency>
      <agency_class>Industry</agency_class>
    </lead_sponsor>
  </sponsors>
