  <brief_title>Individualized Bowel Preparation for Colonoscopy</brief_title>
  <acronym>PREP2TARGET</acronym>
  <official_title>A Randomized Clinical Trial Comparing Standard and Invidualized Bowel Preparation for Colonoscopy</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Clinical Hospital Colentina</agency>
      <agency_class>Other</agency_class>
    </lead_sponsor>
  </sponsors>
