    <masking>None (Open Label)</masking>
  </study_design_info>
  <primary_outcome>
    <measure>pain</measure>
    <time_frame>1-5 minutes after arterial puncture</time_frame>
    <description>Pain is measured with a 100 mm visual analog scale</description>
  </primary_outcome>
  <number_of_arms>2</number_of_arms>
  <enrollment type="Actual">82</enrollment>
  <condition>Vessel Puncture Site Pain</condition>
  <arm_group>
    <arm_group_label>Cryotherapy</arm_group_label>
    <arm_group_type>Experimental</arm_group_type>
    <description>Cryotherapy: 12 ounces of crushed ice place in a plastic bag applied to the radial artery puncture area for 3 minutes</description>
  </arm_group>
  <arm_group>
    <arm_group_label>Control</arm_group_label>
    <arm_group_type>No Intervention</arm_group_type>
    <description>Cryotherapy is not applied to the radial artery puncture area</description>
  </arm_group>
  <intervention>
    <intervention_type>Other</intervention_type>
    <intervention_name>Cryotherapy (ice pack)</intervention_name>
    <arm_group_label>Cryotherapy</arm_group_label>
  </intervention>
  <eligibility>
    <criteria>
      <textblock>
        Inclusion Criteria:

          -  subjects ≥ 18 years old referred to the pulmonary function laboratory with a physician
             order for an arterial blood gas test were sought to complete the study

        Exclusion Criteria:

          -  cold, bluish hands and fingers

          -  diagnosis of Raynaud's syndrome or scleroderma/CREST syndrome

          -  history or signs of dementia, confusion, or cognitive impairment

          -  blindness

          -  patients not fluent in the English language

          -  non-palpable radial pulse in the wrist (necessitating brachial puncture)
      </textblock>
    </criteria>
    <gender>All</gender>
    <minimum_age>18 Years</minimum_age>
    <maximum_age>N/A</maximum_age>
    <healthy_volunteers>Accepts Healthy Volunteers</healthy_volunteers>
  </eligibility>
