  <primary_outcome>
    <measure>Short-term effects of 2 PEEP titration strategies on gas exchange</measure>
    <time_frame>2 hours 15 minutes</time_frame>
  </primary_outcome>
  <secondary_outcome>
    <measure>Short-term effects of 2 PEEP titration strategies on respiratory mechanics</measure>
    <time_frame>2 hours 15 min</time_frame>
  </secondary_outcome>
