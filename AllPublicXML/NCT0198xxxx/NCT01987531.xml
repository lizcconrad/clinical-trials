  <oversight_info>
    <has_dmc>No</has_dmc>
  </oversight_info>
  <brief_summary>
    <textblock>
      The hypothesis of this study is that temporary biventricular pacing will improve hemodynamic
      performance in patients with right ventricular dysfunction after open cardiac chamber cardiac
      surgery.
    </textblock>
  </brief_summary>
  <overall_status>Completed</overall_status>
  <start_date>November 2013</start_date>
  <completion_date type="Actual">February 2015</completion_date>
  <primary_completion_date type="Actual">February 2015</primary_completion_date>
  <phase>N/A</phase>
  <study_type>Interventional</study_type>
