  <eligibility>
    <study_pop>
      <textblock>
        in the ward of the department of nephrology
      </textblock>
    </study_pop>
    <sampling_method>Probability Sample</sampling_method>
    <criteria>
      <textblock>
        Inclusion Criteria:

          -  Chronic kidney disease patients with Hypertension

        Exclusion Criteria:

          -  renal replacement therapy

          -  heart failure

          -  severe valvular disease

          -  sustained arrhythmias

          -  secondary hypertension excluded from renovascular hypertension

          -  acute cardiovascular events

          -  infection
      </textblock>
    </criteria>
    <gender>All</gender>
    <minimum_age>15 Years</minimum_age>
    <maximum_age>75 Years</maximum_age>
