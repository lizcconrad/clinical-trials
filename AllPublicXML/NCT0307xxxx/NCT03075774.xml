  <brief_summary>
    <textblock>
      Multicenter prospective observational study, involving all adult patients who underwent
      cardiac surgery with extracorporeal circulation
    </textblock>
  </brief_summary>
  <overall_status>Not yet recruiting</overall_status>
  <start_date type="Anticipated">March 2017</start_date>
  <completion_date type="Anticipated">April 2018</completion_date>
  <primary_completion_date type="Anticipated">April 2018</primary_completion_date>
  <study_type>Observational [Patient Registry]</study_type>
  <has_expanded_access>No</has_expanded_access>
  <study_design_info>
    <observational_model>Case-Only</observational_model>
    <time_perspective>Prospective</time_perspective>
  </study_design_info>
  <target_duration>1 Week</target_duration>
  <primary_outcome>
    <measure>The international recommendations published by ESA in 2016</measure>
    <time_frame>13 Months</time_frame>
    <description>Review the concordance between the presence / absence of indication (according to the international recommendations published by ESA in 2016) and the prescription / non-prescription of fibrinogen concentrates</description>
  </primary_outcome>
  <enrollment type="Anticipated">3000</enrollment>
  <condition>Cardiac Surgery</condition>
  <condition>Extracorporeal Circulation</condition>
  <condition>Fibrinogen</condition>
  <eligibility>
    <study_pop>
      <textblock>
        Adult patient that underwent a cardiac surgery with extracorporeal circulation.
      </textblock>
    </study_pop>
    <sampling_method>Non-Probability Sample</sampling_method>
    <criteria>
      <textblock>
        Inclusion Criteria:

          -  Patient over the age of 18 that underwent a cardiac surgery with extracorporeal
             circulation.

          -  Patient who agreed to participate in the study.

        Exclusion Criteria:

          -  Patient under the age of 18.
      </textblock>
    </criteria>
    <gender>All</gender>
    <minimum_age>18 Years</minimum_age>
    <maximum_age>N/A</maximum_age>
  </eligibility>
