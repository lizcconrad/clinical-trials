  <brief_title>Prophylactic Octreotide to Prevent Post Duodenal EMR and Ampullectomy Bleeding</brief_title>
  <official_title>Prophylactic Octreotide to Prevent Post Duodenal EMR and Ampullectomy Bleeding</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Florida Hospital</agency>
      <agency_class>Other</agency_class>
    </lead_sponsor>
