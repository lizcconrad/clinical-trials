  <brief_title>The LEADLESS Pacemaker IDE Study (Leadless II)</brief_title>
  <official_title>Safety and Effectiveness Trial for the Nanostim Leadless Pacemaker</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>St. Jude Medical</agency>
      <agency_class>Industry</agency_class>
