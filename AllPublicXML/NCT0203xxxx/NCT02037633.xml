  <primary_outcome>
    <measure>Pain scores on the Numeric Rating Scale</measure>
    <time_frame>Group A: 5 minutes after intervention (fentanyl), Group B: 20 minutes after intervention (block)</time_frame>
  </primary_outcome>
  <secondary_outcome>
