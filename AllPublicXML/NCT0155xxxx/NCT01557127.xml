  <primary_outcome>
    <measure>Percentage of patients in whom the actual dose of sorafenib equaled the planned dose</measure>
    <time_frame>12 months</time_frame>
  </primary_outcome>
  <secondary_outcome>
    <measure>Overall tolerability of treatment as measured by rate of adverse events</measure>
    <time_frame>12 months</time_frame>
  </secondary_outcome>
