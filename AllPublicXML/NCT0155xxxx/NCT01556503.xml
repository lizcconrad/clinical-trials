  <brief_title>Sensitivity/Specificity Study of Non-invasive Imaging for Melanoma Diagnosis</brief_title>
  <official_title>Sensitivity/Specificity Study of Non-invasive Imaging for Melanoma Diagnosis</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>OHSU Knight Cancer Institute</agency>
      <agency_class>Other</agency_class>
    </lead_sponsor>
  </sponsors>
