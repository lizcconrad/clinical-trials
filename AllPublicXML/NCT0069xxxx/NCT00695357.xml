  <eligibility>
    <study_pop>
      <textblock>
        Primary care
      </textblock>
    </study_pop>
    <sampling_method>Non-Probability Sample</sampling_method>
    <criteria>
      <textblock>
        Inclusion Criteria:

          -  Patients diagnosed with persistent asthma (GINA 2005) for at least 6 months before
             entering the study

          -  Patients who are under treatment according to the new strategies described in GINA
             2006 for at least 3 months before entering the study

        Exclusion Criteria:

          -  Patients who are not willing to sign the Informed Consent Form

          -  COPD Patients
      </textblock>
    </criteria>
    <gender>All</gender>
    <minimum_age>18 Years</minimum_age>
    <maximum_age>N/A</maximum_age>
    <healthy_volunteers>No</healthy_volunteers>
  </eligibility>
