  <brief_title>Observational Study on Costs and Caregiver Burden in Alzheimer's Disease</brief_title>
  <official_title>Observational Study on Costs and Caregiver Burden in Alzheimer's Disease</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>AstraZeneca</agency>
      <agency_class>Industry</agency_class>
    </lead_sponsor>
    <collaborator>
      <agency>i3 Innovus</agency>
