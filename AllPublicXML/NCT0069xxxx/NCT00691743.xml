  <brief_title>Upper GI Symptoms In Patients Receiving Acetylsalicylic Acid/NSAIDs - NSAIDs Wave 2</brief_title>
  <acronym>NSAIDS II</acronym>
  <official_title>Upper GI Symptoms In Patients Receiving Acetylsalicylic Acid/NSAIDs - NSAIDs Wave 2</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>AstraZeneca</agency>
