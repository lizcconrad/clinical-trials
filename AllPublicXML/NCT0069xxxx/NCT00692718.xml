    <primary_purpose>Prevention</primary_purpose>
    <masking>None (Open Label)</masking>
  </study_design_info>
  <primary_outcome>
    <measure>detection of atrial fibrillation on ECG monitoring</measure>
    <time_frame>anytime during hospitalization</time_frame>
  </primary_outcome>
  <enrollment type="Anticipated">160</enrollment>
  <condition>Acute Heart Failure</condition>
  <condition>Acute Myocardial Infarction</condition>
  <intervention>
    <intervention_type>Drug</intervention_type>
    <intervention_name>Epadel, Eicosapentaenoic acid</intervention_name>
    <description>Epadel 900mg, 2 times a day, during hospitalization</description>
  </intervention>
  <eligibility>
    <criteria>
