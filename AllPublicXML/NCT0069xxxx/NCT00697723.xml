  <brief_title>Arterial Versus Venous Graft Recruitment by Intra-Aortic Balloon Pump</brief_title>
  <sponsors>
    <lead_sponsor>
      <agency>University Magna Graecia</agency>
      <agency_class>Other</agency_class>
