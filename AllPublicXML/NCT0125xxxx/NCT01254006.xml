  <primary_outcome>
    <measure>retinal nerve fibres layer thickness</measure>
  </primary_outcome>
  <secondary_outcome>
    <measure>global risk threshold for glaucoma progression</measure>
  </secondary_outcome>
  <condition>Glaucoma</condition>
  <intervention>
