    <primary_purpose>Treatment</primary_purpose>
    <masking>None (Open Label)</masking>
  </study_design_info>
  <primary_outcome>
    <measure>Glucose metabolism</measure>
    <time_frame>2 weeks</time_frame>
    <description>Glucose and insulin values from 75 gram OGTT</description>
  </primary_outcome>
  <number_of_arms>2</number_of_arms>
  <enrollment type="Actual">21</enrollment>
  <condition>Sleep Extension</condition>
  <condition>Glucose Metabolism</condition>
  <arm_group>
    <arm_group_label>Control</arm_group_label>
    <arm_group_type>No Intervention</arm_group_type>
    <description>Continue with habitual sleep duration</description>
  </arm_group>
  <arm_group>
    <arm_group_label>Intervention</arm_group_label>
    <arm_group_type>Experimental</arm_group_type>
    <description>Sleep extension</description>
  </arm_group>
  <intervention>
    <intervention_type>Behavioral</intervention_type>
    <intervention_name>Sleep extension</intervention_name>
    <description>Sleep extension by 1 hour for 2 weeks</description>
    <arm_group_label>Intervention</arm_group_label>
  </intervention>
  <eligibility>
    <criteria>
      <textblock>
        Inclusion Criteria:

          -  self-reported sleep duration =&lt;6 hours/night during the week with a desire to sleep at
             least 7 hours/night

        Exclusion Criteria:

          -  shift workers,

          -  diabetes history,

          -  drugs affecting sleep or glucose metabolism,

          -  insomnia symptoms,

          -  high risk for sleep apnea,

          -  smoking or excess alcohol use
      </textblock>
    </criteria>
    <gender>All</gender>
    <minimum_age>20 Years</minimum_age>
    <maximum_age>55 Years</maximum_age>
    <healthy_volunteers>Accepts Healthy Volunteers</healthy_volunteers>
  </eligibility>
