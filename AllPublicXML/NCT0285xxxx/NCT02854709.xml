  <brief_title>Effects of Sleep Extension on Glucose Metabolism in Chronically Sleep Deprived Individuals</brief_title>
  <sponsors>
    <lead_sponsor>
      <agency>Ramathibodi Hospital</agency>
      <agency_class>Other</agency_class>
