  <oversight_info>
    <has_dmc>No</has_dmc>
  </oversight_info>
  <brief_summary>
    <textblock>
      This is a randomized cross over study of the effect of 2-week sleep extension in chronically
      sleep deprived non-diabetic individuals on glucose metabolism.
    </textblock>
  </brief_summary>
  <overall_status>Completed</overall_status>
  <start_date>July 2016</start_date>
  <completion_date type="Actual">June 2017</completion_date>
  <primary_completion_date type="Actual">June 2017</primary_completion_date>
  <phase>N/A</phase>
