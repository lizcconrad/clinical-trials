    <observational_model>Cohort</observational_model>
  </study_design_info>
  <primary_outcome>
    <measure>EORTC Quality of Life Questionnaire - Core 30 Score (EORTC QLQ-C30 Score)</measure>
    <time_frame>3 years from diagnosis for cases of prostate cancer and from recruitment for controls</time_frame>
  </primary_outcome>
  <number_of_groups>2</number_of_groups>
  <enrollment type="Anticipated">900</enrollment>
  <condition>Prostatic Neoplasms</condition>
  <condition>Quality of Life</condition>
  <arm_group>
    <arm_group_label>Prostate Cancer</arm_group_label>
    <description>Group drawn of the case group of the case control study, entitled EPICAP</description>
  </arm_group>
  <arm_group>
    <arm_group_label>No Prostate Cancer</arm_group_label>
    <description>Group drawn of the control group of the case control study, entitled EPICAP</description>
  </arm_group>
  <intervention>
    <intervention_type>Procedure</intervention_type>
    <intervention_name>therapeutic management of the prostate Cancer as usual</intervention_name>
    <arm_group_label>Prostate Cancer</arm_group_label>
  </intervention>
  <eligibility>
    <study_pop>
      <textblock>
        Target population: incident cases of prostate cancer
      </textblock>
    </study_pop>
    <sampling_method>Non-Probability Sample</sampling_method>
    <criteria>
      <textblock>
        - exposed group

        Inclusion Criteria:

          -  prostate cancer diagnosed from 1 December 2011 to 31 December 2014

          -  under 75 and residing in the Hérault department at diagnosis

          -  recruited in the EPICAP study

        Exclusion criteria:

          -  having relapsed in the range

          -  non-exposed group:

        Inclusion Criteria:

          -  controls (without prostate cancer) recruited in the EPICAP study

          -  matched to cases on age (5 years)

          -  residing in the Hérault department

        Exclusion criteria:

          -  diagnosis of prostate cancer set in the range
      </textblock>
    </criteria>
    <gender>Male</gender>
    <minimum_age>N/A</minimum_age>
    <maximum_age>75 Years</maximum_age>
    <healthy_volunteers>Accepts Healthy Volunteers</healthy_volunteers>
  </eligibility>
