  <brief_title>Combination of Bevacizumab and NK Immunotherapy for Recurrent Solid Tumors</brief_title>
  <sponsors>
    <lead_sponsor>
      <agency>Fuda Cancer Hospital, Guangzhou</agency>
      <agency_class>Other</agency_class>
