  <brief_title>Attention Training Trial</brief_title>
  <official_title>Mobile Based Attention Bias Modification Training for Chronic Pain</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>York University</agency>
      <agency_class>Other</agency_class>
