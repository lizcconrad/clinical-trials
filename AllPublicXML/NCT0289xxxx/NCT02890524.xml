  <brief_title>Tokushima Night Guard for Recurrent Aphthous Stomatitis</brief_title>
  <official_title>Effects of a Night Guard on Aphthous Stomatitis</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>University of Tokushima</agency>
      <agency_class>Other</agency_class>
