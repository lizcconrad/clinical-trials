  <brief_summary>
    <textblock>
      Compare heparin/warfarin to ASA for thromboembolic prophylaxis in the first two years
      following Fontan procedures.
    </textblock>
  </brief_summary>
  <overall_status>Completed</overall_status>
  <start_date>August 1998</start_date>
  <completion_date type="Actual">July 2005</completion_date>
  <phase>Phase 4</phase>
