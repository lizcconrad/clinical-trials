    <observational_model>Cohort</observational_model>
    <time_perspective>Prospective</time_perspective>
  </study_design_info>
  <enrollment type="Anticipated">40</enrollment>
  <condition>Brain Tumor</condition>
  <eligibility>
    <study_pop>
      <textblock>
        OMFD-PET of all patients after subtotal resection or biopsy of malignant glioma was
        evaluated.
      </textblock>
    </study_pop>
    <sampling_method>Non-Probability Sample</sampling_method>
    <criteria>
      <textblock>
        Inclusion Criteria:

          -  Brain tumor

          -  Radiation therapy indicated

          -  Written consent

        Exclusion Criteria:

          -  Pregnancy

          -  Mental impairment

          -  Drug/alcohol abuse
      </textblock>
    </criteria>
    <gender>All</gender>
    <minimum_age>18 Years</minimum_age>
    <maximum_age>N/A</maximum_age>
    <healthy_volunteers>No</healthy_volunteers>
  </eligibility>
