  <brief_summary>
    <textblock>
      The clinical study evaluates the efficacy and safety of MK0476 in adult patients with
      allergic rhinitis.
    </textblock>
  </brief_summary>
  <overall_status>Completed</overall_status>
  <start_date>February 2004</start_date>
  <completion_date type="Actual">March 2004</completion_date>
