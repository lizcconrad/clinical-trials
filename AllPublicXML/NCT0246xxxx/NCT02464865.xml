  <primary_outcome>
    <measure>abnormal thiamin pyrophosphate effect</measure>
    <time_frame>7 days</time_frame>
    <description>Thiamin pyrophosphate effect will be measured by a blood test</description>
  </primary_outcome>
  <secondary_outcome>
    <measure>consumption of thiaminase-containing foods and thiamin antagonist-containing foods</measure>
    <time_frame>7 days</time_frame>
    <description>Food diary and food frequency questionaire will be required to evaluate food consumption</description>
  </secondary_outcome>
