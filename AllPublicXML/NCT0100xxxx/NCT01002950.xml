  <primary_outcome>
    <measure>Safety as measured by: AEs, clinical laboratory tests, vital signs, physical exams, visual tests, and questionaire</measure>
    <time_frame>Through treatment period (up to Day 90) until 1-2 weeks post last dose (Day 97-104)</time_frame>
  </primary_outcome>
  <secondary_outcome>
    <measure>Pharmacokinetics as measured by plasma ACU-4429 drug levels</measure>
    <time_frame>Baseline; Treatment Days 2, 7, 14, 30, 60 and 90</time_frame>
  </secondary_outcome>
