  <brief_summary>
    <textblock>
      To evaluate two paradigms for simultaneous assessment of hepatic and intestinal CYP3A
      activity.
    </textblock>
  </brief_summary>
  <overall_status>Completed</overall_status>
  <start_date type="Actual">October 2009</start_date>
  <completion_date type="Actual">September 2016</completion_date>
  <primary_completion_date type="Actual">September 2016</primary_completion_date>
