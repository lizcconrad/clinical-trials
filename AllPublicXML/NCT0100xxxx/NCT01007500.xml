    <arm_group_label>Group Ondansetron</arm_group_label>
  </intervention>
  <eligibility>
    <criteria>
      <textblock>
        Inclusion Criteria:

          -  Patients undergoing video-assisted thoracoscopic surgery

          -  Age 20-75

          -  American Society of Anesthesiologists physical status classification I or II

        Exclusion Criteria:

          -  Antiemetic within 24 hrs

          -  Taking Steroids, Opioids within 1 week

          -  Active drug or alcohol abuse

          -  GI motility disorder, severe renal/ hepatic disease.
      </textblock>
    </criteria>
    <gender>All</gender>
    <minimum_age>20 Years</minimum_age>
    <maximum_age>75 Years</maximum_age>
