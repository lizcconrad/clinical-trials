  <primary_outcome>
    <measure>To assess the long-term safety and tolerability of AIN457 in patients with moderate to severe Crohn's disease who participated in the core CAIN457A2202 phase II proof-of-concept study.</measure>
    <time_frame>60 weeks</time_frame>
  </primary_outcome>
  <secondary_outcome>
    <measure>To assess the long term immunogenicity of AIN457</measure>
    <time_frame>60 weeks</time_frame>
  </secondary_outcome>
  <secondary_outcome>
    <measure>To assess the long term concentration of IL-17 in blood</measure>
    <time_frame>60 weeks</time_frame>
  </secondary_outcome>
  <secondary_outcome>
    <measure>To assess markers of disease activity CRP, calprotectin and lactoferrin in the long term</measure>
    <time_frame>60 weeks</time_frame>
  </secondary_outcome>
  <secondary_outcome>
    <measure>To assess the pharmacokinetics of AIN457 at steady-state</measure>
    <time_frame>60 weeks</time_frame>
  </secondary_outcome>
