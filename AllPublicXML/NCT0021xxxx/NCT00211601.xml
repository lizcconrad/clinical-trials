  <primary_outcome>
    <measure>CINV at the delayed phase during cycle 2</measure>
  </primary_outcome>
  <secondary_outcome>
    <measure>Treatment for CINV</measure>
  </secondary_outcome>
  <enrollment>1500</enrollment>
  <condition>Chemotherapy Induced Nausea and Vomiting</condition>
