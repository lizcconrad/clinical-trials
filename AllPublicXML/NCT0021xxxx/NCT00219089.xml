  <primary_outcome>
    <measure>Change from baseline in mean sitting diastolic blood pressure after 8 weeks</measure>
  </primary_outcome>
  <secondary_outcome>
    <measure>Change from baseline to week 4 endpoint in mean sitting diastolic blood pressure</measure>
  </secondary_outcome>
  <secondary_outcome>
