  <primary_outcome>
    <measure>Maximal and sub maximal exercise capacity at the end of the 6 weeks L-arginine supplementation. Renal function at the end of the 6 weeks</measure>
  </primary_outcome>
  <secondary_outcome>
    <measure>No secondary effects</measure>
  </secondary_outcome>
  <enrollment>30</enrollment>
  <condition>Heart Transplantation</condition>
  <intervention>
    <intervention_type>Drug</intervention_type>
    <intervention_name>12 g of L-arginine glutamate during 6 weeks twice a day</intervention_name>
  </intervention>
  <eligibility>
    <criteria>
      <textblock>
        Inclusion Criteria:

          -  Male (&gt; 18 years old) stable heart transplant recipient for at least 6 weeks

          -  Stable treatment for at least 3 months

          -  Sedentary people

        Exclusion Criteria:

          -  Unstable cardiac pathology

          -  Obesity (IMC &gt; 40)

          -  Participation in another study in the last month

          -  Chronic renal failure (creatinine clearance &lt; 20 ml/min)

          -  Renal transplantation

          -  Diabetes

          -  Impossibility to practice exercise test

          -  Nitrate therapy
      </textblock>
    </criteria>
    <gender>All</gender>
    <minimum_age>18 Years</minimum_age>
    <maximum_age>N/A</maximum_age>
    <healthy_volunteers>No</healthy_volunteers>
  </eligibility>
