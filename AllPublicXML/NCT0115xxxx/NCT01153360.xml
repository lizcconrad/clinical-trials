  <primary_outcome>
    <measure>compare the serum T3 concentrations and the number of patients with serum T3 concentrations below the normal range between the groups</measure>
    <time_frame>until 36 hours after surgery</time_frame>
  </primary_outcome>
  <secondary_outcome>
    <measure>difference of hemodynamic performance and myocardial injury</measure>
    <time_frame>during surgery and 36 hr after surgery</time_frame>
    <description>difference of hemodynamic performance and myocardial injury between the groups</description>
  </secondary_outcome>
  <other_outcome>
