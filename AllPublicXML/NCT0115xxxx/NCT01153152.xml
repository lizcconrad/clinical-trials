  <brief_title>Study of Pain Following Removal of Wisdom Teeth With Acute Pulpitis</brief_title>
  <sponsors>
    <lead_sponsor>
      <agency>Wuhan University</agency>
      <agency_class>Other</agency_class>
    </lead_sponsor>
  </sponsors>
