  <brief_title>Evaluating Walking Kinetic of Children Who Suffer Central Nervous System (CNS) Damage</brief_title>
  <official_title>Evaluating Walking Kinetic of Children Who Suffer Central Nervous System (CNS)</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Sheba Medical Center</agency>
      <agency_class>Other</agency_class>
