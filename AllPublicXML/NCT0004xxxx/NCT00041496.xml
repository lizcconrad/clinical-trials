    <allocation>Randomized</allocation>
    <intervention_model>Parallel Assignment</intervention_model>
    <primary_purpose>Prevention</primary_purpose>
    <masking>Double (Participant, Investigator)</masking>
  </study_design_info>
  <primary_outcome>
    <measure>Time-to-first symptomatic AF (atrial fibrillation)</measure>
    <time_frame>Up to 26 Weeks</time_frame>
  </primary_outcome>
  <secondary_outcome>
    <measure>Time to first symptomatic or detected asymptomatic AF; spontaneous reversion to sinus rhythm prior to cardioversion</measure>
    <time_frame>Up to 26 Weeks</time_frame>
  </secondary_outcome>
  <number_of_arms>2</number_of_arms>
  <enrollment type="Actual">520</enrollment>
