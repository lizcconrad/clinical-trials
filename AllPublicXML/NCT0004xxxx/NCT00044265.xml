      <agency>Pfizer</agency>
      <agency_class>Industry</agency_class>
    </lead_sponsor>
    <collaborator>
      <agency>Wyeth is now a wholly owned subsidiary of Pfizer</agency>
      <agency_class>Industry</agency_class>
