    <primary_purpose>Prevention</primary_purpose>
    <masking>Double (Investigator, Outcomes Assessor)</masking>
  </study_design_info>
  <primary_outcome>
    <measure>pediatric anesthesia emergence delirium (PAED) scale</measure>
    <time_frame>during stay in postanesthesia care unit</time_frame>
  </primary_outcome>
  <primary_outcome>
    <measure>Heart rate</measure>
    <time_frame>during surgical procedures</time_frame>
  </primary_outcome>
  <primary_outcome>
