  <eligibility>
    <study_pop>
      <textblock>
        As described in eligibility criteria
      </textblock>
    </study_pop>
    <sampling_method>Non-Probability Sample</sampling_method>
    <criteria>
      <textblock>
        Inclusion Criteria:

          -  Osteoarthrosis

          -  TKR operation elective

          -  ASA I-III

        Exclusion Criteria:

          -  TKR due to any reason but osteoarthrosis

          -  known coagulation problems

          -  platelets &lt; 100,000/DcL

          -  Hb &lt; 12 g%

          -  past thrombo-embolic event

          -  treatment with aspiring during last week

          -  treatment with NSAID's during last 48 hours

          -  malignancy

          -  known allergy to tranexamic acid

          -  general anesthesia
      </textblock>
    </criteria>
    <gender>All</gender>
    <minimum_age>18 Years</minimum_age>
    <maximum_age>75 Years</maximum_age>
    <healthy_volunteers>No</healthy_volunteers>
  </eligibility>
