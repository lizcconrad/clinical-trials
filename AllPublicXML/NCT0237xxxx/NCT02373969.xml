  <primary_outcome>
    <measure>Change in coagulation status during and after surgery compared to pre-surgery</measure>
    <time_frame>During and after surgery compared to pre-surgery</time_frame>
  </primary_outcome>
  <primary_outcome>
    <measure>Change in fibrinolytic activity during and after surgery compared to pre-surgery</measure>
    <time_frame>During and after surgery compared to pre-surgery</time_frame>
