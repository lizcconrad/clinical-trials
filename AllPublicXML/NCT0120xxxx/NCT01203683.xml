    <intervention_type>Behavioral</intervention_type>
    <intervention_name>Active computer-based training</intervention_name>
    <description>8 sessions across 4 weeks.</description>
    <arm_group_label>Active Computer-Based Program</arm_group_label>
  </intervention>
  <intervention>
    <intervention_type>Behavioral</intervention_type>
    <intervention_name>Inert computer training</intervention_name>
