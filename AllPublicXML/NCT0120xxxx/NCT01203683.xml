  <brief_title>Testing the Effectiveness of a Computer-based Program for Depression</brief_title>
  <official_title>Attention Training for Major Depressive Disorder</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>University of Texas at Austin</agency>
