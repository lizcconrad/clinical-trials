  <primary_outcome>
    <measure>Beck Depression Inventory-II</measure>
    <time_frame>Week 4, Week 9</time_frame>
    <description>Questionnaire to assess depression symptom severity</description>
  </primary_outcome>
  <secondary_outcome>
    <measure>Structured Clinical Interview for DSM-IV diagnoses</measure>
    <time_frame>Week 9</time_frame>
    <description>Diagnostic interview to assess for presence of Major depressive disorder (MDD).</description>
  </secondary_outcome>
  <secondary_outcome>
    <measure>Neural processing of emotion stimuli</measure>
    <time_frame>Week 4</time_frame>
    <description>fMRI paradigm to assess neural changes in how individuals processes emotional stimuli</description>
  </secondary_outcome>
