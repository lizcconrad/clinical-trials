  <brief_title>An Epidemiological Study Aimed to Record Standard Daily Practice in Managing Patients With Hypercholesterolemia</brief_title>
  <official_title>An Epidemiological Study Aimed to Record Standard Daily Practice in Managing Patients With Hypercholesterolemia</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>AstraZeneca</agency>
      <agency_class>Industry</agency_class>
    </lead_sponsor>
