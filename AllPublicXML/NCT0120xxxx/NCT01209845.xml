  <brief_title>Ketamine for Low Mood States in the ER</brief_title>
  <official_title>Low Dose Ketamine for Low Mood States: An Emergency Department Feasibility Study for Depressed Patients</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Yale University</agency>
      <agency_class>Other</agency_class>
    </lead_sponsor>
  </sponsors>
