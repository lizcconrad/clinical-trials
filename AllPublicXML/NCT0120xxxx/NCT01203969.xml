    <time_frame>5 days</time_frame>
    <description>postoperative pain score using visual analog scale (VAS)</description>
  </secondary_outcome>
  <secondary_outcome>
    <measure>amount of postoperative analgesics usage</measure>
    <time_frame>5 days</time_frame>
  </secondary_outcome>
