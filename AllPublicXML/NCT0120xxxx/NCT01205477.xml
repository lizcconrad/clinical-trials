  <condition>Bursitis</condition>
  <arm_group>
    <arm_group_label>Methylprednisolone</arm_group_label>
    <arm_group_type>Experimental</arm_group_type>
    <description>Infiltration of 40 mg of methylprednisolone acetate plus 1 mL of xylocaine</description>
  </arm_group>
  <arm_group>
    <arm_group_label>Placebo</arm_group_label>
    <arm_group_type>Placebo Comparator</arm_group_type>
