  <oversight_info>
    <has_dmc>No</has_dmc>
  </oversight_info>
  <brief_summary>
    <textblock>
      The purpose of this study is to investigate the role of erythromycin, a prokinetic agent, on
      hunger, and the brain mechanism lying behind it.
    </textblock>
  </brief_summary>
  <overall_status>Completed</overall_status>
  <start_date>September 2014</start_date>
  <primary_completion_date type="Actual">September 2016</primary_completion_date>
