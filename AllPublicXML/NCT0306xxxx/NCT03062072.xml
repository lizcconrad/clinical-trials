  <primary_outcome>
    <measure>Incidence of type 2 diabetes mellitus</measure>
    <time_frame>during chemotherapy (about 1 year)</time_frame>
    <description>Percentage of patients who progressed to type 2 diabetes</description>
  </primary_outcome>
  <secondary_outcome>
    <measure>Change in HbA1c</measure>
    <time_frame>during chemotherapy (about 1 year)</time_frame>
  </secondary_outcome>
  <secondary_outcome>
    <measure>Change in glycated albumin</measure>
    <time_frame>during chemotherapy (about 1 year)</time_frame>
  </secondary_outcome>
