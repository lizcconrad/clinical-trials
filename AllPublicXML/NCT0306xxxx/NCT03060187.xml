  <brief_summary>
    <textblock>
      The purpose of this observational study is to evaluate the usefulness of Kansas University
      airway exam score (&quot;KU score&quot;) in predicting difficulty of placement of a breathing tube into
      the windpipe.
    </textblock>
  </brief_summary>
  <overall_status>Completed</overall_status>
  <start_date type="Actual">February 2010</start_date>
  <completion_date type="Actual">January 2011</completion_date>
  <primary_completion_date type="Actual">January 2011</primary_completion_date>
