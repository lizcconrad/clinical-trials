    <arm_group_label>1</arm_group_label>
    <other_name>ABT-TARKA</other_name>
    <other_name>Tarka</other_name>
  </intervention>
  <intervention>
    <intervention_type>Drug</intervention_type>
    <intervention_name>(Hyzaar) losartan/hydrochlorothiazide</intervention_name>
    <description>50/12.5 mg QD with titration if needed at Week 4 to 100/25 mg QD</description>
    <arm_group_label>2</arm_group_label>
    <other_name>Hyzaar</other_name>
    <other_name>losartan/hydrochlorothiazide</other_name>
  </intervention>
  <eligibility>
    <criteria>
      <textblock>
        Inclusion Criteria:

          -  Metabolic syndrome

          -  Fasting blood glucose between 100 mg/dL and 125 mg/dL

          -  Hypertension

          -  One additional criteria, Exclusion 1

        Exclusion Criteria:

          -  Subject has a current diagnosis of Type 1 or Type 2 diabetes mellitus.

          -  Subject has a hypersensitivity to ACE inhibitor, ARB, CCB, clonidine, methyldopa,
             hydralazine, or thiazide diuretic medication.
      </textblock>
    </criteria>
    <gender>All</gender>
