  <brief_title>Effectiveness of Atypical Versus Conventional Antipsychotics in Treating Schizophrenia</brief_title>
  <official_title>Effectiveness of Atypical Vs Conventional Antipsychotics</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Yale University</agency>
      <agency_class>Other</agency_class>
    </lead_sponsor>
    <collaborator>
