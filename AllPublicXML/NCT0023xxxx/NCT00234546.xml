  <primary_outcome>
    <measure>Reduction of spasticity assessed by changes of the Modified Ashworth Spasticity Score from baseline of elbow and wrist flexors in supine anatomical position</measure>
    <time_frame>week 4</time_frame>
  </primary_outcome>
  <secondary_outcome>
    <measure>Improvement of neurologic outcome (mobility and function), evaluated by Modified Ashworth Scale, Barthel Index, Modified Rankin scale, Functional scale (Motor Assessment Scale)</measure>
    <time_frame>weeks 4, 8, 12 &amp; 24</time_frame>
  </secondary_outcome>
  <secondary_outcome>
    <measure>Voluntary and passive joint range of motion goniometer assessment</measure>
    <time_frame>weeks 4, 8, 12 &amp; 24</time_frame>
  </secondary_outcome>
  <secondary_outcome>
    <measure>Pain Assessment using visual analogue scale for pain</measure>
    <time_frame>weeks 4, 8, 12 &amp; 24</time_frame>
  </secondary_outcome>
