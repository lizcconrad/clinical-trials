  <brief_title>A Study for Prevention of Kidney Disease in Diabetic Patients (BENEDICT)</brief_title>
  <acronym>BENEDICT</acronym>
  <official_title>A Two-Phase Study for Primary and Secondary Prevention of Diabetic Nephropathy by Combined ACE Inhibition and Calcium Channel Blockade (BENEDICT)</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Abbott</agency>
      <agency_class>Industry</agency_class>
