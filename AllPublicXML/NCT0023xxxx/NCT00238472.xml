  <primary_outcome>
    <measure>Change from baseline in postprandial glomerular filtration rate at 12 weeks</measure>
  </primary_outcome>
  <secondary_outcome>
    <measure>Change from baseline in fasting morning glomerular filtration rate at 12 weeks</measure>
  </secondary_outcome>
  <secondary_outcome>
    <measure>Change from baseline in postprandial renal plasma flow at 12 weeks</measure>
  </secondary_outcome>
  <secondary_outcome>
    <measure>Change from baseline in fasting morning renal plasma flow at 12 weeks</measure>
  </secondary_outcome>
  <secondary_outcome>
    <measure>Change from baseline in adjusted 2-hour postprandial glucose at 12 weeks</measure>
  </secondary_outcome>
  <secondary_outcome>
    <measure>Change in insulin AUC (0-240 minutes) at 12 weeks</measure>
  </secondary_outcome>
  <enrollment>24</enrollment>
  <condition>Diabetes Mellitus, Type 2</condition>
