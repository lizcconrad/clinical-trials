  <brief_title>Audiological Evaluation of Anesthetists</brief_title>
  <official_title>the Effects of Noise in Operating Rooms on Anesthetists Hearing</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Assiut University</agency>
      <agency_class>Other</agency_class>
    </lead_sponsor>
  </sponsors>
