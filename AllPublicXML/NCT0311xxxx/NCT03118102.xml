    <is_fda_regulated_device>No</is_fda_regulated_device>
  </oversight_info>
  <brief_summary>
    <textblock>
      The investigators aim to investigate the effect of operating room noise on anesthetist
      hearing
    </textblock>
  </brief_summary>
  <overall_status>Completed</overall_status>
  <start_date type="Actual">April 10, 2017</start_date>
  <completion_date type="Actual">January 8, 2018</completion_date>
  <primary_completion_date type="Actual">January 8, 2018</primary_completion_date>
  <study_type>Observational</study_type>
  <has_expanded_access>No</has_expanded_access>
  <study_design_info>
    <observational_model>Case-Control</observational_model>
    <time_perspective>Prospective</time_perspective>
  </study_design_info>
  <primary_outcome>
    <measure>Extended high frequency audiometry</measure>
    <time_frame>20 minutes</time_frame>
    <description>pure tone audiometry in the frequency range from 250Hz-20,000Hz</description>
  </primary_outcome>
  <secondary_outcome>
    <measure>Transient Evoked Otoacoustic Emission</measure>
    <time_frame>10 minutes</time_frame>
    <description>stimulus induced cochlear echos in the frequency range from 1000-4000 Hz</description>
  </secondary_outcome>
  <number_of_groups>2</number_of_groups>
  <enrollment type="Actual">60</enrollment>
  <condition>Hearing Loss</condition>
  <arm_group>
    <arm_group_label>anesthetist group</arm_group_label>
    <description>anesthetist doctor who subjected to noise in operating rooms</description>
  </arm_group>
  <arm_group>
    <arm_group_label>control group</arm_group_label>
    <description>doctors in the same hospital who are not subjected to noise in operating rooms</description>
  </arm_group>
  <eligibility>
    <study_pop>
      <textblock>
        anesthetist doctor who subject to noise in operating rooms
      </textblock>
    </study_pop>
    <sampling_method>Probability Sample</sampling_method>
    <criteria>
      <textblock>
        Inclusion Criteria:

          -  anesthetist doctor and non-anesthetist doctor less than 40 years

        Exclusion Criteria:

          -  doctors above 40 years
      </textblock>
    </criteria>
    <gender>All</gender>
    <minimum_age>28 Years</minimum_age>
    <maximum_age>40 Years</maximum_age>
    <healthy_volunteers>Accepts Healthy Volunteers</healthy_volunteers>
  </eligibility>
