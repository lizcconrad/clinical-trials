  <primary_outcome>
    <measure>Change from baseline in mean number of nocturnal voids</measure>
    <time_frame>4 weeks</time_frame>
    <description>Assessed by the voiding diary</description>
  </primary_outcome>
  <secondary_outcome>
    <measure>Change from base line in mean nocturnal urine volume</measure>
    <time_frame>4 weeks</time_frame>
    <description>Assessed by the voiding diary</description>
  </secondary_outcome>
  <secondary_outcome>
    <measure>Change from base line in mean time to first awakening to void</measure>
    <time_frame>4 weeks</time_frame>
