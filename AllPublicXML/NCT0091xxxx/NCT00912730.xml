  <brief_title>A Pilot Study of Intraoperative Gamma Camera Imaging During Sentinel Node Biopsy for Melanoma</brief_title>
  <acronym>MEL50</acronym>
  <official_title>A Pilot Study of Intraoperative Gamma Camera Imaging During Sentinel Node Biopsy for Melanoma</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>University of Virginia</agency>
      <agency_class>Other</agency_class>
    </lead_sponsor>
  </sponsors>
