  <brief_title>Non Invasive Arrhythmia Detection in Hospital Settings</brief_title>
  <acronym>EVE</acronym>
  <official_title>Evaluating Ventricular Events With Adherent Patient Monitoring Study</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Corventis, Inc.</agency>
