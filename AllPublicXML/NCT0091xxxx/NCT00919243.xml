  <brief_title>Prednisone for Heart Failure Patients With Hyperuricemia</brief_title>
  <official_title>Prednisone Versus Allopurinol for Symptomatic Heart Failure Patients With Hyperuricemia</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Hebei Medical University</agency>
