  <oversight_info>
    <has_dmc>No</has_dmc>
  </oversight_info>
  <brief_summary>
    <textblock>
      The purpose of this study is to evaluate the effects of an intensive Cardiac rehabilitation
      program on glucose metabolism of non-diabetic coronary artery disease patients.
    </textblock>
  </brief_summary>
  <overall_status>Completed</overall_status>
  <start_date>January 2006</start_date>
  <completion_date type="Actual">January 2007</completion_date>
  <study_type>Observational</study_type>
  <has_expanded_access>No</has_expanded_access>
  <study_design_info>
    <observational_model>Case Control</observational_model>
    <time_perspective>Prospective</time_perspective>
  </study_design_info>
  <primary_outcome>
    <measure>to evaluate the effective prevalence of glucose metabolism alterations in patients with chronic ischemic heart disease and stable chronic heart failure, without previous diagnosis of diabetes mellitus</measure>
  </primary_outcome>
  <secondary_outcome>
    <measure>to evaluate the potential beneficial effect of physical training on the glycometabolic state</measure>
  </secondary_outcome>
  <number_of_groups>1</number_of_groups>
  <condition>Coronary Artery Disease</condition>
  <arm_group>
    <arm_group_label>physical training</arm_group_label>
  </arm_group>
  <intervention>
    <intervention_type>Behavioral</intervention_type>
    <intervention_name>physical training</intervention_name>
    <description>intensive cardiac rehabilitation program</description>
    <arm_group_label>physical training</arm_group_label>
  </intervention>
  <eligibility>
    <study_pop>
      <textblock>
        non diabetes patients with coronary artery disease
      </textblock>
    </study_pop>
    <sampling_method>Probability Sample</sampling_method>
    <criteria>
      <textblock>
        Inclusion Criteria:

          -  patients admitted to undergo a cycle of in-hospital cardiac rehabilitation

          -  patients without a previous diagnosis of diabetes mellitus

          -  patients able to start physical training within three days from admission

          -  fasting blood glucose at admission &lt; 126 mg/dl

        Exclusion Criteria:

          -  previous diagnosis of diabetes mellitus

          -  acute coronary events or acute heart failure in the past three months

          -  physical disabilities that contraindicate training
      </textblock>
    </criteria>
    <gender>All</gender>
    <minimum_age>N/A</minimum_age>
    <maximum_age>N/A</maximum_age>
  </eligibility>
