  <brief_summary>
    <textblock>
      This is a prospective, multi-center, non-randomized study to evaluate performance of an
      external monitor for heart failure patients
    </textblock>
  </brief_summary>
  <detailed_description>
    <textblock>
      External monitoring of heart failure patients with the AVIVO System.
    </textblock>
  </detailed_description>
  <overall_status>Completed</overall_status>
  <start_date>March 2009</start_date>
  <completion_date type="Actual">December 2009</completion_date>
  <primary_completion_date type="Actual">December 2009</primary_completion_date>
  <study_type>Observational</study_type>
  <has_expanded_access>No</has_expanded_access>
