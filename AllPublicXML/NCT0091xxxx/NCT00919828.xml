    <time_perspective>Prospective</time_perspective>
  </study_design_info>
  <enrollment type="Anticipated">60</enrollment>
  <condition>Heart Failure</condition>
  <intervention>
    <intervention_type>Device</intervention_type>
    <intervention_name>Avivo System</intervention_name>
    <description>Non invasive external monitoring device</description>
    <other_name>external monitoring systems</other_name>
  </intervention>
  <eligibility>
    <study_pop>
      <textblock>
        Heart failure patients
      </textblock>
    </study_pop>
    <sampling_method>Non-Probability Sample</sampling_method>
    <criteria>
      <textblock>
        Inclusion Criteria:

          -  Is female or male, 18 years of age or older

          -  Has an ejection fraction of 40% reported within 12 months of enrollment

          -  Having acute decompensated heart failure and receiving treatment for fluid overload

        Exclusion Criteria:

          -  Is participating in another clinical study that may confound the results of this study
      </textblock>
    </criteria>
    <gender>All</gender>
    <minimum_age>18 Years</minimum_age>
    <maximum_age>N/A</maximum_age>
    <healthy_volunteers>No</healthy_volunteers>
  </eligibility>
