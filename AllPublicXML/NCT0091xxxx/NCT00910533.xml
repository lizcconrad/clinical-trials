  <intervention>
    <intervention_type>Drug</intervention_type>
    <intervention_name>ceftriaxone</intervention_name>
    <description>ceftriaxone 2 g od i.v. for 14 days</description>
    <arm_group_label>Early Lyme neuroborreliosis patients</arm_group_label>
  </intervention>
  <eligibility>
    <criteria>
      <textblock>
        Inclusion Criteria:

          -  erythema migrans within 4 months before neurologic involvement and pleocytosis in
             patients &gt;15 years old

        Exclusion Criteria:

          -  pregnancy

          -  lactation

          -  history of adverse reaction to a beta-lactam antibiotic
      </textblock>
    </criteria>
    <gender>All</gender>
    <minimum_age>15 Years</minimum_age>
