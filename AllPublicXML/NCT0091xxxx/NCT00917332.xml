  <primary_outcome>
    <measure>rating of pain experienced during childbirth on pain VAS</measure>
    <time_frame>one time - during hospitalization after childbirth</time_frame>
  </primary_outcome>
  <secondary_outcome>
    <measure>rate and the starting time of receiving regional anesthesia (epidural)</measure>
    <time_frame>at childbirth</time_frame>
  </secondary_outcome>
