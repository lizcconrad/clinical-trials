  <primary_outcome>
    <measure>clean intermittent self-catheterization</measure>
    <time_frame>three days</time_frame>
    <description>necessity and duration of clean intermittent self-catheterization after three days</description>
  </primary_outcome>
  <number_of_arms>2</number_of_arms>
  <enrollment type="Actual">111</enrollment>
  <condition>Uterine Cervical Neoplasms</condition>
  <arm_group>
    <arm_group_label>Bladder training group</arm_group_label>
    <arm_group_type>Experimental</arm_group_type>
    <description>The patients of this group were submitted to passive vesical gymnastic during the second and third postoperative days, throughout the closure of the catheter for 3 h and open it for 15 min all day long.</description>
  </arm_group>
  <arm_group>
    <arm_group_label>No bladder training group</arm_group_label>
    <arm_group_type>Experimental</arm_group_type>
    <description>The patients of this group were not submitted to passive vesical gymnastic during the second and third postoperative days</description>
  </arm_group>
