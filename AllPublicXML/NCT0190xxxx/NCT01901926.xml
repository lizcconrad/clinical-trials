  <brief_title>Periodontal Treatment and Glycemic Control</brief_title>
  <official_title>Impact of Non Surgical Periodontal Treatment on Glycemic Control in Type II Diabetics</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Pakistan Institute of Medical Sciences</agency>
      <agency_class>Other</agency_class>
