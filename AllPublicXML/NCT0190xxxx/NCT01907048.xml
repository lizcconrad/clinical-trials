  <primary_outcome>
    <measure>Knowledge and understanding among physicians regarding key safety information contained in the prescriber guide assessed by web-based questionnaire</measure>
    <time_frame>Up to 18 months</time_frame>
  </primary_outcome>
  <primary_outcome>
    <measure>Knowledge and understanding of patients regarding the key safety information contained in the patient alert card assessed by paper-based questionnaire</measure>
    <time_frame>Up to 18 months</time_frame>
  </primary_outcome>
