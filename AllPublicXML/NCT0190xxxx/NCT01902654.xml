  <brief_title>Osteoarthritis Cardiovascular Risk Factors</brief_title>
  <official_title>Prevalence of Cardiovascular Risk Factors Between Patients With Knee or Hand Osteoarthritis</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Hospital Parc Taulí, Sabadell</agency>
      <agency_class>Other</agency_class>
    </lead_sponsor>
  </sponsors>
