  <brief_title>Influence of Adipocytokines in Osteoarthritis</brief_title>
  <official_title>Adipocytokines Influence on Clinical and Ultrasonographic Inflammatory Activity in Patients With Knee Osteoarthritis</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Hospital Parc Taulí, Sabadell</agency>
      <agency_class>Other</agency_class>
    </lead_sponsor>
