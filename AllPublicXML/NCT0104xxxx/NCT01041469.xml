  <condition>Down Syndrome With and Without Auto Immune Abnormalities</condition>
  <arm_group>
    <arm_group_label>with abnormalities</arm_group_label>
    <description>Down syndrome patients presenting with at least one sign of auto immune abnormality</description>
  </arm_group>
  <arm_group>
    <arm_group_label>without abnormality</arm_group_label>
    <description>Down syndrome patients without any sign of recognized auto immune condition</description>
  </arm_group>
  <biospec_retention>Samples With DNA</biospec_retention>
  <biospec_descr>
    <textblock>
