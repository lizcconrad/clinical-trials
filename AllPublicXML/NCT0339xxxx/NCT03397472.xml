  <primary_outcome>
    <measure>insomnia efficiency rate</measure>
    <time_frame>5 weeks</time_frame>
    <description>use the insomnia severity index,less than nine points are considered as effective treatment and insomnia efficiency rate is defined as dividing all the patients by those effective treatment</description>
  </primary_outcome>
  <secondary_outcome>
    <measure>Total sleep time</measure>
    <time_frame>5 weeks</time_frame>
    <description>total sleep time would be performed by sleep diary</description>
  </secondary_outcome>
  <secondary_outcome>
    <measure>Awakening after sleep</measure>
    <time_frame>5 weeks</time_frame>
    <description>awakening after sleep would be performed by Pittsburgh sleep quality index(PSQI)</description>
  </secondary_outcome>
  <number_of_groups>2</number_of_groups>
  <enrollment type="Anticipated">120</enrollment>
  <condition>Insomnia</condition>
