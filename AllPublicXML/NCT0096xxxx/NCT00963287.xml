  <brief_title>Trial of Chinese Prescription on Ulcerative Colitis</brief_title>
  <sponsors>
    <lead_sponsor>
      <agency>Shanghai University of Traditional Chinese Medicine</agency>
      <agency_class>Other</agency_class>
