  <enrollment type="Actual">200</enrollment>
  <condition>Ulcerative Colitis</condition>
  <arm_group>
    <arm_group_label>bascial prescription</arm_group_label>
    <arm_group_type>Experimental</arm_group_type>
    <description>Decoction ,two times a day,one bag of decoction one time</description>
  </arm_group>
  <arm_group>
    <arm_group_label>low does of bascial decoction</arm_group_label>
    <arm_group_type>Placebo Comparator</arm_group_type>
    <description>Decoction ,two times a day, one bag decoction of one time</description>
  </arm_group>
  <intervention>
    <intervention_type>Drug</intervention_type>
    <intervention_name>bascial prescription plus or minus herbs depend on symptoms</intervention_name>
    <description>Decoction ,two times a day</description>
    <arm_group_label>bascial prescription</arm_group_label>
    <arm_group_label>low does of bascial decoction</arm_group_label>
  </intervention>
  <eligibility>
    <criteria>
      <textblock>
        Inclusion Criteria:

          -  Clinical diagnosis of ulcerative colitis

          -  Male of female patients between 18-65 years old

          -  Written informed consent

        Exclusion Criteria:

          -  Combine with malignant pathology on epithelial dysplasia of mucosa

          -  Combined with severe heart, gallbladder, kidney, endocrine system, hemopoietic system
             or nervous system disease.

          -  Pregnancy or breast feeding women, or unwilling to have contraception.
      </textblock>
    </criteria>
    <gender>All</gender>
    <minimum_age>18 Years</minimum_age>
    <maximum_age>65 Years</maximum_age>
    <healthy_volunteers>No</healthy_volunteers>
  </eligibility>
