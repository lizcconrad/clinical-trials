  </study_design_info>
  <primary_outcome>
    <measure>Histopathological examination,enteroscopy,blood test,symptoms ,pulse tracings,tongue demonstration</measure>
    <time_frame>8 weeks</time_frame>
  </primary_outcome>
  <secondary_outcome>
    <measure>Indicates of liver and renal function</measure>
    <time_frame>8 weeks</time_frame>
  </secondary_outcome>
