  <eligibility>
    <study_pop>
      <textblock>
        subjects with spina bifid referred to primary care clinic
      </textblock>
    </study_pop>
    <sampling_method>Non-Probability Sample</sampling_method>
    <criteria>
      <textblock>
        Inclusion Criteria:

          -  recurrence of clinic control in Unit for Spina Bifid in Parma

          -  14-21 years old

        Exclusion Criteria:

          -  subjects unable to understand the items of the questionnaire (mental retardation and
             need for help at school )

          -  subjects without any caregiver
      </textblock>
    </criteria>
    <gender>All</gender>
    <minimum_age>14 Years</minimum_age>
    <maximum_age>21 Years</maximum_age>
