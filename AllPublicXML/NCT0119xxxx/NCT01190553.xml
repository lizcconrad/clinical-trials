  <primary_outcome>
    <measure>Improvement of UPDRS scores after 6 months of treatment</measure>
    <time_frame>6 months</time_frame>
  </primary_outcome>
  <primary_outcome>
    <measure>Improvement of dyskinesias score.</measure>
    <time_frame>6 months</time_frame>
