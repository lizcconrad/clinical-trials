  <brief_title>Classification and Longitudinal Follow-up of Common Melanocytic Nevi With in Vivo Reflectance Confocal Microscopy</brief_title>
  <sponsors>
    <lead_sponsor>
      <agency>Sheba Medical Center</agency>
      <agency_class>Other</agency_class>
    </lead_sponsor>
  </sponsors>
