    <observational_model>Case-Only</observational_model>
    <time_perspective>Prospective</time_perspective>
  </study_design_info>
  <primary_outcome>
    <measure>Treatment volume</measure>
    <time_frame>1 year average</time_frame>
    <description>To assess the difference in treatment volume for radiation planning in gliomas as calculated using 1.5T versus 3T magnets</description>
  </primary_outcome>
  <number_of_groups>1</number_of_groups>
  <enrollment type="Actual">24</enrollment>
  <condition>High Grade Glioma</condition>
  <arm_group>
