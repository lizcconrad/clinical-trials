  <brief_title>Effect of Creatine and L-Arginine on Endothelial Function</brief_title>
  <official_title>Effect of Creatine and L-Arginine on Endothelial Function in Patients With Coronary Artery Disease</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Boston University</agency>
      <agency_class>Other</agency_class>
    </lead_sponsor>
  </sponsors>
