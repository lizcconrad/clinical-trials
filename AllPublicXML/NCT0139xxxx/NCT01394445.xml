  <brief_title>Pilot Study of Physostigmine-Enhanced Opioid Analgesia</brief_title>
  <acronym>PHANOS</acronym>
  <official_title>Influence of Physostigmine on Patient-Controlled Analgesia</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Medical University of Graz</agency>
      <agency_class>Other</agency_class>
    </lead_sponsor>
  </sponsors>
