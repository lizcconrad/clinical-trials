  <brief_title>Serial BNP Testing for Heart Failure Management</brief_title>
  <acronym>USE-BNP</acronym>
  <official_title>Utilizing, Studying, Evaluating BNP for Monitoring in Patients With Heart Failure (USE-BNP)</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Siemens Healthcare Diagnostics Inc</agency>
      <agency_class>Industry</agency_class>
    </lead_sponsor>
  </sponsors>
