  </study_design_info>
  <primary_outcome>
    <measure>composite endpoint of all cause mortality, hospitalization due to worsening heart failure and administration of IV drug therapy for worsening heart failure.</measure>
    <time_frame>12 months</time_frame>
  </primary_outcome>
  <secondary_outcome>
    <measure>NYHA classifications in the two treatment groups</measure>
    <time_frame>12 months</time_frame>
  </secondary_outcome>
  <secondary_outcome>
    <measure>Quality of life assessments of two treatment groups</measure>
    <time_frame>12 months</time_frame>
  </secondary_outcome>
  <secondary_outcome>
    <measure>change in therapy based on BNP usage</measure>
    <time_frame>12 months</time_frame>
  </secondary_outcome>
  <secondary_outcome>
    <measure>number of serious adverse events for the two groups</measure>
    <time_frame>12 months</time_frame>
  </secondary_outcome>
