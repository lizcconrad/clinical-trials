  <primary_outcome>
    <measure>Self-reported smoking abstinence verified by both expired-air carbon monoxide and salivary cotinine.</measure>
    <time_frame>12 weeks</time_frame>
  </primary_outcome>
  <secondary_outcome>
    <measure>Acceptability of the Nicotine Nasal Spray by Adolescents.</measure>
    <time_frame>8 weeks</time_frame>
  </secondary_outcome>
