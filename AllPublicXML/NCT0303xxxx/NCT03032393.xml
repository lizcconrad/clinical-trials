  <primary_outcome>
    <measure>Timed up and go test</measure>
    <time_frame>3 minutes</time_frame>
    <description>Patients wear their regular footwear and can use a walking aid if needed. Begin by having the patient sit back in a standard arm chair and identify a line 3 meters or 10 feet away on the floor.</description>
  </primary_outcome>
  <number_of_arms>2</number_of_arms>
  <enrollment type="Anticipated">30</enrollment>
