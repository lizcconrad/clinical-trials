  <arm_group>
    <arm_group_label>LDV/SOF for 8 weeks</arm_group_label>
    <arm_group_type>Experimental</arm_group_type>
    <description>Treatment-naive participants with genotype 1 without cirrhosis will receive LDV/SOF for 8 weeks</description>
  </arm_group>
  <arm_group>
    <arm_group_label>LDV/SOF for 12 weeks</arm_group_label>
    <arm_group_type>Experimental</arm_group_type>
