  <brief_title>Is Caffeine an Environmental Modifier in Huntington's Disease?</brief_title>
  <acronym>CrEAM-HD</acronym>
  <official_title>Is Caffeine an Environmental Modifier in Huntington's Disease?</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>University Hospital, Lille</agency>
      <agency_class>Other</agency_class>
    </lead_sponsor>
  </sponsors>
