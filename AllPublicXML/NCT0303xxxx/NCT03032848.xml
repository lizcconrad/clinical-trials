  <primary_outcome>
    <measure>Evaluate the histopathological effects on endometrium after each treatment</measure>
    <time_frame>48 days</time_frame>
    <description>Compare the histopathological results after treatment on each group and among each other</description>
  </primary_outcome>
  <primary_outcome>
    <measure>Compare the endometrial thickness measured by ultrassound after each treatment</measure>
    <time_frame>48 days</time_frame>
    <description>Compare the endometrial ultrasound measurement before and after treatment in each group, and among each other</description>
  </primary_outcome>
  <secondary_outcome>
