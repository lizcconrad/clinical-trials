    <masking>Double (Participant, Investigator)</masking>
  </study_design_info>
  <primary_outcome>
    <measure>Change in Forced Expiratory Volume in one second (FEV1) as measured by Spirometry</measure>
    <time_frame>28 days</time_frame>
  </primary_outcome>
  <secondary_outcome>
    <measure>FEV1 assessments at various timepoints including time of peak drug concentration</measure>
    <time_frame>28 days</time_frame>
  </secondary_outcome>
  <secondary_outcome>
    <measure>Measure the change in exhaled Nitric Oxide (FeNO)</measure>
    <time_frame>28 days</time_frame>
  </secondary_outcome>
  <secondary_outcome>
    <measure>Assessment of the pharmacokinetics of multiple doses of QAV680 in patients with mild to moderate asthma.</measure>
    <time_frame>28 days</time_frame>
  </secondary_outcome>
  <secondary_outcome>
    <measure>Total serum IgE levels</measure>
    <time_frame>28 days</time_frame>
  </secondary_outcome>
  <secondary_outcome>
    <measure>Change in daily variability in the morning and evening Peak Expiratory Flow Rate (PEFR) from Baseline.</measure>
    <time_frame>28 days</time_frame>
  </secondary_outcome>
