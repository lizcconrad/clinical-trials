    <description>300 mg Vandetanib once daily dosing</description>
  </arm_group>
  <intervention>
    <intervention_type>Drug</intervention_type>
    <intervention_name>Vandetanib</intervention_name>
    <description>100 mg every other day, 100mg once daily</description>
    <arm_group_label>100 mg Vandetanib eod</arm_group_label>
    <arm_group_label>100 mg Vandetanib od</arm_group_label>
    <other_name>ZD6474</other_name>
    <other_name>ZACTIMA™</other_name>
  </intervention>
  <intervention>
    <intervention_type>Drug</intervention_type>
    <intervention_name>Vandetanib 300 mg</intervention_name>
