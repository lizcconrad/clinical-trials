  <brief_summary>
    <textblock>
      Observational, retrospective and perspective study with acute and chronic endpoints
    </textblock>
  </brief_summary>
  <detailed_description>
    <textblock>
      Study to assess the benefit from Multipoint Pacing (MPP) in presence of RV-to-LV delay&lt;80ms
      in terms of rate of CRT responder patients at 6 Months from CRT-D system implantation
    </textblock>
  </detailed_description>
  <overall_status>Recruiting</overall_status>
  <start_date type="Actual">January 2017</start_date>
  <completion_date type="Anticipated">July 2019</completion_date>
  <primary_completion_date type="Anticipated">December 2018</primary_completion_date>
  <study_type>Observational</study_type>
  <has_expanded_access>No</has_expanded_access>
  <study_design_info>
    <observational_model>Cohort</observational_model>
    <time_perspective>Prospective</time_perspective>
  </study_design_info>
  <primary_outcome>
    <measure>Rate of CRT responder patients</measure>
    <time_frame>6 Months</time_frame>
    <description>A patient is considered &quot;responder&quot; if Left Ventricular End-Systolic Volume at 6 Months from CRT-D system implantation is reduced at least of 15% towards the baseline value</description>
  </primary_outcome>
  <number_of_groups>2</number_of_groups>
  <enrollment type="Anticipated">248</enrollment>
  <condition>Cardiac Resynchronization Therapy</condition>
  <arm_group>
    <arm_group_label>Group1-CRT</arm_group_label>
    <description>Patients with RV-to-LV delay≥80ms, CRT standard programming (single-point)</description>
  </arm_group>
  <arm_group>
    <arm_group_label>Group2-MPP</arm_group_label>
    <description>Patients with RV-to-LV delay&lt;80ms, CRT programming with MPP (multi-point)</description>
  </arm_group>
  <eligibility>
    <study_pop>
      <textblock>
        Patients with standard indication to CRT-D system implantation
      </textblock>
    </study_pop>
    <sampling_method>Probability Sample</sampling_method>
    <criteria>
      <textblock>
        Inclusion Criteria:

          -  Indication to CRT-D system implantation according to current guidelines or CRT-D
             system already implanted in patient scheduled to CRT-D system implantation according
             to current guidelines

        Exclusion Criteria:

          -  Right Bundle Branch Block

          -  Severe Irreversible Renal Failure (eGFR&lt;30)

          -  NYHA IV

          -  Atrio-Ventricular Block above the 1st grade

          -  Prosthetic Valves

          -  Atrial Fibrillation at implantation
      </textblock>
    </criteria>
    <gender>All</gender>
    <minimum_age>18 Years</minimum_age>
    <maximum_age>85 Years</maximum_age>
    <healthy_volunteers>No</healthy_volunteers>
  </eligibility>
