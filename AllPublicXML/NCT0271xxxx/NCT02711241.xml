  <brief_title>Optimal Analgesia in Acute Gastroenteritis</brief_title>
  <official_title>Optimal Analgesia in Acute Gastroenteritis in Emergency Department Setting: Dipyrone Versus Papaverine</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Hadassah Medical Organization</agency>
      <agency_class>Other</agency_class>
