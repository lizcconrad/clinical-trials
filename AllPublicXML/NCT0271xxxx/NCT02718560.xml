  <brief_title>Handwriting Rehabilitation in Parkinson Disease</brief_title>
  <acronym>HRPD</acronym>
  <official_title>Effectiveness of Intensive Handwriting Rehabilitation in Subjects With Parkinson's Disease</official_title>
  <sponsors>
    <lead_sponsor>
