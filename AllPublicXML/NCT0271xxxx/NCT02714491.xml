  <primary_outcome>
    <measure>change in Coma Recovery Scale revised score</measure>
    <time_frame>0 and 35 days</time_frame>
  </primary_outcome>
  <secondary_outcome>
    <measure>change in Levels of Cognitive Functioning score</measure>
    <time_frame>0 and 35 days</time_frame>
  </secondary_outcome>
  <secondary_outcome>
