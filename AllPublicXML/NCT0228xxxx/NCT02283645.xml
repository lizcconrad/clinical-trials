  <primary_outcome>
    <measure>The change of global photographic assessment after 20 weeks from baseline</measure>
    <time_frame>baseline and 20 weeks</time_frame>
  </primary_outcome>
  <secondary_outcome>
    <measure>The change in number of hairs after 20 weeks from baseline</measure>
    <time_frame>baseline and 20 weeks</time_frame>
  </secondary_outcome>
