  <brief_title>Stress-relief Management for Treatment of Late Complications in Type 2 Diabetes</brief_title>
  <acronym>HEIDIS</acronym>
  <official_title>Psychosoziale Intervention Zur Reduktion Diabetischer Spätschäden Bei Diabetes Mellitus Typ 2</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Heidelberg University</agency>
