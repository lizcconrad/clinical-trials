  <brief_title>The Effectiveness of Influenza Vaccine Among Health Care Workers in a Hospital Setting.</brief_title>
  <sponsors>
    <lead_sponsor>
      <agency>HaEmek Medical Center, Israel</agency>
      <agency_class>Other</agency_class>
    </lead_sponsor>
  </sponsors>
