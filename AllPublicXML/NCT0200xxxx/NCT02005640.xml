  <has_expanded_access>No</has_expanded_access>
  <study_design_info>
    <time_perspective>Retrospective</time_perspective>
  </study_design_info>
  <primary_outcome>
    <measure>Rate of no/ mild paravalvular leakage before and after introduction of routing preoperative MSCT</measure>
    <time_frame>1 week to 3 months post-TAVI</time_frame>
  </primary_outcome>
  <primary_outcome>
    <measure>MSCT vs. echocardiographic aortic valve sizing before TAVI</measure>
    <time_frame>time of TAVI</time_frame>
  </primary_outcome>
  <primary_outcome>
    <measure>THV size before and after introduction of routing preoperative MSCT</measure>
    <time_frame>time of TAVI</time_frame>
  </primary_outcome>
  <number_of_groups>2</number_of_groups>
  <enrollment type="Actual">150</enrollment>
  <condition>Aortic Stenosis</condition>
