  <primary_outcome>
    <measure>Horizontal probing depth</measure>
    <time_frame>one year</time_frame>
    <description>Measured with a periodontal probe (mm). Ideal if 0.</description>
  </primary_outcome>
  <primary_outcome>
    <measure>Tomographic Bone filling</measure>
    <time_frame>One year</time_frame>
    <description>Complete filling of furcation defect in tomographic images. Ideal is a radiopaque image similar to neighbor bone.</description>
  </primary_outcome>
  <secondary_outcome>
    <measure>Probing depth</measure>
    <time_frame>one year</time_frame>
    <description>Distance from gingival margin to bottom of sulcus. Measured with a periodontal probe (mm). Ideal if &lt; 2 mm.</description>
  </secondary_outcome>
  <secondary_outcome>
    <measure>Clinical Attachment Level</measure>
    <time_frame>one year</time_frame>
    <description>Distance from cemento-enamel junction to bottom of sulcus. Measured with a periodontal probe (mm). Ideal if &lt; 2 mm.</description>
  </secondary_outcome>
  <secondary_outcome>
    <measure>Bleeding on probing</measure>
    <time_frame>One year</time_frame>
    <description>Visual confirmation of bleeding after probing. Ideal if not bleeding.</description>
  </secondary_outcome>
