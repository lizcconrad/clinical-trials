  <primary_outcome>
    <measure>Change from baseline in urinary albumin creatinine ratio after 24 weeks</measure>
  </primary_outcome>
  <secondary_outcome>
    <measure>Equal/more than 50% reduction from baseline in urinary albumin creatinine ratio after 24 weeks</measure>
  </secondary_outcome>
  <secondary_outcome>
    <measure>Change from baseline in urinary albumin excretion rate after 24 weeks</measure>
  </secondary_outcome>
