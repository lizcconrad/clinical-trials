  <primary_outcome>
    <measure>Safety and tolerability, as measured by clinical adverse events and laboratory assessments</measure>
    <time_frame>up to Study Day 16 (14 days after the last PPI-461 dose)</time_frame>
  </primary_outcome>
  <primary_outcome>
    <measure>Antiviral effects of PPI-461, as measured by HCV RNA levels</measure>
    <time_frame>Up to Study Day 16 (14 days after the last PPI-461 dose)</time_frame>
  </primary_outcome>
  <primary_outcome>
    <measure>PPI-461 pharmacokinetics as measured by plasma PPI-461 concentrations</measure>
    <time_frame>Up to Study Day 10 (8 days after the last PPI-461 dose)</time_frame>
  </primary_outcome>
