  <brief_summary>
    <textblock>
      This is a double blind observational analysis of changes in heart rate variability using PD2i
      analyser in competitive athletes during strenuous exercise and competition.
    </textblock>
  </brief_summary>
  <overall_status>Completed</overall_status>
  <start_date>October 2010</start_date>
  <completion_date type="Actual">July 2011</completion_date>
  <primary_completion_date type="Actual">November 2010</primary_completion_date>
  <study_type>Observational</study_type>
