  <primary_outcome>
    <measure>Critical illness</measure>
    <time_frame>48 hours</time_frame>
    <description>The investigators have defined a critically ill patient as a patient who dies within 48 hours of arrival at the emergency department or who is admitted to ICU within 48 hours of arrival at the emergency department</description>
  </primary_outcome>
  <enrollment type="Actual">300</enrollment>
