  </arm_group>
  <intervention>
    <intervention_type>Diagnostic Test</intervention_type>
    <intervention_name>EuroQol five dimensions questionaire (EQ-5D)</intervention_name>
    <description>Testing quality of life.</description>
    <arm_group_label>SPG4 patients</arm_group_label>
    <arm_group_label>Healthy controls</arm_group_label>
  </intervention>
  <intervention>
    <intervention_type>Diagnostic Test</intervention_type>
    <intervention_name>Modified Fatigue Impact Scale (MFI)</intervention_name>
