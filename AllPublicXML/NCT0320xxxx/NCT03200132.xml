  </study_design_info>
  <primary_outcome>
    <measure>Target-to-background ratio (TBR)</measure>
    <time_frame>15-20 minutes</time_frame>
  </primary_outcome>
  <secondary_outcome>
    <measure>Signal-to-noise ratio (SNR)</measure>
    <time_frame>15-20 minutes</time_frame>
  </secondary_outcome>
  <enrollment type="Anticipated">15</enrollment>
  <condition>Cardiac Imaging</condition>
  <intervention>
    <intervention_type>Diagnostic Test</intervention_type>
    <intervention_name>Cardiac PET/MRI</intervention_name>
    <description>For patients undergoing 18-Fluor- fluorodeoxyglucose (18F-FDG) PET/MRI or PET/Computed Tomography (CT), additional cardiac PET/MRI scans are acquired.</description>
  </intervention>
  <eligibility>
    <study_pop>
      <textblock>
        All patients receiving 18F-FDG for clinical diagnostic PET/MRI or PET/CT.
      </textblock>
    </study_pop>
    <sampling_method>Non-Probability Sample</sampling_method>
    <criteria>
      <textblock>
        Inclusion Criteria:

          -  18F-FDG injection for clinical diagnostic PET/MRI or PET/CT

        Exclusion Criteria:

          -  Diet-suppressed myocardial uptake of 18F-FDG

          -  General exclusion criteria for MRI (i.e. metallic implants, claustrophobia, pregnancy,
             etc.)

          -  Not willing to be informed about incidental findings
      </textblock>
    </criteria>
    <gender>All</gender>
    <minimum_age>18 Years</minimum_age>
    <maximum_age>N/A</maximum_age>
    <healthy_volunteers>No</healthy_volunteers>
  </eligibility>
