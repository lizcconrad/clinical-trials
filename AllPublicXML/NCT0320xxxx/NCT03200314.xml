  <primary_outcome>
    <measure>Recirculation of vvECMO blood flow</measure>
    <time_frame>Once within first week after ICU admission during 4 hours</time_frame>
    <description>Amount of ECMO blood flow recirculating through the vvECMO circuit</description>
  </primary_outcome>
  <secondary_outcome>
    <measure>Reduction of vvECMO blood flow</measure>
    <time_frame>Once within first week after ICU admission during 4 hours</time_frame>
    <description>Reduction of vvECMO blood flow if a significant recirculation can be measured</description>
  </secondary_outcome>
  <secondary_outcome>
    <measure>Arterial blood oxygen content after reduction of vvECMO blood flow</measure>
    <time_frame>Once within first week after ICU admission during 4 hours</time_frame>
    <description>Change in arterial blood oygen content after reduction of vvECMO blood flow</description>
  </secondary_outcome>
