  </other_outcome>
  <number_of_arms>2</number_of_arms>
  <enrollment type="Actual">80</enrollment>
  <condition>Chronic Pain</condition>
  <arm_group>
    <arm_group_label>Physician telephone consultation</arm_group_label>
    <arm_group_type>Experimental</arm_group_type>
    <description>Received direct telephone consultation with pain physician about index patient</description>
  </arm_group>
  <arm_group>
    <arm_group_label>Usual family physician care</arm_group_label>
