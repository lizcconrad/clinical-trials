  <brief_title>Standard Telephone Consultation for Pain</brief_title>
  <acronym>STC</acronym>
  <official_title>Physician to Physician Telephone Consultation for Chronic Pain Patients: a Pragmatic Randomized Trial</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>University of Calgary</agency>
      <agency_class>Other</agency_class>
    </lead_sponsor>
  </sponsors>
