  <brief_title>Subarachnoid or Infiltration for Hemorrhoidectomy</brief_title>
  <official_title>Comparative Study of the Analgesic Effect of Subarachnoid or Infiltration for Hemorrhoidectomy</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Federal University of São Paulo</agency>
      <agency_class>Other</agency_class>
    </lead_sponsor>
  </sponsors>
