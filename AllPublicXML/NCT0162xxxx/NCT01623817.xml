  <brief_title>Effectiveness of Vancomycin Loading Therapy</brief_title>
  <official_title>Effectiveness of Vancomycin Loading Therapy</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Samsung Medical Center</agency>
