  </arm_group>
  <intervention>
    <intervention_type>Drug</intervention_type>
    <intervention_name>bupropion + nicotine gum</intervention_name>
    <description>150 mg bupropion twice daily plus 4 mg nicotine gum as needed (up to 12 pcs/day)</description>
    <arm_group_label>Active bupropion-Active gum</arm_group_label>
  </intervention>
  <intervention>
    <intervention_type>Drug</intervention_type>
