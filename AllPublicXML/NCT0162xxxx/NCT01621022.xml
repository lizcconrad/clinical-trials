    <allocation>Randomized</allocation>
    <intervention_model>Parallel Assignment</intervention_model>
    <primary_purpose>Treatment</primary_purpose>
    <masking>Double (Participant, Care Provider)</masking>
  </study_design_info>
  <primary_outcome>
    <measure>7-day point prevalence abstinence measured at 6 months</measure>
    <time_frame>6 months</time_frame>
    <description>No smoking, not evan a puff, during the 7 days prior to the 6 month follow-up</description>
  </primary_outcome>
  <number_of_arms>3</number_of_arms>
  <enrollment type="Actual">608</enrollment>
  <condition>Tobacco Dependence</condition>
  <arm_group>
    <arm_group_label>Active bupropion-Active gum</arm_group_label>
    <arm_group_type>Active Comparator</arm_group_type>
    <description>150 mg bupropion twice daily + 4 mg nicotine gum as needed (up to 12 pcs/day)</description>
  </arm_group>
  <arm_group>
    <arm_group_label>Active bupropion-Placebo gum</arm_group_label>
