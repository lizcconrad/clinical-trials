  <brief_summary>
    <textblock>
      Focus of this study was to determine if bupropion was more effective for smoking cessation
      when used alone or combined with nicotine gum.
    </textblock>
  </brief_summary>
  <overall_status>Completed</overall_status>
  <start_date>January 2001</start_date>
  <completion_date type="Actual">October 2002</completion_date>
  <primary_completion_date type="Actual">October 2002</primary_completion_date>
  <phase>Phase 4</phase>
  <study_type>Interventional</study_type>
