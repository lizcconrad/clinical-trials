  <brief_title>Sunlight Exposure and Vitamin D Status of Children of South Asian Ethnicity Living in the UK</brief_title>
  <official_title>Sunlight Exposure and Vitamin D Status of Children of South Asian Ethnicity Living in the UK</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>University of Manchester</agency>
      <agency_class>Other</agency_class>
    </lead_sponsor>
  </sponsors>
