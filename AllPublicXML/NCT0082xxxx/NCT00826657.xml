  <brief_title>Vitamin B12 Supplementation Study</brief_title>
  <official_title>Assessment of Functional Vitamin B12 Deficiency in Mexican Women</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>USDA, Western Human Nutrition Research Center</agency>
