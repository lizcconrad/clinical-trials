  <brief_title>Hepatic Impairment Study</brief_title>
  <official_title>Open Label, Phase 1 to Evaluate the Effect of Hepatic Impairment on the Pharmacokinetic of Sorafenib ( BAY43-9006)</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Bayer</agency>
      <agency_class>Industry</agency_class>
