    <arm_group_type>Active Comparator</arm_group_type>
  </arm_group>
  <intervention>
    <intervention_type>Drug</intervention_type>
    <intervention_name>diclofenac drops</intervention_name>
    <description>one drop 4 times a day for 3 months</description>
    <arm_group_label>1diclofenac drops treatment</arm_group_label>
  </intervention>
  <intervention>
    <intervention_type>Drug</intervention_type>
    <intervention_name>dexamethasone sodium phosphate 0.1% eye drops</intervention_name>
    <description>for first week after the operation : one drop 6 times a day. Then tapering by reducing one drop for a week</description>
    <arm_group_label>2dexamethasone drops</arm_group_label>
  </intervention>
  <eligibility>
    <criteria>
