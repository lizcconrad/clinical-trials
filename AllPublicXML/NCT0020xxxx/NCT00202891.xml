  <brief_title>Sisomicin Cream Vs Nadifloxacin Cream in Primary Pyodermas (Study P04460)</brief_title>
  <official_title>Sisomicin Cream Vs Nadifloxacin Cream in Primary Pyodermas</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Merck Sharp &amp; Dohme Corp.</agency>
      <agency_class>Industry</agency_class>
