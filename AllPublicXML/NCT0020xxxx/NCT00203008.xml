  <oversight_info>
    <has_dmc>No</has_dmc>
  </oversight_info>
  <brief_summary>
    <textblock>
      Patients with Parkinson's disease will be seen by a dermatologist who will biopsy any
      suspicious skin lesions.
    </textblock>
  </brief_summary>
  <overall_status>Completed</overall_status>
  <start_date>January 2003</start_date>
