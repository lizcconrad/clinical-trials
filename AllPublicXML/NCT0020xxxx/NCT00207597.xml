  </study_design_info>
  <enrollment>64</enrollment>
  <condition>Hemophilia A</condition>
  <eligibility>
    <criteria>
      <textblock>
        Inclusion Criteria:

          -  Diagnosed with hemophilia A

          -  factor level less than 2%

        Exclusion Criteria:

          -  More than 2 bleeds into the same joint
      </textblock>
    </criteria>
    <gender>Male</gender>
    <minimum_age>1 Year</minimum_age>
    <maximum_age>30 Months</maximum_age>
    <healthy_volunteers>No</healthy_volunteers>
  </eligibility>
