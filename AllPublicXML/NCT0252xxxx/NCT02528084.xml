  <brief_title>The Effects of Yoga on Patients With Rotator Cuff Injuries</brief_title>
  <official_title>The Effects of Yoga on Patients With Rotator Cuff Injuries</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Lawson Health Research Institute</agency>
      <agency_class>Other</agency_class>
    </lead_sponsor>
  </sponsors>
