  </study_design_info>
  <primary_outcome>
    <measure>Area under the plasma concentration versus time curve (AUC) of TA-8995 capsule and tablet formulations</measure>
    <time_frame>72 hours</time_frame>
  </primary_outcome>
  <primary_outcome>
    <measure>Peak Plasma Concentration (Cmax) of TA-8995 capsule and tablet formulations</measure>
    <time_frame>72 hours</time_frame>
  </primary_outcome>
