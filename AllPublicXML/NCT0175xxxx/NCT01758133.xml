  <has_expanded_access>No</has_expanded_access>
  <study_design_info>
    <observational_model>Case Control</observational_model>
    <time_perspective>Prospective</time_perspective>
  </study_design_info>
  <primary_outcome>
    <measure>Amount of breast milk produced</measure>
    <time_frame>One week</time_frame>
    <description>Mothers who have either been exposed or not exposed to medical clown activities will pump their breast milk. The milk will be measured and the two groups production will be compared.</description>
  </primary_outcome>
  <number_of_groups>2</number_of_groups>
  <enrollment type="Anticipated">60</enrollment>
  <condition>Breast Milk</condition>
  <arm_group>
    <arm_group_label>Mothers exposed to medical clowns</arm_group_label>
    <description>Mothers of premature infants who have been exposed to medical clown activities</description>
  </arm_group>
  <arm_group>
    <arm_group_label>Mothers not exposed to medical clown activity</arm_group_label>
  </arm_group>
  <intervention>
    <intervention_type>Behavioral</intervention_type>
    <intervention_name>Exposure to medical clown activities</intervention_name>
    <arm_group_label>Mothers exposed to medical clowns</arm_group_label>
  </intervention>
  <eligibility>
    <study_pop>
      <textblock>
        Mothers of premature infants
      </textblock>
    </study_pop>
    <sampling_method>Probability Sample</sampling_method>
    <criteria>
      <textblock>
        Inclusion Criteria:

          -  Nursing mothers of infants born less than 34th week

        Exclusion Criteria:

          -  Sick mothers

          -  Take medication forbidden during nursing
      </textblock>
    </criteria>
    <gender>Female</gender>
    <minimum_age>18 Years</minimum_age>
