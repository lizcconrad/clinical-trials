  <brief_title>Effect of Omega-3 Fatty Acids on Oxidative Stress and Dyslipidemia in Pediatric Patients Undergoing Hemodialysis</brief_title>
  <official_title>Evaluation of the Effect of Omega-3 Fatty Acids Supplementation on Pediatric Patients Undergoing Hemodialysis</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Ain Shams University</agency>
      <agency_class>Other</agency_class>
    </lead_sponsor>
  </sponsors>
