  <brief_title>Comparative Evaluation of Two Different Radiosurgery</brief_title>
  <official_title>Comparative Evaluation of Two Different Radiosurgery Modalities in Brain Metastatic Patients From Several Solid Tumors</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Istituto Clinico Humanitas</agency>
      <agency_class>Other</agency_class>
    </lead_sponsor>
  </sponsors>
