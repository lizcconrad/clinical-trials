  <brief_title>18F-AV-1451 High Resolution Autopsy Study</brief_title>
  <official_title>A High Resolution Autopsy Study Evaluating the Relationship of 18F-AV-1451 PET Imaging and Tau Pathology</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Avid Radiopharmaceuticals</agency>
      <agency_class>Industry</agency_class>
    </lead_sponsor>
  </sponsors>
