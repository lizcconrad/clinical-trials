  <brief_title>Maternal and Neonatal Outcome in Pregnant Women Before and After 1 Year Since Bariatric Operation</brief_title>
  <official_title>Comparison of Maternal and Neonatal Outcome Before and After 1 Year of Bariatric Surgery</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Cairo University</agency>
      <agency_class>Other</agency_class>
