  <primary_outcome>
    <measure>Change in skin thickness from baseline to end of treatment</measure>
    <time_frame>4 weeks</time_frame>
  </primary_outcome>
  <secondary_outcome>
    <measure>Relation of clinical features (skin transparency and telangiectasia) to the steroid induced skin atrophy after end of treatment</measure>
    <time_frame>4 weeks</time_frame>
  </secondary_outcome>
