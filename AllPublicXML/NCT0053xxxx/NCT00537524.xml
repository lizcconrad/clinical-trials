  </oversight_info>
  <brief_summary>
    <textblock>
      Evaluate the immune response and reactogenicity of H5N1 vaccination in subjects aged 6 months
      to 17 years compared to seasonal flu vaccination
    </textblock>
  </brief_summary>
  <overall_status>Completed</overall_status>
  <start_date>September 2007</start_date>
  <completion_date type="Actual">May 2008</completion_date>
  <primary_completion_date type="Actual">October 2007</primary_completion_date>
  <phase>Phase 2</phase>
  <study_type>Interventional</study_type>
  <has_expanded_access>No</has_expanded_access>
