  <brief_title>Open Label Study of Ceftobiprole to Evaluate Pharmacokinetics in Adults Hospitalized in the ICU</brief_title>
  <official_title>Open-Label, Parallel Group, Multiple-dose Study of Ceftobiprole to Evaluate the Plasma Pharmacokinetics in Adults in Intensive Care Units</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Basilea Pharmaceutica</agency>
      <agency_class>Industry</agency_class>
    </lead_sponsor>
  </sponsors>
