  <brief_title>The Clopidogrel and Aspirin After Surgery for Coronary Artery Disease</brief_title>
  <sponsors>
    <lead_sponsor>
      <agency>China National Center for Cardiovascular Diseases</agency>
      <agency_class>Other</agency_class>
