    <masking>None (Open Label)</masking>
  </study_design_info>
  <primary_outcome>
    <measure>AUC(area under the plasma concentration-time curve)</measure>
    <time_frame>Predose and 0.5, 1, 1.5, 2, 2.5, 3, 4, 6, 8, 10, 12h postdose</time_frame>
    <description>AUC(area under the plasma concentration-time curve), Cmax(maximum plasma concentration), t1/2</description>
  </primary_outcome>
  <secondary_outcome>
    <measure>AUG(total area under the serum concentration-time curve for glucose)</measure>
    <time_frame>predose and 15, 30, 45, 60, 90, 120, 150, 180min oral glucose tolerance test</time_frame>
    <description>AUG (total area under the serum concentration-time curve for glucose) Gmax(maximum serum glucose concentration)</description>
  </secondary_outcome>
  <number_of_arms>1</number_of_arms>
  <enrollment type="Actual">20</enrollment>
