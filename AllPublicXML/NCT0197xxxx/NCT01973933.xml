  <oversight_info>
    <has_dmc>No</has_dmc>
  </oversight_info>
  <brief_summary>
    <textblock>
      This study aims to investigate the pharmacokinetic/pharmacodynamic drug-drug interaction of
      pyrimethamine and metformin IR after oral administration in healthy male volunteers.
    </textblock>
  </brief_summary>
  <overall_status>Completed</overall_status>
  <start_date>June 2013</start_date>
  <primary_completion_date type="Actual">August 2013</primary_completion_date>
