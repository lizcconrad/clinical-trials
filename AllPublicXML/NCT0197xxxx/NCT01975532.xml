  <brief_title>Evaluation of Diffusion MRI as a Tool in Planning Deep Brain Stimulation (DBS)</brief_title>
  <official_title>Evaluation of MRI Based Fiber Tracking as a Tool in Deep Brain Stimulation for Movement Disorders</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>University of Aarhus</agency>
      <agency_class>Other</agency_class>
    </lead_sponsor>
  </sponsors>
