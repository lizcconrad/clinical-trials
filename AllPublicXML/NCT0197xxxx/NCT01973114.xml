  <primary_outcome>
    <measure>Change in speech discrimination score in noise from Baseline</measure>
    <time_frame>2 weeks</time_frame>
  </primary_outcome>
  <secondary_outcome>
    <measure>Change in speech discrimination score in noise from Baseline</measure>
    <time_frame>3 months</time_frame>
  </secondary_outcome>
  <secondary_outcome>
    <measure>Change in pure tone audiometry from Baseline</measure>
    <time_frame>3 months</time_frame>
  </secondary_outcome>
  <secondary_outcome>
    <measure>Change in THI-25 (Tinnitus Handicap Inventory) score from Baseline</measure>
    <time_frame>3 months</time_frame>
  </secondary_outcome>
  <secondary_outcome>
    <measure>Change in hearing (Likert scale), tinnitus (Likert scale) and vertigo (Likert scale) from run-in period</measure>
    <time_frame>3 months</time_frame>
  </secondary_outcome>
  <secondary_outcome>
    <measure>Change in proportion of days with vertigo attacks from run-in period</measure>
    <time_frame>3 months</time_frame>
  </secondary_outcome>
  <secondary_outcome>
