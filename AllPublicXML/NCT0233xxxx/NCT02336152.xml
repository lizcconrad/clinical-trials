  <primary_outcome>
    <measure>Body core temperature</measure>
    <time_frame>30 minutes after anaesthesia induction</time_frame>
    <description>SpotOn (3M) measurement in the forehead</description>
  </primary_outcome>
  <secondary_outcome>
    <measure>Body core temperature</measure>
