  <primary_outcome>
    <measure>Adynamic ileus</measure>
    <time_frame>72 hours</time_frame>
    <description>Presence of signs of adynamic ileus (nausea, vomiting, abdominal distention) after feeding</description>
  </primary_outcome>
  <secondary_outcome>
    <measure>Post operative pain</measure>
    <time_frame>72 hours</time_frame>
    <description>Level of pain, using a visual scale (12, 24, 48 and 72 hours after surgery)</description>
  </secondary_outcome>
  <secondary_outcome>
    <measure>Satisfaction</measure>
    <time_frame>72 hours</time_frame>
    <description>Personal satisfaction, using a numeric scale (12, 24, 48 and 72 hours after surgery)</description>
  </secondary_outcome>
