  <brief_title>Effect of Gum Chewing on Bowel Cleansing Before Colonoscopy</brief_title>
  <official_title>Effect of Gum Chewing on Bowel Cleansing Before Colonoscopy: A Prospective Randomized Study</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Changhai Hospital</agency>
      <agency_class>Other</agency_class>
    </lead_sponsor>
