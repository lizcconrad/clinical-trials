  <primary_outcome>
    <measure>Change between Pupillary Pain Index before and after alfentanil bolus</measure>
    <time_frame>Five minutes before incision and just before incision. Each measure = 20 seconds</time_frame>
    <description>pupillometry</description>
  </primary_outcome>
  <number_of_arms>1</number_of_arms>
