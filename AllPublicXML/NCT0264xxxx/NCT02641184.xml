  <eligibility>
    <study_pop>
      <textblock>
        Patients presenting to an emergency room and diagnosed as acute myocardial infarction
      </textblock>
    </study_pop>
    <sampling_method>Non-Probability Sample</sampling_method>
    <criteria>
      <textblock>
        Inclusion Criteria:

          -  Less than 12 hours after the onset of myocardial infarction symptoms

          -  Myocardial necrosis, as evidenced by increased Creatine Kinase Isoenzyme (CK-MB) or
             troponin levels

        Exclusion Criteria:

          -  Age under 18 years-old
      </textblock>
    </criteria>
    <gender>All</gender>
    <minimum_age>18 Years</minimum_age>
    <maximum_age>N/A</maximum_age>
