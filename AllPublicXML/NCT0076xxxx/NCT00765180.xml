  <brief_title>Comparison of Transparent Retractable Extension Device and Narrow Band Imaging on Colorectal Adenoma Detection</brief_title>
  <sponsors>
    <lead_sponsor>
      <agency>Showa Inan General Hospital</agency>
      <agency_class>Other</agency_class>
    </lead_sponsor>
  </sponsors>
