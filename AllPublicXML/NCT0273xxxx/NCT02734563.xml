    <has_dmc>Yes</has_dmc>
  </oversight_info>
  <brief_summary>
    <textblock>
      The aim of this study was to evaluate collagen turnover in patients with multiple hernias
    </textblock>
  </brief_summary>
  <detailed_description>
    <textblock>
      Venous blood was collected and markers for type IV and V collagen synthesis and breakdown was
      measured
    </textblock>
  </detailed_description>
  <overall_status>Completed</overall_status>
  <start_date>January 2011</start_date>
  <completion_date type="Actual">December 2014</completion_date>
