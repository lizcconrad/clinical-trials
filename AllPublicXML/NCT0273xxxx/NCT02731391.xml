  <primary_outcome>
    <measure>change in the prevalence of bowel symptoms</measure>
    <time_frame>baseline,1,3,6,12 months after operation.</time_frame>
  </primary_outcome>
  <primary_outcome>
    <measure>change in the severity of intestinal symptoms</measure>
    <time_frame>baseline,1,3,6,12 months after operation.</time_frame>
    <description>assessed by Birmingham Bowel and Urinary Symptoms Questionnaire</description>
  </primary_outcome>
  <primary_outcome>
    <measure>change in the quality of life</measure>
    <time_frame>baseline,1,3,6,12 months after operation.</time_frame>
    <description>assessed by international consultation on incontinence questionnaire short form</description>
  </primary_outcome>
  <primary_outcome>
    <measure>resting pressure recorded by anorectal manometry</measure>
    <time_frame>baseline and 12 months after operation</time_frame>
  </primary_outcome>
  <primary_outcome>
    <measure>squeeze pressure recorded by anorectal manometry</measure>
    <time_frame>baseline and 12 months after operation</time_frame>
  </primary_outcome>
  <primary_outcome>
    <measure>length of the high-pressure zone recorded by anorectal manometry</measure>
    <time_frame>baseline and 12 months after operation</time_frame>
  </primary_outcome>
  <primary_outcome>
    <measure>compliance of the rectum recorded by anorectal manometry</measure>
    <time_frame>baseline and 12 months after operation</time_frame>
  </primary_outcome>
  <primary_outcome>
    <measure>rectoanal inhibitory reflex recorded by anorectal manometry</measure>
    <time_frame>baseline and 12 months after operation</time_frame>
  </primary_outcome>
