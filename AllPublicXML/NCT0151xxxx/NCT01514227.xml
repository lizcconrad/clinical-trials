    <time_frame>18 months</time_frame>
  </secondary_outcome>
  <secondary_outcome>
    <measure>Rate of target lesion revascularization</measure>
    <time_frame>18 months</time_frame>
  </secondary_outcome>
  <secondary_outcome>
