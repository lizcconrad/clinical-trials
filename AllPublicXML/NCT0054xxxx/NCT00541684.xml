    <masking>Double</masking>
  </study_design_info>
  <primary_outcome>
    <measure>number of sexual intercourse events in a 2-week period</measure>
    <time_frame>2 Weeks</time_frame>
  </primary_outcome>
  <secondary_outcome>
    <measure>sexual functioning score and overall sexual satisfaction score after 16 weeks</measure>
    <time_frame>16 Weeks</time_frame>
  </secondary_outcome>
  <enrollment type="Actual">143</enrollment>
  <condition>Hypertension</condition>
