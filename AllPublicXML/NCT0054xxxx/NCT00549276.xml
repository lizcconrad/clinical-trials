  <brief_title>Randomized Comparison of Curved Cutter Stapler and Linear Stapler</brief_title>
  <sponsors>
    <lead_sponsor>
      <agency>Samsung Medical Center</agency>
      <agency_class>Other</agency_class>
    </lead_sponsor>
  </sponsors>
