  <brief_title>Treatment Compliance in Children and Adolescents on ADHD Medication</brief_title>
  <acronym>COMPLY</acronym>
  <official_title>Treatment Adherence and Compliance in Children and Adolescents on ADHD Medication and Emotional Expression in Clinical Practice</official_title>
  <sponsors>
    <lead_sponsor>
