  <brief_title>Exercise and Virtual Reality Exposure Therapy for Acrophobia</brief_title>
  <official_title>Exercise and Virtual Reality Exposure Therapy for Acrophobia</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>University of Texas at Austin</agency>
      <agency_class>Other</agency_class>
    </lead_sponsor>
  </sponsors>
