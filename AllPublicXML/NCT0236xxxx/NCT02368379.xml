  <primary_outcome>
    <measure>Presence of central adrenal insufficiency using low dose (1 mcg) ACTH stimulation test</measure>
    <time_frame>40 minutes</time_frame>
  </primary_outcome>
  <primary_outcome>
    <measure>Prescence of central adrenal insufficiency using overnight metyrapone test</measure>
    <time_frame>8 hours</time_frame>
  </primary_outcome>
  <secondary_outcome>
    <measure>Determine peak cortisol value on low dose (1 mcg) ACTH stimulation test that can accurately predict central adrenal insufficiency based on overnight metyrapone test with good sensitivity and specificity.</measure>
    <time_frame>0</time_frame>
  </secondary_outcome>
