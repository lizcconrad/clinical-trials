    <primary_purpose>Treatment</primary_purpose>
    <masking>Single (Participant)</masking>
  </study_design_info>
  <primary_outcome>
    <measure>Creatine kinase Myocard type &quot;CK-MB&quot; peak value</measure>
    <time_frame>from 4 to 168 hours after release of the aortic cross clamp</time_frame>
    <description>day 1: measurements 4, 8, 12, 16, 20, 24 hours ± 30 min; day 2-3: measurements 8, 16 and 24 hours ± 2 hours; day 4-7 one time/day</description>
  </primary_outcome>
  <secondary_outcome>
    <measure>Catecholamine requirement</measure>
    <time_frame>from entry to the trial up to day 7</time_frame>
    <description>defined as &quot;yes&quot; or &quot;no&quot;</description>
  </secondary_outcome>
  <secondary_outcome>
    <measure>Patient survival</measure>
    <time_frame>at 7 days and 1, 3 and 12 months</time_frame>
  </secondary_outcome>
  <secondary_outcome>
    <measure>Complications</measure>
    <time_frame>from the time of the transplantation up to day 7</time_frame>
    <description>occurrence, severity, type, and duration</description>
  </secondary_outcome>
