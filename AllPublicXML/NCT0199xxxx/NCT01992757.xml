  <primary_outcome>
    <measure>thromboelastography-derived functional fibrinogen (TEG-FF) level</measure>
    <time_frame>Change from baseline and after cardiac surgery</time_frame>
    <description>The TEG tracing will quantify a functional fibrinogen level for each patient.</description>
  </primary_outcome>
  <number_of_groups>1</number_of_groups>
  <enrollment type="Actual">51</enrollment>
