  </study_design_info>
  <primary_outcome>
    <measure>cerebral blood flow velocity</measure>
    <time_frame>6hour</time_frame>
    <description>during cardiac surgery</description>
  </primary_outcome>
  <enrollment type="Actual">43</enrollment>
  <condition>Cardiopulmonary Arrest</condition>
  <eligibility>
    <study_pop>
      <textblock>
        pediatric patients with congenital heart disease scheduled to recieve cardiac surgery under
        CPB
      </textblock>
    </study_pop>
    <sampling_method>Probability Sample</sampling_method>
    <criteria>
      <textblock>
        Inclusion Criteria:

          1. the patients less than 1 year of age undergo congenital heart surgery with
             cardiopulmonary bypass

          2. written informed consent is obtained from their guardians in accordance with the
             requirements of the local ethics committee

        Exclusion Criteria:

          1. synostosis

          2. skull abnormality or fracture

          3. epidural hematoma, scalp hematoma
      </textblock>
    </criteria>
    <gender>All</gender>
    <minimum_age>N/A</minimum_age>
