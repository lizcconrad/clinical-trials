  <intervention>
    <intervention_type>Other</intervention_type>
    <intervention_name>volume expansion</intervention_name>
    <description>fluid loading of 10 ml/kg colloid or blood product</description>
    <arm_group_label>Volume loading</arm_group_label>
  </intervention>
  <eligibility>
    <criteria>
      <textblock>
        Inclusion Criteria:

          -  congenital cardiac surgery

          -  &lt; 6 years old

          -  who were required the evaluation by transesophageal echocardiography

        Exclusion Criteria:

          -  right heart failure

          -  supported by more than 2 inotropic agents

          -  reduced kidney function

          -  any valvar stenosis

          -  moderate or severe tricuspid regurgitation

          -  single ventricle
      </textblock>
    </criteria>
    <gender>All</gender>
    <minimum_age>N/A</minimum_age>
    <maximum_age>5 Years</maximum_age>
    <healthy_volunteers>No</healthy_volunteers>
  </eligibility>
