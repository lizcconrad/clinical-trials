    <arm_group_label>Postmenopausal women</arm_group_label>
  </intervention>
  <eligibility>
    <study_pop>
      <textblock>
        All postmenopausal women (who had their menses stopped for at least one year above age of
        40) with vaginal bleeding.
      </textblock>
    </study_pop>
    <sampling_method>Non-Probability Sample</sampling_method>
    <criteria>
      <textblock>
        Inclusion Criteria:

        - All postmenopausalwomen with vaginal bleeding and endometrial thickness more than 4 mm

        Exclusion Criteria:

          -  all patients with vaginal bleeding arising from cervical or vaginal or vulval disease
             or due to hormonal replacement therapy (scheduled bleeding).
      </textblock>
    </criteria>
    <gender>Female</gender>
    <minimum_age>40 Years</minimum_age>
    <maximum_age>N/A</maximum_age>
    <healthy_volunteers>No</healthy_volunteers>
  </eligibility>
