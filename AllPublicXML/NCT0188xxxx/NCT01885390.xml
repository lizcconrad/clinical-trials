  <primary_outcome>
    <measure>Change in ambulatory daytime mean systolic blood pressure</measure>
    <time_frame>Baseline, 6 months</time_frame>
    <description>Change in mean ambulatory daytime systolic blood pressure at six months as compared to Baseline.</description>
  </primary_outcome>
  <secondary_outcome>
    <measure>Change in ambulatory daytime mean diastolic blood pressure</measure>
