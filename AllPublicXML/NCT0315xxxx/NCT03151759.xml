  <brief_title>MMP-7 Modulation by Short and Long Term Radiotherapy in Rectal Cancer Patients</brief_title>
  <acronym>MMP-7</acronym>
  <official_title>Effect of Long and Short Radiotherapy on MMP-7 Levels in Rectal Cancer Treatment</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Region Skane</agency>
      <agency_class>Other</agency_class>
