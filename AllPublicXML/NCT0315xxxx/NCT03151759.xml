    <is_fda_regulated_device>No</is_fda_regulated_device>
  </oversight_info>
  <brief_summary>
    <textblock>
      To analyse the effects of radiation therapy on inflammation and matrilysin levels in rectal
      cancer patients.
    </textblock>
  </brief_summary>
  <overall_status>Completed</overall_status>
  <start_date type="Actual">November 6, 2002</start_date>
  <completion_date type="Actual">March 16, 2007</completion_date>
  <primary_completion_date type="Actual">March 16, 2007</primary_completion_date>
  <study_type>Observational</study_type>
  <has_expanded_access>No</has_expanded_access>
  <study_design_info>
    <observational_model>Cohort</observational_model>
    <time_perspective>Prospective</time_perspective>
  </study_design_info>
  <primary_outcome>
    <measure>Matrilysin levels</measure>
    <time_frame>1 - 6 weeks</time_frame>
    <description>Inflammatory markers</description>
  </primary_outcome>
  <number_of_groups>3</number_of_groups>
  <enrollment type="Actual">77</enrollment>
  <condition>Rectal Cancer</condition>
  <arm_group>
    <arm_group_label>No radiotherapy</arm_group_label>
    <description>Surgery only</description>
  </arm_group>
  <arm_group>
    <arm_group_label>25 Gray radiotherapy</arm_group_label>
    <description>Surgery after short term radiotherapy</description>
  </arm_group>
  <arm_group>
    <arm_group_label>50 Gray radiotherapy</arm_group_label>
    <description>Surgery after long term radiotherapy</description>
  </arm_group>
  <intervention>
    <intervention_type>Radiation</intervention_type>
    <intervention_name>Neoadjuvant radiotherapy</intervention_name>
    <description>Neoadjuvant radiotherapy prior to rectal cancer surgery</description>
    <arm_group_label>25 Gray radiotherapy</arm_group_label>
    <arm_group_label>50 Gray radiotherapy</arm_group_label>
  </intervention>
  <eligibility>
    <study_pop>
      <textblock>
        Rectal cancer patients undergoing surgery with or without neoadjuvant radiotherapy
      </textblock>
    </study_pop>
    <sampling_method>Probability Sample</sampling_method>
    <criteria>
      <textblock>
        Inclusion Criteria:

        Adenocarcinoma of the rectum, ability to understand written and oral information, written
        consent.

        Exclusion Criteria:

        Colon cancer, benign tumors, impaired general condition of patient, declining to
        participate in the study, synchronous colonic tumors, logistical reasons, inability to
        understand written and/or oral information, previous pelvic irradiation, ongoing
        immunosuppressive therapy, diabetes with systemic complications.
      </textblock>
    </criteria>
    <gender>All</gender>
    <minimum_age>N/A</minimum_age>
    <maximum_age>N/A</maximum_age>
    <healthy_volunteers>No</healthy_volunteers>
  </eligibility>
