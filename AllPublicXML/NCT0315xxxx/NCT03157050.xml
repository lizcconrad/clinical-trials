  <primary_outcome>
    <measure>Change in patient health questionnaire-9 score</measure>
    <time_frame>on day 0 of start of intravenous iron and 1 week after completion of intravenous iron</time_frame>
    <description>change in patient health questionnaire-9 score before and after intravenous iron therapy</description>
  </primary_outcome>
  <enrollment type="Actual">112</enrollment>
  <condition>Depression</condition>
  <condition>Hemodialysis Complication</condition>
  <condition>Iron Deficiency Anemia</condition>
  <intervention>
    <intervention_type>Other</intervention_type>
    <intervention_name>Intravenous iron therapy</intervention_name>
    <description>each patient with iron def anemia received an IV syringe of iron sucrose 100 mg every dialysis session for 10 doses</description>
  </intervention>
  <eligibility>
    <study_pop>
      <textblock>
        Hemodialysis patients with iron deficiency anemia.
      </textblock>
    </study_pop>
    <sampling_method>Non-Probability Sample</sampling_method>
    <criteria>
      <textblock>
        Inclusion Criteria:

          1. age was above 19 years,

          2. patient on maintenance hemodialysis,

          3. patient had iron deficiency anemia (ferritin &gt; 100 ng/ml)

        Exclusion Criteria:

          1. patient has history of depression or already using antidepressant medication,

          2. Lack of ferritin level increase â‰¥ 50% from baseline level before IV iron
             administration,

          3. patient already on oral or intravenous iron supplement
      </textblock>
    </criteria>
    <gender>All</gender>
    <minimum_age>19 Years</minimum_age>
    <maximum_age>N/A</maximum_age>
    <healthy_volunteers>No</healthy_volunteers>
  </eligibility>
