  <brief_title>Integrated Care for Cancer Patients; Developing, Implementing and Testing a Programme to Improve Integrated Care</brief_title>
  <official_title>Integrated Care for Cancer Patients</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Radboud University</agency>
