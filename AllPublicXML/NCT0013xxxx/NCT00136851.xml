  </study_design_info>
  <primary_outcome>
    <measure>Percentage of subjects achieving blood pressure goal which is defined as &lt; 140/90 mm Hg, or &lt; 130/80 mm Hg in subjects with diabetes after 4 weeks</measure>
  </primary_outcome>
  <secondary_outcome>
    <measure>Percentage of subjects achieving blood pressure goal, defined as &lt; 140/90 mm Hg, or &lt; 130/80 mm Hg in subjects with diabetes after 6 weeks</measure>
  </secondary_outcome>
  <secondary_outcome>
    <measure>Change from baseline in the mean sitting systolic blood pressure after 4 and 6 weeks</measure>
  </secondary_outcome>
  <secondary_outcome>
    <measure>Change from baseline in the mean sitting diastolic blood pressure after 4 and 6 weeks</measure>
  </secondary_outcome>
  <secondary_outcome>
    <measure>Percentage of subjects with swelling in legs or arms after 4 and 6 weeks</measure>
  </secondary_outcome>
  <enrollment type="Actual">259</enrollment>
  <condition>Hypertension</condition>
  <intervention>
    <intervention_type>Drug</intervention_type>
    <intervention_name>amlodipine besylate/benazepril hydrochloride</intervention_name>
  </intervention>
  <eligibility>
    <criteria>
      <textblock>
        Inclusion Criteria:

          -  Diagnosis of severe hypertension

        Exclusion Criteria:

          -  Diastolic blood pressure (DBP) &lt; 60 mm Hg

          -  Serum potassium &lt; 3.5 or &gt; 5.5 mEq/L in the absence of all potassium supplements

          -  Refractory hypertension defined as systolic blood pressure (SBP) ≥ 180 mmHg and/or DBP
             ≥ 110 mmHg and unresponsive to triple-drug regimens

        Other protocol-defined exclusion criteria may apply.
      </textblock>
    </criteria>
    <gender>All</gender>
    <minimum_age>18 Years</minimum_age>
    <maximum_age>80 Years</maximum_age>
