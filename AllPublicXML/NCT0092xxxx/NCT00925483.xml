  <brief_title>Decreasing Dialysis Cardiovascular Risk: Daily Versus Longer Treatments</brief_title>
  <official_title>Decreasing Dialysis Cardiovascular Risk: Daily Versus Longer Treatments</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Dallas VA Medical Center</agency>
