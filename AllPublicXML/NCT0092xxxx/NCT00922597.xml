  <brief_title>Non-interventional Observation of Practical Implementation, Efficacy and Safety of Continuous Infusion With KOGENATE Bayer in Surgery</brief_title>
  <acronym>NO PEACKS</acronym>
  <official_title>Non-interventional Observation of Practical Implementation, Efficacy and Safety of Continuous Infusion With KOGENATE Bayer in Surgery - NO PEACKS</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Bayer</agency>
      <agency_class>Industry</agency_class>
    </lead_sponsor>
  </sponsors>
