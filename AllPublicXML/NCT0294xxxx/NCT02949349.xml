  <brief_title>Mycophenolate Mofetil Versus Azathioprine for Maintenance Therapy of Lupus Nephritis</brief_title>
  <official_title>Mycophenolate Mofetil Versus Azathioprine for Maintenance Therapy of Lupus Nephritis</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Genovate Biotechnology Co., Ltd.,</agency>
      <agency_class>Industry</agency_class>
    </lead_sponsor>
