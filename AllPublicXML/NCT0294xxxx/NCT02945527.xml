    <arm_group_label>Acetazolamide</arm_group_label>
    <arm_group_type>Active Comparator</arm_group_type>
    <description>750 mg acetazolamide p.o. divided in three dily doses, for 10 days</description>
  </arm_group>
  <arm_group>
    <arm_group_label>Dexamethasone</arm_group_label>
    <arm_group_type>Active Comparator</arm_group_type>
    <description>8 mg p.o. divided in three daily daily doses, for 2 days followed by gradual tapering</description>
  </arm_group>
