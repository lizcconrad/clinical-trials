    <masking>None (Open Label)</masking>
  </study_design_info>
  <primary_outcome>
    <measure>Change in mean office SBP</measure>
    <time_frame>Baseline, 6 months</time_frame>
    <description>Change in mean office SBP at six months as compared to Baseline</description>
  </primary_outcome>
  <secondary_outcome>
    <measure>Change in mean office DBP</measure>
