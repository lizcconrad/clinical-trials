  <primary_outcome>
    <measure>Incidence of wound healing abnormalities</measure>
    <time_frame>from baseline to postoperative day 28</time_frame>
    <description>Occurence of wound healing abnormalities within the first 28 days after surgery</description>
  </primary_outcome>
  <secondary_outcome>
    <measure>Abnormalities in coagulation parameters</measure>
    <time_frame>postoperative day 28</time_frame>
    <description>occurence of low platelets (&lt;60.000) or factor XIII &lt; 50% between the first and seventh postoperative day</description>
  </secondary_outcome>
