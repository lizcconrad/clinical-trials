  <brief_title>Prehabilitation for Aortic Repair Patients</brief_title>
  <acronym>PREPARE</acronym>
  <official_title>Does Prehabilitation Prior to Thoracic Aortic Repair Improve Quality of Care?</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>University of Michigan</agency>
      <agency_class>Other</agency_class>
    </lead_sponsor>
  </sponsors>
