    <time_frame>Up to 3 months</time_frame>
  </secondary_outcome>
  <secondary_outcome>
    <measure>Characteristics of units</measure>
    <time_frame>Day 0</time_frame>
    <description>participating physicians (age, status, specialty), type of institution, location , type of unit, size of unit</description>
  </secondary_outcome>
