  <arm_group>
    <arm_group_label>Dexamethasone</arm_group_label>
    <arm_group_type>Active Comparator</arm_group_type>
    <description>Group 1 will receive an injection of 4mg of dexamethasone 4 mL of 1% lidocaine.</description>
  </arm_group>
  <arm_group>
