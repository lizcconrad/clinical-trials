  <brief_title>Bisphosphonate Treatment of Osteogenesis Imperfecta</brief_title>
  <official_title>Bisphosphonate Treatment of Osteogenesis Imperfecta</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Novartis Pharmaceuticals</agency>
