  <brief_title>Sleep Disturbances as a Risk Factor in Chronic Kidney Disease</brief_title>
  <acronym>CRIC</acronym>
  <official_title>Sleep Disturbance as a Non-Traditional Risk Factor in CKD</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>University of Chicago</agency>
      <agency_class>Other</agency_class>
