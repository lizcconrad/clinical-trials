  <primary_outcome>
    <measure>Fasting total cholesterol, LDL cholesterol, and triglyceride levels</measure>
    <time_frame>Every 4 weeks (Overall 20 weeks)</time_frame>
  </primary_outcome>
  <secondary_outcome>
    <measure>Fasting serum glucose and HbA1c levels</measure>
    <time_frame>Every 4 weeks (Overall 20 weeks)</time_frame>
  </secondary_outcome>
