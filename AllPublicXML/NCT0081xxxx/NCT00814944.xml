  <primary_outcome>
    <measure>Mean corneal fluorescein staining (inferior region) after CAE exposure.</measure>
    <time_frame>Day 28</time_frame>
  </primary_outcome>
  <primary_outcome>
    <measure>Mean ocular discomfort during CAE exposure.</measure>
    <time_frame>Day 28</time_frame>
  </primary_outcome>
  <secondary_outcome>
    <measure>Safety across treatment groups.</measure>
    <time_frame>Through 28 days</time_frame>
  </secondary_outcome>
  <secondary_outcome>
    <measure>Additional evaluations of dry eye including fluorescein staining, lissamine green staining, conjunctival redness, tear film break-up time, blink rate, ocular protection index, Schirmer's Test, and corneal sensitivity.</measure>
    <time_frame>Day 28</time_frame>
  </secondary_outcome>
