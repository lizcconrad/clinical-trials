    <description>one dose of Ibuprofen 5 or 10 mg/kg</description>
    <arm_group_label>Ibuprofen</arm_group_label>
  </intervention>
  <eligibility>
    <criteria>
      <textblock>
        Inclusion Criteria:

          -  Common cold with fever

          -  Age 6 months to 14 years

        Exclusion Criteria:

          -  Gastric ulcer

          -  Bleeding tendency

          -  Liver disease

          -  Kidney disease

          -  Hypertension

          -  Hypersensitivity to the drug
      </textblock>
    </criteria>
    <gender>All</gender>
    <minimum_age>6 Months</minimum_age>
    <maximum_age>14 Years</maximum_age>
    <healthy_volunteers>No</healthy_volunteers>
  </eligibility>
