    <measure>Efficacy of UVA-1 treatment vs. topical steroid.</measure>
    <time_frame>5 years</time_frame>
  </primary_outcome>
  <number_of_arms>2</number_of_arms>
  <enrollment type="Actual">24</enrollment>
