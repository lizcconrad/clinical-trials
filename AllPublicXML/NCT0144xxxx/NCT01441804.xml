  <primary_outcome>
    <measure>Sustained virological response (SVR)</measure>
    <time_frame>24 weeks after the end of treatment</time_frame>
    <description>Undetectable HCVRNA in serum(&lt;15IU/ml) 24 weeks after the end of treatment</description>
  </primary_outcome>
  <secondary_outcome>
    <measure>Change in health related quality as measured by short from 36 (SF-36) from baseline to 24 weeks after the end of treatment</measure>
    <time_frame>baseline, 24 weeks after the end of treatment</time_frame>
  </secondary_outcome>
