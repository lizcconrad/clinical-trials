  <primary_outcome>
    <measure>Change in Pulmonary Function Test (PFT) after vitamin D supplementation</measure>
    <time_frame>4 weeks</time_frame>
  </primary_outcome>
  <primary_outcome>
    <measure>Change in Asthma Control Test (ACT) scores after vitamin D supplementation</measure>
    <time_frame>4-week</time_frame>
  </primary_outcome>
