  <primary_outcome>
    <measure>Blood pressure change</measure>
    <time_frame>One time before the operation and twice after : 1 month and 6 months</time_frame>
    <description>preoperative and postoperative measurements of blood pressure</description>
  </primary_outcome>
  <secondary_outcome>
    <measure>Renal function</measure>
    <time_frame>One time before the operation and one after 6 months</time_frame>
    <description>preoperative and postoperative measurements of renal function with measurements of renin activity and the glomerular filtration rate.</description>
  </secondary_outcome>
  <secondary_outcome>
    <measure>Cardiovascular risk</measure>
    <time_frame>A clinical exam will perform before the surgery and 1 month and 6 months after</time_frame>
    <description>Study the occurence of cardiovascular risk after nephrectomy</description>
  </secondary_outcome>
