  <primary_outcome>
    <measure>Evaluation of global response rate (complete response, partial response and stable disease)of the association topotecan-lapatinib.</measure>
    <time_frame>every two cycles of chemotherapy</time_frame>
  </primary_outcome>
  <secondary_outcome>
    <measure>Global survival rate, survival rate without progression, response time, time without progression, safety, quality of life, Caracterisation of biological response (tumor, ascite and blood samples)</measure>
    <time_frame>each cycle of chemotherapy</time_frame>
  </secondary_outcome>
  <enrollment type="Actual">39</enrollment>
  <condition>Cancer</condition>
  <condition>Ovarian</condition>
