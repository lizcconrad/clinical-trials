  <brief_title>Retinal Imaging Using NOTAL-OCT</brief_title>
  <official_title>Retinal Imaging Using NOTAL-OCT</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Notal Vision Ltd</agency>
