  <brief_title>Economisation of Whipple Resection Using an Ultrasonic Dissection Device</brief_title>
  <official_title>Economisation of Preparation by Using an Ultrasonic Dissection Device in Partial Pancreatoduodenectomy</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Universitätsklinikum Hamburg-Eppendorf</agency>
      <agency_class>Other</agency_class>
    </lead_sponsor>
  </sponsors>
