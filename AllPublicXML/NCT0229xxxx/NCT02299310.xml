  <brief_title>Effect of Valsartan vs Perindopril on HOMA-IR Index in Patients With Chronic Kidney Disease</brief_title>
  <official_title>Effect of Valsartan vs Perindopril on HOMA-IR Index in Patients With Chronic Kidney Disease</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Chinese PLA General Hospital</agency>
      <agency_class>Other</agency_class>
    </lead_sponsor>
