  <brief_title>Prophylactic Quetiapine on Delirium Prevention in Critically Ill Patients</brief_title>
  <sponsors>
    <lead_sponsor>
      <agency>Seoul National University Hospital</agency>
      <agency_class>Other</agency_class>
