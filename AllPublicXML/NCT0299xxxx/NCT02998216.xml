  <primary_outcome>
    <measure>Assessment of pelvic floor symptoms</measure>
    <time_frame>Twelve months</time_frame>
    <description>Using the validated Germen Pelvic Floor Questionnaire (Baessler et al, Neurourol Urodynam 2004)</description>
  </primary_outcome>
  <secondary_outcome>
    <measure>Anatomical outcome / Prolapse stage after surgery</measure>
    <time_frame>Twelve months</time_frame>
