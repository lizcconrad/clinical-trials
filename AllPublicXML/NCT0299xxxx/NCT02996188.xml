  <oversight_info>
    <has_dmc>Yes</has_dmc>
  </oversight_info>
  <brief_summary>
    <textblock>
      The aim of our study was to evaluate hemodynamic changes during routine paracentesis in tense
      ascites using non-invasive inert gas rebreathing.
    </textblock>
  </brief_summary>
  <overall_status>Completed</overall_status>
  <start_date>June 2012</start_date>
  <completion_date type="Actual">November 2013</completion_date>
  <primary_completion_date type="Actual">November 2013</primary_completion_date>
