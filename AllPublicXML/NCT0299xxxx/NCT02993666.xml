  <brief_title>Comparison of Upper and Lower Body Air Warming in Patients Undergoing Thoracic Surgery</brief_title>
  <sponsors>
    <lead_sponsor>
      <agency>Seoul National University Hospital</agency>
      <agency_class>Other</agency_class>
