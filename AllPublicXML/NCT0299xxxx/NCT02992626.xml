  <brief_title>Influence of Dogs on Learning in Children</brief_title>
  <official_title>Influence of Interacting With Dogs on Learning in Children</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Swiss Tropical &amp; Public Health Institute</agency>
      <agency_class>Other</agency_class>
    </lead_sponsor>
    <collaborator>
      <agency>University of Basel</agency>
