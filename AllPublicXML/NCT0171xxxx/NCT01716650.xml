  <oversight_info>
    <has_dmc>Yes</has_dmc>
  </oversight_info>
  <brief_summary>
    <textblock>
      To assess the pain scores before and after saphenous nerve block placement in patients with
      degenerative joint disease of the ankle
    </textblock>
  </brief_summary>
  <overall_status>Unknown status</overall_status>
  <last_known_status>Enrolling by invitation</last_known_status>
  <start_date>October 2012</start_date>
