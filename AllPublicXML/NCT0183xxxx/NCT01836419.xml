  <brief_title>The Clinical Efficacy of Laryngeal Mask Airway in Elderly Patients: Comparison With Young Adults</brief_title>
  <sponsors>
    <lead_sponsor>
      <agency>Yonsei University</agency>
      <agency_class>Other</agency_class>
    </lead_sponsor>
  </sponsors>
