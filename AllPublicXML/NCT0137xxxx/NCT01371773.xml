  <primary_outcome>
    <measure>repositioning success rate</measure>
    <time_frame>up to 10 minutes</time_frame>
  </primary_outcome>
  <secondary_outcome>
    <measure>anatomic parameters</measure>
    <time_frame>up to 1 hours</time_frame>
    <description>tracheal diameter, position of carina, angle between trachea and left mainstem bronchus</description>
  </secondary_outcome>
