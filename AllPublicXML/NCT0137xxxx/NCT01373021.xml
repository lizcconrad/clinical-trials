    <masking>Double (Participant, Outcomes Assessor)</masking>
  </study_design_info>
  <primary_outcome>
    <measure>total amount of administered fentanyl</measure>
    <time_frame>during first 24 hours after surgery</time_frame>
  </primary_outcome>
  <number_of_arms>2</number_of_arms>
  <enrollment type="Actual">95</enrollment>
