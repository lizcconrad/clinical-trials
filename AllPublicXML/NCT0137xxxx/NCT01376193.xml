  <brief_title>Drug Use Investigation for AMERGE (Naratriptan Hydrochloride) Tablet</brief_title>
  <official_title>Drug Use Investigation for AMERGE (Naratriptan Hydrochloride) Tablet</official_title>
  <sponsors>
    <lead_sponsor>
