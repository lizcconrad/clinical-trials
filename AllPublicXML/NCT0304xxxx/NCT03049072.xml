  <brief_title>Ion Therapy Patient Registry</brief_title>
  <acronym>REGI-MA-002015</acronym>
  <official_title>A Prospective Registry Study to Record Clinical Results and Side Effects of Ion Beam Therapy at MedAustron</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>EBG MedAustron GmbH</agency>
