  <brief_title>A Nation-wide Multicenter Clinical Epidemiologic Study of Chinese Females With Advanced Breast</brief_title>
  <official_title>A Nation-wide Multicenter Clinical Epidemiologic Study of Chinese Females With Advanced Breast</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Chinese Academy of Medical Sciences</agency>
      <agency_class>Other</agency_class>
    </lead_sponsor>
  </sponsors>
