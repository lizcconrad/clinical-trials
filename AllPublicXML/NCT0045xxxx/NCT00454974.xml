  <primary_outcome>
    <measure>urea, potassium, phosphate and B2M clearances</measure>
  </primary_outcome>
  <primary_outcome>
    <measure>safety - cardiovascular,no hemolysis, bleeding, infection</measure>
  </primary_outcome>
  <primary_outcome>
    <measure>no ammonia generation from sorbents, control of acid base balance</measure>
  </primary_outcome>
  <secondary_outcome>
