  </secondary_outcome>
  <secondary_outcome>
    <measure>patient satisfaction questionnaire</measure>
  </secondary_outcome>
  <secondary_outcome>
    <measure>affect of treatment of cytokines</measure>
  </secondary_outcome>
  <enrollment>8</enrollment>
  <condition>Renal Failure</condition>
