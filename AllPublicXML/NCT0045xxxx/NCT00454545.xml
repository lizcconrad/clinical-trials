    <has_dmc>Yes</has_dmc>
  </oversight_info>
  <brief_summary>
    <textblock>
      Open pilot study to collect information regarding the effect of atorvastatin on patients with
      active Crohns disease.
    </textblock>
  </brief_summary>
  <overall_status>Completed</overall_status>
  <start_date>October 2006</start_date>
  <completion_date type="Actual">October 2007</completion_date>
  <phase>Phase 2</phase>
  <study_type>Interventional</study_type>
  <has_expanded_access>No</has_expanded_access>
  <study_design_info>
    <allocation>Non-Randomized</allocation>
    <intervention_model>Single Group Assignment</intervention_model>
    <primary_purpose>Treatment</primary_purpose>
    <masking>None (Open Label)</masking>
  </study_design_info>
  <primary_outcome>
    <measure>Inflammatory markers in plasma before and after treatment.</measure>
  </primary_outcome>
  <secondary_outcome>
    <measure>Change in clinical activity index and mucosal inflammation after treatment.</measure>
  </secondary_outcome>
  <enrollment type="Anticipated">12</enrollment>
  <condition>Crohns Disease</condition>
  <intervention>
    <intervention_type>Drug</intervention_type>
    <intervention_name>Atorvastatin</intervention_name>
  </intervention>
  <eligibility>
    <criteria>
      <textblock>
        Inclusion Criteria:

          -  Clinical diagnosis of Crohns disease

          -  C-reactive protein level &gt; 2 mg/L in absence of an infection

          -  Fecal calprotectin &gt; 250 mg/kg or CDAI &gt; 150

        Exclusion Criteria:

          -  CDAI &gt; 450

          -  Prednisolone dosage above 15 mg/day
      </textblock>
    </criteria>
    <gender>All</gender>
    <minimum_age>18 Years</minimum_age>
    <maximum_age>65 Years</maximum_age>
    <healthy_volunteers>No</healthy_volunteers>
  </eligibility>
