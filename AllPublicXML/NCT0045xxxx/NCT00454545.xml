  <brief_title>Atorvastatin in Moderate Active Crohns Disease</brief_title>
  <sponsors>
    <lead_sponsor>
      <agency>Skane University Hospital</agency>
      <agency_class>Other</agency_class>
    </lead_sponsor>
  </sponsors>
