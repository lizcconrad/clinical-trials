  <primary_outcome>
    <measure>serum cardiac troponin I (cTnI)</measure>
    <time_frame>within 72 hours after aortic declamping</time_frame>
  </primary_outcome>
  <secondary_outcome>
    <measure>plasma microRNA-133b (miR-133b)</measure>
    <time_frame>within 72 hours after aortic declamping</time_frame>
  </secondary_outcome>
  <secondary_outcome>
    <measure>plasma microRNA-208a (miR-208a)</measure>
    <time_frame>within 72 hours after aortic declamping</time_frame>
  </secondary_outcome>
  <number_of_arms>2</number_of_arms>
  <enrollment type="Actual">60</enrollment>
  <condition>Myocardial Ischemic Reperfusion Injury</condition>
  <condition>End Stage Heart Disease</condition>
  <condition>Heart Failure</condition>
  <condition>Cardiomyopathy</condition>
  <arm_group>
    <arm_group_label>RIPC+RIPostC</arm_group_label>
