  <brief_title>LifeVest Trends Validation Protocol</brief_title>
  <acronym>TRENDS</acronym>
  <official_title>LifeVest Trends Validation Protocol</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Zoll Medical Corporation</agency>
