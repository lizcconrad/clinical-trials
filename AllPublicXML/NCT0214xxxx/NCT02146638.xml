  <primary_outcome>
    <measure>pain scores</measure>
    <time_frame>data were recorded during the 24 post operative hours</time_frame>
    <description>data were recorded at 1,6,18 and 24 hours after surgery</description>
  </primary_outcome>
  <secondary_outcome>
    <measure>analgesic requirements</measure>
    <time_frame>during the 24 hours after surgery</time_frame>
    <description>if VAS value was equal or higher than 6 patients received ketorolac 30 mg iv</description>
  </secondary_outcome>
  <number_of_arms>2</number_of_arms>
  <enrollment type="Actual">60</enrollment>
