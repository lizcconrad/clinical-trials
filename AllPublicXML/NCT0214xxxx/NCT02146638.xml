  <brief_title>Post Operative Pain Control: Morphine vs Fentanyl</brief_title>
  <official_title>Post Operative Pain Control: Continuous Infusion of Morphine vs Fentanyl. Clinical Outcomes</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Catholic University of the Sacred Heart</agency>
      <agency_class>Other</agency_class>
    </lead_sponsor>
