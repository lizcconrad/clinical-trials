  <brief_title>Phase I/II Study of Monoclonal Factor IX Concentrate for Factor IX Deficiency</brief_title>
  <sponsors>
    <lead_sponsor>
      <agency>National Center for Research Resources (NCRR)</agency>
      <agency_class>NIH</agency_class>
