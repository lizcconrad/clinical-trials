  <brief_title>Pilot Study About Tamoxifen Therapy for Breast Cancer Patients</brief_title>
  <official_title>Pilot Study to Evaluate the Knowledge and Understanding on Tamoxifen Therapy for Breast Cancer Patients</official_title>
  <sponsors>
    <lead_sponsor>
