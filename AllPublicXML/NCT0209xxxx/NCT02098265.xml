  <brief_title>A Closed Loop Neural Activity Triggered Stroke Rehabilitation Device</brief_title>
  <official_title>A Closed Loop Neural Activity Triggered Stroke Rehabilitation Device</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>University of Wisconsin, Madison</agency>
      <agency_class>Other</agency_class>
    </lead_sponsor>
  </sponsors>
