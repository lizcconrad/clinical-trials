  <brief_title>Post Marketing Observational Study in Patients With Pulmonary Arterial Hypertension</brief_title>
  <official_title>Safety and Effectiveness of Adcirca (Tadalafil) in Japanese Patients With Pulmonary Arterial Hypertension: Open-label, Non-interventional Observational Study in Japan</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Eli Lilly and Company</agency>
      <agency_class>Industry</agency_class>
    </lead_sponsor>
  </sponsors>
