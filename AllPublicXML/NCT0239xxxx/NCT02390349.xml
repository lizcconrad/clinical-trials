  <brief_title>&quot;CuraMed&quot; and &quot;Curamin&quot; in Osteoarthritis</brief_title>
  <sponsors>
    <lead_sponsor>
      <agency>EuroPharma, Inc.</agency>
      <agency_class>Industry</agency_class>
