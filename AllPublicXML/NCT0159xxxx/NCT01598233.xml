  <brief_title>Effects of Intragastric Balloon on Bone, Metabolic and Respiratory Parameters</brief_title>
  <official_title>Effects of Intragastric Balloon on Bone, Metabolic and Respiratory Parameters</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Universidade Federal do Rio de Janeiro</agency>
      <agency_class>Other</agency_class>
    </lead_sponsor>
