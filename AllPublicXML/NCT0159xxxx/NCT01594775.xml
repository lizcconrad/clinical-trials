  <brief_summary>
    <textblock>
      effects of intranasal oxytocin and couple interaction on wound healing.

        -  Trial with medicinal product
    </textblock>
  </brief_summary>
  <overall_status>Completed</overall_status>
  <start_date>October 2011</start_date>
  <completion_date type="Actual">October 2013</completion_date>
  <primary_completion_date type="Actual">October 2013</primary_completion_date>
  <phase>Phase 1</phase>
  <study_type>Interventional</study_type>
