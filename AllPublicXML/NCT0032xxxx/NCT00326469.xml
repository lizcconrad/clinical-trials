  <primary_outcome>
    <measure>Time to disease progression (appearance of 1+ new lesions or increase &gt;or= to 20% of sum of the longest diameters of target lesions compared to the lower sum of maximum diameters recorded since the start of the study).</measure>
    <time_frame>Month 3, 6, 9, 12, 15, 18, 21 and 24</time_frame>
  </primary_outcome>
  <secondary_outcome>
    <measure>To evaluate efficacy related to tumour's partial or total response, biological disease markers response, symptomatic control, effect of treatment on patient's quality of life</measure>
    <time_frame>Month 3, 6, 9, 12, 15, 18, 21 and 24</time_frame>
  </secondary_outcome>
  <secondary_outcome>
    <measure>Identify tumour growth stabilization predictive factors under treatment with lanreotide Autogel</measure>
    <time_frame>Month 3, 6, 9, 12, 18, 21 and 24</time_frame>
  </secondary_outcome>
  <secondary_outcome>
    <measure>Tolerance</measure>
    <time_frame>All visits</time_frame>
  </secondary_outcome>
