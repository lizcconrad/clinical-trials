    <time_frame>12 months</time_frame>
  </primary_outcome>
  <secondary_outcome>
    <measure>Decrease in pain measured by VAS (Visual Analogue Scale)</measure>
    <time_frame>12 months</time_frame>
  </secondary_outcome>
