  <brief_summary>
    <textblock>
      Evaluation of safety and effectiveness of Glucobay® under daily-life treatment conditions in
      a large sample of patients.
    </textblock>
  </brief_summary>
  <overall_status>Completed</overall_status>
  <start_date>March 2009</start_date>
  <completion_date type="Actual">December 2010</completion_date>
