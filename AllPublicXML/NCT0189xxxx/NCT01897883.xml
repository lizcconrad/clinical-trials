  <brief_title>Dyslipidemia Management in Chinese Post Stroke Patients</brief_title>
  <official_title>Dyslipidemia Management in Chinese Post Stroke Patients</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>AstraZeneca</agency>
      <agency_class>Industry</agency_class>
    </lead_sponsor>
  </sponsors>
