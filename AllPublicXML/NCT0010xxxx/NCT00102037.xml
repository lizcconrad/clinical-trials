  <eligibility>
    <criteria>
      <textblock>
        Inclusion Criteria:

          -  Elective spinal fusion surgery.

        Exclusion Criteria:

          -  History of thrombotic disorders (myocardial infarction, deep vein thrombosis,
             pulmonary embolism, stroke, disseminated intravascular coagulation or peripheral
             artery thrombosis)

          -  Any trauma within the last 3 months leading to hospitalization &gt; 24 hours

          -  Angina or known coronary artery disease
      </textblock>
    </criteria>
    <gender>All</gender>
    <minimum_age>18 Years</minimum_age>
    <maximum_age>65 Years</maximum_age>
    <healthy_volunteers>No</healthy_volunteers>
  </eligibility>
