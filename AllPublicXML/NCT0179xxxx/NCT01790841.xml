  <brief_title>DF4 Master Study (Safety and Efficacy Study)</brief_title>
  <official_title>Master Study of the BIOTRONIK DF4 System</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Biotronik SE &amp; Co. KG</agency>
      <agency_class>Industry</agency_class>
