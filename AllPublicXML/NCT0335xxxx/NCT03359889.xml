  <brief_title>PraxbindTM India PMS Program</brief_title>
  <official_title>Post Marketing Surveillance Program of Idarucizumab Use in India.</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Boehringer Ingelheim</agency>
      <agency_class>Industry</agency_class>
