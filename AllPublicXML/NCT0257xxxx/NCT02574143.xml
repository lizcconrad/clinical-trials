  <eligibility>
    <study_pop>
      <textblock>
        Patients with non-CF bronchiectasis
      </textblock>
    </study_pop>
    <sampling_method>Non-Probability Sample</sampling_method>
    <criteria>
      <textblock>
        Inclusion Criteria:

          -  A clinical history consistent with bronchiectasis

          -  (High resolution) computed tomography (CT) scan of the chest demonstrating
             bronchiectasis affecting 1 or more lobes

        Exclusion Criteria:

          -  Bronchiectasis due to known cystic fibrosis (CF)

          -  Age &lt;18 years

          -  Interstitial lung disease

          -  Prior lung or heart-lung transplantation
      </textblock>
    </criteria>
    <gender>All</gender>
    <minimum_age>18 Years</minimum_age>
    <maximum_age>N/A</maximum_age>
    <healthy_volunteers>No</healthy_volunteers>
  </eligibility>
