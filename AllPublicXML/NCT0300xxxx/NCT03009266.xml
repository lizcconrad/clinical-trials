  <primary_outcome>
    <measure>Dose optimization</measure>
    <time_frame>3 months</time_frame>
    <description>Dose ranging in normal controls to define highest dose of ultrasound contrast agent that does not produce delayed opacification from myocardial retention</description>
  </primary_outcome>
  <primary_outcome>
    <measure>Detection of Ischemia</measure>
    <time_frame>1 year</time_frame>
  </primary_outcome>
  <number_of_arms>2</number_of_arms>
