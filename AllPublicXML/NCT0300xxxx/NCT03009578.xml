    <arm_group_label>Oral ferrous bis-glycinate</arm_group_label>
    <arm_group_type>Active Comparator</arm_group_type>
    <description>Women will receive oral ferrous bis-glycinate fully reacted amino acid 27 mg tablets</description>
  </arm_group>
