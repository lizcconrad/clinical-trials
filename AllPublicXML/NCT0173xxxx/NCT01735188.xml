  <brief_title>A Natural History Study of Molybdenum Cofactor and Isolated Sulfite Oxidase Deficiencies</brief_title>
  <official_title>A Natural History Study Of Molybdenum Cofactor And Isolated Sulfite Oxidase Deficiencies</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Alexion Pharmaceuticals</agency>
      <agency_class>Industry</agency_class>
    </lead_sponsor>
  </sponsors>
