  <primary_outcome>
    <measure>Improvement in Asthma Control Test (ACT) score</measure>
    <time_frame>Three months</time_frame>
  </primary_outcome>
  <secondary_outcome>
    <measure>Improvement in pulmonary function tests values (FEV1%, etc.)</measure>
    <time_frame>Three months</time_frame>
  </secondary_outcome>
