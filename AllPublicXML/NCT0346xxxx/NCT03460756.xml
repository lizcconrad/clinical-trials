  <primary_outcome>
    <measure>Hamilton Depression Rating Scale</measure>
    <time_frame>38 days</time_frame>
    <description>Efficacy of oral administered ganaxolone vs. placebo as assessed by change from baseline in the HAMD17 total score</description>
  </primary_outcome>
  <primary_outcome>
    <measure>Treatment-Emergent Adverse Events</measure>
    <time_frame>38 days</time_frame>
