  <brief_title>Trait Anxiety and Defensive Networks</brief_title>
  <sponsors>
    <lead_sponsor>
      <agency>University of Electronic Science and Technology of China</agency>
      <agency_class>Other</agency_class>
    </lead_sponsor>
