  <primary_outcome>
    <measure>Proportion of subjects with reduction in dystonia symptoms as assessed by BFMDRS score</measure>
    <time_frame>up to 3 years</time_frame>
  </primary_outcome>
  <primary_outcome>
    <measure>Proportion of cervical dystonia subjects with reduction in symptoms as assessed by TWSTRS score</measure>
    <time_frame>up to 3 years</time_frame>
  </primary_outcome>
  <other_outcome>
    <measure>Change in SF-36v2 score after DBS (SF-10v2 in patients under the age of 18 years at the time of consent)</measure>
    <time_frame>upto 3 years</time_frame>
  </other_outcome>
