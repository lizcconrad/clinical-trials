  </study_design_info>
  <primary_outcome>
    <measure>Dizziness Handicap Inventory Score</measure>
    <time_frame>3 months</time_frame>
    <description>A change in the DHI score after treatment (before treatment and after, 3 months in between)</description>
  </primary_outcome>
  <secondary_outcome>
    <measure>Romberg on foam test</measure>
    <time_frame>3 months</time_frame>
    <description>A change in the time participants will stand without falling on a foam (before treatment and after, 3 months in between)</description>
  </secondary_outcome>
  <enrollment type="Actual">0</enrollment>
