  <brief_title>A Multicenter Comparative Trial of Zonisamide and Topiramate as Initial Monotherapy in Untreated Epilepsies</brief_title>
  <sponsors>
    <lead_sponsor>
      <agency>Eisai Korea Inc.</agency>
      <agency_class>Industry</agency_class>
    </lead_sponsor>
  </sponsors>
  <source>Eisai Inc.</source>
  <brief_summary>
    <textblock>
      To assess the efficacy and safety of Zonisamide and Topiramate as Initial Monotherapy in
      Untreated Epilepsies
    </textblock>
  </brief_summary>
  <overall_status>Completed</overall_status>
  <start_date>September 2005</start_date>
  <completion_date type="Actual">December 2008</completion_date>
  <primary_completion_date type="Actual">August 2008</primary_completion_date>
