  </study_design_info>
  <primary_outcome>
    <measure>Seizure frequency</measure>
    <time_frame>2, 4, 8, 12, 16, 20, 24 weeks</time_frame>
  </primary_outcome>
  <secondary_outcome>
    <measure>Cognitive function</measure>
    <time_frame>0, 24 weeks</time_frame>
  </secondary_outcome>
  <number_of_arms>2</number_of_arms>
