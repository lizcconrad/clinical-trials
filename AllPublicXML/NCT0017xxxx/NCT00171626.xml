  <primary_outcome>
    <measure>WOMAC pain score in target knee at Week 12</measure>
  </primary_outcome>
  <primary_outcome>
    <measure>WOMAC physical function score in target knee at Week 12</measure>
  </primary_outcome>
  <primary_outcome>
    <measure>Global rating of disease activity by patient at Week 12</measure>
  </primary_outcome>
  <secondary_outcome>
    <measure>WOMAC pain and physical function scores in target knee and global rating of disease activity by patient at Weeks 1, 4 and 8</measure>
  </secondary_outcome>
