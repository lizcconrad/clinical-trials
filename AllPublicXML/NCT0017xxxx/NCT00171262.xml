  <primary_outcome>
    <measure>Change from baseline in serum inflammatory markers after 52 weeks</measure>
  </primary_outcome>
  <secondary_outcome>
    <measure>Change from baseline in fibrosis parameters and endothelial function after 52 weeks</measure>
  </secondary_outcome>
  <secondary_outcome>
