    <primary_purpose>Prevention</primary_purpose>
    <masking>None (Open Label)</masking>
  </study_design_info>
  <primary_outcome>
    <measure>Assess change in oral hygiene using plaque index Löe &amp; Silness</measure>
    <time_frame>Baseline, 1 month and 6 months</time_frame>
    <description>Plaque index Löe &amp; Silness (Time: baseline, 1 month and 6 months)</description>
  </primary_outcome>
  <secondary_outcome>
    <measure>Assess change in oral hygiene using gingival index Löe &amp; Silness</measure>
    <time_frame>Baseline, 1 month and 6 months</time_frame>
    <description>Gingival index Löe &amp; Silness ( Time: baseline, 1 month and 6 months)</description>
  </secondary_outcome>
  <number_of_arms>2</number_of_arms>
  <enrollment type="Actual">130</enrollment>
  <condition>Oral Hygiene</condition>
