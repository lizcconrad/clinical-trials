  <brief_title>An Evaluation of the FreeStyle Flash Glucose Monitoring System</brief_title>
  <official_title>An Evaluation of the Usability, Skin Reactions and Accuracy of the FreeStyle Libre Flash Glucose Monitoring System</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Jessa Hospital</agency>
      <agency_class>Other</agency_class>
