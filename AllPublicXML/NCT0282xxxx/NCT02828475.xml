  <brief_title>CALYPSO Pilot Study: Machine Learning Based Predictions of Surgical Complications</brief_title>
  <acronym>CALYPSO</acronym>
  <official_title>Pilot Study for a Clinical Analytical Platform for Surgical Outcomes</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Duke University</agency>
