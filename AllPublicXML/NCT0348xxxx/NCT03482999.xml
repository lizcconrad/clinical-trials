  </study_design_info>
  <primary_outcome>
    <measure>reduce the post-operative duration of stay</measure>
    <time_frame>30 days</time_frame>
    <description>duration</description>
  </primary_outcome>
  <primary_outcome>
    <measure>reduce the surgical revision rate</measure>
