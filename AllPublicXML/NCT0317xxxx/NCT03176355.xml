  <primary_outcome>
    <measure>Disappearance of the watering of the eye reported by the patients and by fluorescein disappearance test</measure>
    <time_frame>1 month</time_frame>
    <description>Patency of the lacrimal passage</description>
  </primary_outcome>
  <primary_outcome>
    <measure>Disappearance of lacrimal sac swelling</measure>
    <time_frame>1 month</time_frame>
    <description>No evident swelling in the medial side of the eye</description>
  </primary_outcome>
  <number_of_arms>1</number_of_arms>
