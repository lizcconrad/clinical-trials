  <brief_title>Characterization of Local and Systemic Bone Markers in Diabetes Patients With Charcot Osteoarthropathy</brief_title>
  <sponsors>
    <lead_sponsor>
      <agency>Bispebjerg Hospital</agency>
      <agency_class>Other</agency_class>
    </lead_sponsor>
  </sponsors>
