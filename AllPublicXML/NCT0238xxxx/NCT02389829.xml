  <primary_outcome>
    <measure>Sustained headache relief</measure>
    <time_frame>48 hours</time_frame>
    <description>Achieve a headache level of mild or none within two hours of medication administration and maintain a level of mild or none for 48 hours without use of rescue medication</description>
  </primary_outcome>
  <secondary_outcome>
    <measure>Rescue medication</measure>
    <time_frame>48 hours</time_frame>
    <description>Need for additional medication to treat headache</description>
  </secondary_outcome>
