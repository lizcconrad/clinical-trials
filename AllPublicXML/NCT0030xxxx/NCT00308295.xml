    <intervention_model>Parallel Assignment</intervention_model>
    <primary_purpose>Treatment</primary_purpose>
    <masking>Double</masking>
  </study_design_info>
  <primary_outcome>
    <measure>To determine whether AHA-recommended fish oil therapy beneficially affects the pro-inflammatory/anti-inflammatory blood fatty acid balance</measure>
  </primary_outcome>
  <secondary_outcome>
    <measure>To test the safety and tolerability of fish oil therapy in hemodialysis patients</measure>
  </secondary_outcome>
  <secondary_outcome>
    <measure>To measure the effects of fish oil treatment on cardiovascular and inflammatory risk factors</measure>
  </secondary_outcome>
  <enrollment>27</enrollment>
  <condition>End-Stage Renal Disease Patients on Hemodialysis</condition>
  <intervention>
    <intervention_type>Drug</intervention_type>
    <intervention_name>Fish oil capsules</intervention_name>
  </intervention>
  <intervention>
