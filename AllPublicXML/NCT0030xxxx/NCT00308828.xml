  <eligibility>
    <study_pop>
      <textblock>
        Patients on hemodialysis
      </textblock>
    </study_pop>
    <sampling_method>Non-Probability Sample</sampling_method>
    <criteria>
      <textblock>
        Inclusion Criteria:

          -  Chronic hemodialysis

          -  Age &gt; 18-year old

        Exclusion Criteria:

          -  Prior specific osteoporosis treatment except vitamin D and calcium supplement
             administration; active malignancy

          -  Recent pregnancy

          -  Immobilization
      </textblock>
    </criteria>
    <gender>All</gender>
