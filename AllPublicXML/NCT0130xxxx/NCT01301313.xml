  <brief_title>Efficacy and Safety of Levosimendan in Severe Acute Heart Failure in Critical Children</brief_title>
  <official_title>Phase II Study to Evaluate the Efficacy and Safety of Levosimendan in Severe Acute Heart Failure in Critical Children</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Jose Luis Vazquez Martinez</agency>
      <agency_class>Other</agency_class>
    </lead_sponsor>
