  <brief_title>Influenza Vaccine in HIV Study</brief_title>
  <official_title>A Comparison of Immune Responses to the Licensed Trivalent Inactivated Influenza Vaccine in HIV-positive and HIV-negative Subjects</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>University of Melbourne</agency>
      <agency_class>Other</agency_class>
    </lead_sponsor>
  </sponsors>
