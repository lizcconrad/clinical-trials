  <primary_outcome>
    <measure>Decrease on Visual Analogue Scale (VAS) score for Fibromyalgia related pain and pain scales of the Fibromyalgia Impact Questionnaire</measure>
    <time_frame>baseline, directly after treatment, 3 weeks after treatment</time_frame>
  </primary_outcome>
  <secondary_outcome>
    <measure>Changes in scores of the pain vigilance and awareness questionnaire, pain catastrophizing scale, fibromyalgia impact questionnaire and modified Fatigue Impact Scale</measure>
    <time_frame>base line, directly after treatment and 3 weeks after treatment</time_frame>
  </secondary_outcome>
  <number_of_arms>2</number_of_arms>
