  <brief_title>Hernia Repair Four Arm Comparative Study</brief_title>
  <official_title>Four Arm Randomised Trial Comparing Laparoscopic And Open Hernia Repairs</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Faculty of Medicine, University of Alexandria</agency>
      <agency_class>Other</agency_class>
