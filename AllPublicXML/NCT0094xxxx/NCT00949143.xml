  <brief_title>Effects of Axle Positions on Wheelchair Skills in Manual Wheelchair Users</brief_title>
  <official_title>Effects of Axle Positions on Wheelchair Skills in Manual Wheelchair Users</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Nova Scotia Health Authority</agency>
      <agency_class>Other</agency_class>
