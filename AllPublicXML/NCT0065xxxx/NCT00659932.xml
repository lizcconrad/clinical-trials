  <brief_title>Dealing With Anxiety: A Cognitive Behavioural Program for Diabetes</brief_title>
  <official_title>Dealing With Anxiety: A Pilot Cognitive Behavioural Program for Diabetic Clinic Outpatient Attendees</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Hunter and New England Health</agency>
      <agency_class>Other</agency_class>
