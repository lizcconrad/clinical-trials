  <brief_title>Doppler-guided Endoscopic Treatment in Peptic Ulcer Bleeding</brief_title>
  <sponsors>
    <lead_sponsor>
      <agency>Odense University Hospital</agency>
      <agency_class>Other</agency_class>
    </lead_sponsor>
  </sponsors>
