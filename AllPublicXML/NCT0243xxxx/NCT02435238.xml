  <brief_title>AWARE - Chronic Urticaria</brief_title>
  <acronym>AWARE</acronym>
  <official_title>AWARE: A World-wide Antihistamine-Refractory Chronic Urticaria Patient Evaluation</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Novartis Pharmaceuticals</agency>
      <agency_class>Industry</agency_class>
    </lead_sponsor>
  </sponsors>
