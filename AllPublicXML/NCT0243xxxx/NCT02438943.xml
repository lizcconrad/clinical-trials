    <masking>Single (Participant)</masking>
  </study_design_info>
  <primary_outcome>
    <measure>Proportion of persons attending health centers in the Southeast Health region with normal lipid values</measure>
    <time_frame>1 year</time_frame>
  </primary_outcome>
  <secondary_outcome>
    <measure>Proportion of persons attending health centers in the Southeast Health region with normal glucose values</measure>
    <time_frame>1 year</time_frame>
  </secondary_outcome>
  <secondary_outcome>
    <measure>Proportion of persons attending health centers in the Southeast Health region with normal blood pressure values</measure>
    <time_frame>1 year</time_frame>
  </secondary_outcome>
  <number_of_arms>2</number_of_arms>
  <enrollment type="Anticipated">500</enrollment>
