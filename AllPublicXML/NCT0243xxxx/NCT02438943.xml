  <brief_title>An Intervention to Improve Management of Dyslipidemia in Primary Care</brief_title>
  <official_title>A Cluster Randomized Controlled Trial of an Intervention to Improve the Management of Dyslipidemia in Primary Care</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>The University of The West Indies</agency>
      <agency_class>Other</agency_class>
    </lead_sponsor>
  </sponsors>
