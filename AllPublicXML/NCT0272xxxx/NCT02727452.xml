  <primary_outcome>
    <measure>Changes in Cortisol Level</measure>
    <time_frame>30 and 60 minutes after bonding</time_frame>
    <description>Cortisol is assessed as a stress parameter by Saliva. It will be tested in the mother and child to measure the effect of immediate bonding with the mother compared to the other 2 conditions on the stress level</description>
  </primary_outcome>
  <secondary_outcome>
    <measure>Depression</measure>
    <time_frame>1-3 days and 6 weeks after childbirth</time_frame>
    <description>assessed by EPDS</description>
  </secondary_outcome>
  <secondary_outcome>
    <measure>Mother-child-bonding</measure>
    <time_frame>1-3 days and 6 weeks after childbirth</time_frame>
    <description>assessed by PBQ</description>
  </secondary_outcome>
  <secondary_outcome>
    <measure>Child's heart ratio</measure>
