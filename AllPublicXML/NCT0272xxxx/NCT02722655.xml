  <brief_title>Cohort of Mexican Children With Diabetes Mellitus (CMC-DM)</brief_title>
  <acronym>CMC-DM</acronym>
  <official_title>Characteristics and Evolution of Diabetes Mellitus in Mexican Children: Cohort Study</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Hospital Regional de Alta Especialidad del Bajio</agency>
      <agency_class>Other</agency_class>
    </lead_sponsor>
  </sponsors>
