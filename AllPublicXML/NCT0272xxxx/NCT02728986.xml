  <brief_title>Cost Evaluation of Venous Leg Ulcers Management</brief_title>
  <acronym>EPIC</acronym>
  <official_title>Comparative and Prospective Evaluation of Direct Cost of Venous Leg Ulcers Management With Two Compression Systems</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>3M</agency>
      <agency_class>Industry</agency_class>
    </lead_sponsor>
  </sponsors>
