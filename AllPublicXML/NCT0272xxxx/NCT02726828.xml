    <time_frame>24 hours postoperative</time_frame>
    <description>the time passed till the first request of rescue analgesia by the patients</description>
  </primary_outcome>
  <primary_outcome>
    <measure>total analgesic consumption</measure>
    <time_frame>24 hours postoperative</time_frame>
    <description>the total amount of rescue analgesic drug used allover follow up period</description>
  </primary_outcome>
