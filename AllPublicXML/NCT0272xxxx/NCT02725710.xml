  <brief_title>Gabapentin as an Adjunct to Perioperative Pain Management Regimens for Uterine Aspiration</brief_title>
  <acronym>GABA</acronym>
  <official_title>Gabapentin as an Adjunct to Perioperative Pain Management Regimens for Uterine Aspiration: a Randomized Controlled Trial</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Duke University</agency>
      <agency_class>Other</agency_class>
    </lead_sponsor>
  </sponsors>
