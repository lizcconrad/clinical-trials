  <brief_title>Nonintervention Study on Peritoneal Metastasis of Stage IV Gastric Cancer</brief_title>
  <official_title>Prospective and Non-interventional Study on Peritoneal Metastasis of Stage IV Gastric Cancer</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Harbin Medical University</agency>
      <agency_class>Other</agency_class>
    </lead_sponsor>
