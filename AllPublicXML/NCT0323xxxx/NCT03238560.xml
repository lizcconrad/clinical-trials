  <primary_outcome>
    <measure>plasma concentration</measure>
    <time_frame>3(2-4) h, 8(6-10) h, 22 (20-24) h after oral administration</time_frame>
    <description>To detect the plasma concentrations of montelukast at 3(2-4) h, 8(6-10) h, 22 (20-24) h after oral administration.</description>
  </primary_outcome>
  <primary_outcome>
    <measure>bronchoalveolar lavage fluid(BALF)</measure>
    <time_frame>Procedure (When the patient underwent fiberoptic bronchoscopy)</time_frame>
    <description>To detect the concentrations of montelukast in bronchoalveolar lavage fluid</description>
  </primary_outcome>
  <enrollment type="Anticipated">100</enrollment>
  <condition>Asthma</condition>
  <intervention>
    <intervention_type>Drug</intervention_type>
