  <eligibility>
    <study_pop>
      <textblock>
        Schizophrenia , Bipolar Disorder , Major Depression
      </textblock>
    </study_pop>
    <sampling_method>Non-Probability Sample</sampling_method>
    <criteria>
      <textblock>
        Inclusion Criteria:

          -  Diagnosis with Schizophrenia , Bipolar Disorder or Major Depression by DSM-5

        Exclusion Criteria:

          -  Unstable physical conditions
      </textblock>
    </criteria>
    <gender>All</gender>
    <minimum_age>18 Years</minimum_age>
    <maximum_age>65 Years</maximum_age>
    <healthy_volunteers>No</healthy_volunteers>
  </eligibility>
