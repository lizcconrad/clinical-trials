    <observational_model>Cohort</observational_model>
    <time_perspective>Retrospective</time_perspective>
  </study_design_info>
  <primary_outcome>
    <measure>Reviewing patients symptoms following resection</measure>
    <time_frame>up to 3 years</time_frame>
    <description>Patients will be contacted via phone and will be required to answer questions over the phone. Health questionnaires may also be sent at the patients request to complete and post back.</description>
  </primary_outcome>
  <number_of_groups>1</number_of_groups>
  <enrollment type="Anticipated">200</enrollment>
  <condition>Barretts Esophagus</condition>
  <arm_group>
    <arm_group_label>Post Barretts Excision</arm_group_label>
    <description>Patients who have undergone an EMR for Barretts Oesophagus</description>
  </arm_group>
  <eligibility>
    <study_pop>
      <textblock>
        Patients who have or have had Barrett's Oesophagus with high grade dysplasia or
        adenocarcinoma.
      </textblock>
    </study_pop>
    <sampling_method>Non-Probability Sample</sampling_method>
    <criteria>
      <textblock>
        Inclusion Criteria:

          -  18 years or over

          -  Have or have had Barrett's Oesophagus

        Exclusion Criteria:

          -  Do not have Barrett's Oesophagus

          -  Have not had Barrett's Oesophagus resected at Westmead Hospital
      </textblock>
    </criteria>
    <gender>All</gender>
    <minimum_age>18 Years</minimum_age>
    <maximum_age>99 Years</maximum_age>
    <healthy_volunteers>No</healthy_volunteers>
  </eligibility>
