      <textblock>
        Residents in anesthesiology and intensive care
      </textblock>
    </study_pop>
    <sampling_method>Non-Probability Sample</sampling_method>
    <criteria>
      <textblock>
        Inclusion Criteria:

          -  Tunisian nationality

          -  Resident in anesthesiology and intensive care

          -  training period : 6 months to four year

        Exclusion Criteria:

          -  training done outside tunisia
      </textblock>
    </criteria>
    <gender>All</gender>
    <minimum_age>30 Years</minimum_age>
    <maximum_age>40 Years</maximum_age>
    <healthy_volunteers>No</healthy_volunteers>
