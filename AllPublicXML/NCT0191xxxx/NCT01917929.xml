  <brief_title>Secur-Fit Advanced Outcomes Study</brief_title>
  <official_title>A Prospective, Post-market, Multi-center Evaluation of the Clinical Outcomes of the Secur-Fit Advanced Hip Stem</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Stryker Orthopaedics</agency>
      <agency_class>Industry</agency_class>
    </lead_sponsor>
