  <brief_title>Neoadjuvant Chemotherapy Versus Standard Treatment in Patients With Locally Advanced Colon Cancer</brief_title>
  <official_title>Neoadjuvant Chemotherapy Versus Standard Treatment in Patients With Locally Advanced Colon Cancer</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Vejle Hospital</agency>
      <agency_class>Other</agency_class>
    </lead_sponsor>
  </sponsors>
