  <brief_title>I Phase Surgery Versus Staged Surgery for Synchronous Liver Metastasis of Colorectal Cancer</brief_title>
  <sponsors>
    <lead_sponsor>
      <agency>Fudan University</agency>
      <agency_class>Other</agency_class>
    </lead_sponsor>
  </sponsors>
