    <intervention_type>Drug</intervention_type>
    <intervention_name>metformin, glimepiride, insulin</intervention_name>
    <description>s.glucose control according to ESC guidelines</description>
    <arm_group_label>Multifactorial intervention</arm_group_label>
  </intervention>
  <intervention>
    <intervention_type>Behavioral</intervention_type>
    <intervention_name>weight reduction</intervention_name>
    <description>diet tips</description>
    <arm_group_label>Multifactorial intervention</arm_group_label>
  </intervention>
