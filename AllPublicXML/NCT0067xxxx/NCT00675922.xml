                <counts group_id="E1" events="1" subjects_affected="1" subjects_at_risk="98"/>
              </event>
            </event_list>
          </category>
          <category>
            <title>Respiratory, thoracic and mediastinal disorders</title>
            <event_list>
              <event>
                <sub_title>Patient aspiration and death</sub_title>
                <description>2001: 62% burn after discharge, patient aspirated during the night ACLS provided, patient expired. PI opinion is AE not related to study.</description>
