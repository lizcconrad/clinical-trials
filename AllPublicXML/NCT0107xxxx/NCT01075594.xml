  <brief_title>Study of Undertreatment of Patients With Dyslipidemia in Bulgaria</brief_title>
  <acronym>CEPHEUS</acronym>
  <official_title>Centralized Pan-Bulgarian Survey on the Undertreatment of Hypercholesterolemia</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>AstraZeneca</agency>
      <agency_class>Industry</agency_class>
