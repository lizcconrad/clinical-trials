    <other_name>Sutent</other_name>
  </intervention>
  <eligibility>
    <study_pop>
      <textblock>
        Study population will be selected by primary care clinic.
      </textblock>
    </study_pop>
    <sampling_method>Probability Sample</sampling_method>
    <criteria>
      <textblock>
        Inclusion Criteria:

          -  Age 18 years and above

          -  Diagnosed with metastatic renal cell carcinoma or gastrointestinal stromal tumor after
             imatinib treatment failure or intolerance

        Exclusion Criteria:

          -  Subjects with conditions that are contraindicated with sunitinib malate
      </textblock>
    </criteria>
    <gender>All</gender>
    <minimum_age>18 Years</minimum_age>
