  <primary_outcome>
    <measure>Identification of the patient population for which a CG Future Annuloplasty Ring or Band is chosen to repair the mitral valve insufficiency</measure>
    <time_frame>Within 3 months prior to implantation</time_frame>
  </primary_outcome>
  <primary_outcome>
    <measure>The percentage of patients that are chronically relieved from mitral valve insufficiency</measure>
    <time_frame>Within 3 months prior to implantation and at 9 month follow-up</time_frame>
  </primary_outcome>
  <primary_outcome>
    <measure>The level of mitral valve regurgitation</measure>
    <time_frame>Within 3 months prior to implantation and at 9 month follow-up</time_frame>
  </primary_outcome>
