  <brief_title>A Study Evaluating the Safety and Efficacy of Long-term Dosing of Romiplostim in Thrombocytopenic Pediatric Subjects With Immune (Idiopathic) Thrombocytopenia Purpura</brief_title>
  <official_title>An Open Label Study Evaluating the Safety and Efficacy of Long-term Dosing of Romiplostim in Thrombocytopenic Pediatric Subjects With Immune (Idiopathic) Thrombocytopenia Purpura (ITP)</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Amgen</agency>
      <agency_class>Industry</agency_class>
    </lead_sponsor>
  </sponsors>
