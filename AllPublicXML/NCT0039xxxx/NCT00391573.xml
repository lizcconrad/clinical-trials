    <primary_purpose>Treatment</primary_purpose>
    <masking>Single</masking>
  </study_design_info>
  <primary_outcome>
    <measure>The difference in VAS score between the two groups</measure>
  </primary_outcome>
  <secondary_outcome>
    <measure>Graft hyperemia, oedema and tarsal conjunctival papillary hypertrophy</measure>
  </secondary_outcome>
  <secondary_outcome>
    <measure>Surgical complications</measure>
  </secondary_outcome>
  <secondary_outcome>
    <measure>Pterygium recurrence</measure>
  </secondary_outcome>
  <enrollment>32</enrollment>
  <condition>Pterygium</condition>
