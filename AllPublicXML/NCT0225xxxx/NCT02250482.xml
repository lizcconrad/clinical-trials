  <study_design_info>
    <primary_purpose>Treatment</primary_purpose>
  </study_design_info>
  <primary_outcome>
    <measure>Incremental Recovery for plasma Factor VIII</measure>
    <time_frame>90 minutes after pre-operative bolus dose</time_frame>
    <description>Incremental recovery is defined as peak rise in plasma Factor VIII levels divided by Factor VIII dose in IU/KG</description>
  </primary_outcome>
  <number_of_arms>1</number_of_arms>
