  <primary_outcome>
    <measure>Improvement in cognitive test performance with iPod games</measure>
    <time_frame>8 weeks</time_frame>
    <description>improvement in cognitive performance on a battery of cognitive tests (Psychometric Hepatic Encephalopathy Score, Inhibitory Control test and Verbal Learning) after iPod tests</description>
  </primary_outcome>
  <secondary_outcome>
    <measure>Improvement in health-related quality of life</measure>
    <time_frame>8 weeks</time_frame>
    <description>Sickness Impact Profile will be used before and after the treatment</description>
  </secondary_outcome>
  <secondary_outcome>
    <measure>Improvement in brain MRI parameters</measure>
    <time_frame>4 weeks</time_frame>
    <description>change in detailed imaging parameters related to diffusion tensor imaging, resting state and voxel-based morphometry</description>
  </secondary_outcome>
  <number_of_arms>1</number_of_arms>
