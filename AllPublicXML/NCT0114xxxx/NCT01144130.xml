  <primary_outcome>
    <measure>Duration of REM sleep before and first postoperative night</measure>
  </primary_outcome>
  <enrollment type="Actual">10</enrollment>
  <condition>REM Sleep Measurement</condition>
  <eligibility>
    <study_pop>
      <textblock>
        Patients above 60 years undergoing hip/knee replacement surgery in a fest track set-up.
      </textblock>
    </study_pop>
    <sampling_method>Non-Probability Sample</sampling_method>
    <criteria>
      <textblock>
        Inclusion Criteria:

          -  above 60

          -  ASA classification I-IV

        Exclusion Criteria:

          -  general anaesthesia within 90 days

          -  daily use of sedatives

          -  alcohol abuse

          -  insufficient written and verbal Danish

          -  severe hearing loss and poor sight

          -  Parkinsons Disease or other functional neurological deficits

          -  Mini mental status &lt; 24
      </textblock>
    </criteria>
    <gender>All</gender>
    <minimum_age>60 Years</minimum_age>
    <maximum_age>N/A</maximum_age>
    <healthy_volunteers>No</healthy_volunteers>
  </eligibility>
