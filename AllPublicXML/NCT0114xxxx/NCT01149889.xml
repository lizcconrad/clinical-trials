  <oversight_info>
    <has_dmc>No</has_dmc>
  </oversight_info>
  <brief_summary>
    <textblock>
      The investigators purpose is to offer active Transcranial Direct Current Stimulation (tDCS)
      in patients of the investigators previous study who received either placebo or sertraline and
      have not responded.
    </textblock>
  </brief_summary>
  <overall_status>Completed</overall_status>
  <start_date>June 2010</start_date>
  <completion_date type="Actual">December 2011</completion_date>
  <primary_completion_date type="Actual">September 2011</primary_completion_date>
  <phase>Phase 2/Phase 3</phase>
  <study_type>Interventional</study_type>
