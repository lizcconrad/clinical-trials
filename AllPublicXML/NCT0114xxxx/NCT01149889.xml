  <brief_title>Transcranial Direct Current Stimulation to Treat Major Depressive Disorder</brief_title>
  <official_title>An Open-label, Crossover Study on Major Depressive Disorder Using Transcranial Direct Current Stimulation</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>University of Sao Paulo</agency>
      <agency_class>Other</agency_class>
    </lead_sponsor>
  </sponsors>
