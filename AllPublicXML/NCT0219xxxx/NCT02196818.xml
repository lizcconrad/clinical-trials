  <study_design_info>
    <observational_model>Cohort</observational_model>
    <time_perspective>Prospective</time_perspective>
  </study_design_info>
  <primary_outcome>
    <measure>The Kaplan-Meier analysis as a measure of implant performance.</measure>
    <time_frame>5 years</time_frame>
  </primary_outcome>
  <secondary_outcome>
    <measure>The Harris Hip Score.</measure>
    <time_frame>pre-op, 3/6 months, 1,2 and 5 years</time_frame>
  </secondary_outcome>
  <secondary_outcome>
    <measure>Radiological analysis as a meausure of safety.</measure>
    <time_frame>3/6 months, 1,2 and 5 years</time_frame>
  </secondary_outcome>
  <number_of_groups>1</number_of_groups>
  <enrollment type="Anticipated">200</enrollment>
