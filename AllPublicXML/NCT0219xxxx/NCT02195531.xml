  <brief_title>BIG4 CPAP Study Educational Materials and Usage Feedback to Promote CPAP Adherence</brief_title>
  <official_title>BIG4 CPAP Educational Materials and Usage Feedback to Promote CPAP Adherence</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Philips Respironics</agency>
      <agency_class>Industry</agency_class>
    </lead_sponsor>
