  <primary_outcome>
    <measure>Response will be defined as achievement of normal uric acid levels (less than or = to 7.0mg/dL)</measure>
  </primary_outcome>
  <enrollment type="Actual">38</enrollment>
  <condition>Hyperuricemia</condition>
