  <primary_outcome>
    <measure>in ICU stay complications</measure>
    <time_frame>Within the 28 first days after ICU admission date</time_frame>
    <description>Nosocomial Infections (epidemiology, risk factors, antibiotic susceptibility of pathogens) Organ failures (incidence, risk factors) Bleeding, hemorrhage Intra-cranial hypertension, brain ischemia Mechanical ventilation weaning, extubation failure</description>
  </primary_outcome>
  <secondary_outcome>
    <measure>Duration of mechanical ventilation</measure>
    <time_frame>in ICU (up to 90 days)</time_frame>
  </secondary_outcome>
  <secondary_outcome>
    <measure>ICU length of stay</measure>
    <time_frame>in ICU (up to 90 days)</time_frame>
  </secondary_outcome>
  <other_outcome>
    <measure>Death</measure>
    <time_frame>in ICU (up to 90 days)</time_frame>
  </other_outcome>
