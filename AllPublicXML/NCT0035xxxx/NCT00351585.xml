  <primary_outcome>
    <measure>Change from baseline in maximal insulin secretory capacity at 12 weeks</measure>
  </primary_outcome>
  <primary_outcome>
    <measure>Durability of this effect after a 2-week washout</measure>
  </primary_outcome>
  <secondary_outcome>
