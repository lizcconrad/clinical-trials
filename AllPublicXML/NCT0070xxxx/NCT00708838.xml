  <brief_title>Levels of Circulating T Cells Expressing VLA-1 Collagen Receptors</brief_title>
  <official_title>VLA-1 Receptors on Peripheral T Cells in Ischemic Heart Disease Patients</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Sheba Medical Center</agency>
      <agency_class>Other</agency_class>
    </lead_sponsor>
  </sponsors>
