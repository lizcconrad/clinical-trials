  <intervention>
    <intervention_type>Device</intervention_type>
    <intervention_name>Silicon ring (Arabin Pessary)</intervention_name>
    <description>Placement of a silicon pessary in the vagina, around the cervix.</description>
    <arm_group_label>2</arm_group_label>
    <other_name>Vaginal pessaries CE 0482 MED / CERT ISO 9003 /EN 46003</other_name>
  </intervention>
  <eligibility>
    <criteria>
      <textblock>
        Inclusion Criteria:

          -  Singleton pregnancy

          -  Minimal age of 18 years

        Exclusion Criteria:

          -  Major fetal abnormalities (requiring surgery or leading to infant death or severe
             handicap)

          -  SROM at the time of randomization

          -  Cervical cerclage in situ

          -  Active vaginal bleeding

          -  Previous cone biopsy or cerclage

          -  Major uterine structural anomalies

          -  Placenta previa
      </textblock>
    </criteria>
    <gender>Female</gender>
    <minimum_age>18 Years</minimum_age>
    <maximum_age>45 Years</maximum_age>
    <healthy_volunteers>No</healthy_volunteers>
