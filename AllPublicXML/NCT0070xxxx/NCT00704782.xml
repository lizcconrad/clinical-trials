  </study_design_info>
  <primary_outcome>
    <measure>To assess the safety of Dimebon in combination with donepezil (Aricept)</measure>
    <time_frame>week 6, 9, 12, 26 and every 13 weeks thereafter until study discontinuation</time_frame>
  </primary_outcome>
  <number_of_arms>1</number_of_arms>
  <enrollment type="Actual">50</enrollment>
  <condition>Alzheimer's Disease</condition>
  <arm_group>
