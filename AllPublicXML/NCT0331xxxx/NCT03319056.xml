  <brief_title>Beijing Indoor Air Health Intervention Study</brief_title>
  <official_title>Cardiopulmonary Health Benefits From Indoor Air Purification Among School Students in Beijing</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Peking University</agency>
      <agency_class>Other</agency_class>
    </lead_sponsor>
  </sponsors>
  <source>Peking University</source>
  <oversight_info>
    <is_fda_regulated_drug>No</is_fda_regulated_drug>
    <is_fda_regulated_device>No</is_fda_regulated_device>
  </oversight_info>
  <brief_summary>
    <textblock>
      The objective of this study is to investigate the cardiopulmonary health benefits from indoor
      air purification among school students in Beijing.
    </textblock>
  </brief_summary>
  <overall_status>Not yet recruiting</overall_status>
  <start_date type="Anticipated">November 2017</start_date>
  <completion_date type="Anticipated">March 2018</completion_date>
  <primary_completion_date type="Anticipated">March 2018</primary_completion_date>
  <phase>N/A</phase>
  <study_type>Interventional</study_type>
  <has_expanded_access>No</has_expanded_access>
  <study_design_info>
    <allocation>Randomized</allocation>
    <intervention_model>Crossover Assignment</intervention_model>
    <primary_purpose>Prevention</primary_purpose>
    <masking>Double (Participant, Investigator)</masking>
  </study_design_info>
  <primary_outcome>
    <measure>lung function</measure>
    <time_frame>2 weeks</time_frame>
    <description>Lung function test was conducted including forced vital capacity (FVC), forced expiratory volume in one second (FEV1) and FEV1/FVC.</description>
  </primary_outcome>
  <secondary_outcome>
    <measure>autonomic cardiac function</measure>
    <time_frame>2 weeks</time_frame>
    <description>Ambulatory electrocardiogram (ECG) was monitored including heart rate (HR) and heart rate variability (HRV).</description>
  </secondary_outcome>
  <secondary_outcome>
    <measure>respiratory inflammation</measure>
    <time_frame>2 weeks</time_frame>
    <description>Fractional exhaled nitric oxide (FeNO) test was conducted</description>
  </secondary_outcome>
  <number_of_arms>2</number_of_arms>
  <enrollment type="Anticipated">48</enrollment>
  <condition>Cardiopulmonary Disease</condition>
  <arm_group>
    <arm_group_label>Air purifier in active-mode</arm_group_label>
    <arm_group_type>Active Comparator</arm_group_type>
    <description>using the air purifier with a filtration</description>
  </arm_group>
  <arm_group>
    <arm_group_label>Air purifier in sham-mode</arm_group_label>
    <arm_group_type>Sham Comparator</arm_group_type>
    <description>using the air purifier without filtration</description>
  </arm_group>
  <intervention>
    <intervention_type>Other</intervention_type>
    <intervention_name>Air purifier</intervention_name>
    <description>active- or sham-mode air purifier used in 6 classrooms in a school with a crossover design</description>
    <arm_group_label>Air purifier in active-mode</arm_group_label>
    <arm_group_label>Air purifier in sham-mode</arm_group_label>
  </intervention>
  <eligibility>
    <criteria>
      <textblock>
        Inclusion Criteria:

          -  have been studying in the school for more than 1 year; have no history of respiratory
             diseases such as asthma and bronchitis; have no history of thoracic injury or
             treatment; have no family history of respiratory diseases; take no medicine considered
             influential on cardiovascular and respiratory systems one month before study
             measurements.

        Exclusion Criteria:
      </textblock>
    </criteria>
    <gender>All</gender>
    <minimum_age>6 Years</minimum_age>
    <maximum_age>15 Years</maximum_age>
    <healthy_volunteers>Accepts Healthy Volunteers</healthy_volunteers>
  </eligibility>
