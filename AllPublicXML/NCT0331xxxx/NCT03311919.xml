  <study_design_info>
    <observational_model>Cohort</observational_model>
    <time_perspective>Prospective</time_perspective>
  </study_design_info>
  <primary_outcome>
    <measure>presence of lymphocytes NK expressing CD86 and HLA - DR</measure>
    <time_frame>inclusion</time_frame>
    <description>by immunostaining and detection by flow cytometry</description>
  </primary_outcome>
  <enrollment type="Actual">11</enrollment>
  <condition>Tonsillectomy</condition>
  <eligibility>
    <study_pop>
      <textblock>
        patient with tonsillectomy
      </textblock>
    </study_pop>
    <sampling_method>Probability Sample</sampling_method>
    <criteria>
      <textblock>
        Inclusion Criteria:

          -  patient with programmed tonsillectomy as part of the care

        Exclusion Criteria:

          -  patient opposition to use its waste of per-operating tonsillectomy for research
             purposes

          -  patient with immunosuppressive and/or corticoid treatment (&gt; 1 mg/kg)
      </textblock>
    </criteria>
