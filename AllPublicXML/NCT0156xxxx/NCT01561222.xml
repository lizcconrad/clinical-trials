  <primary_outcome>
    <measure>Osteoprotegin level</measure>
    <time_frame>one year</time_frame>
    <description>To assess the effect of vitamin D supplementation on osteoprotegin level in CKD patients</description>
  </primary_outcome>
  <secondary_outcome>
    <measure>Bone mineral density</measure>
    <time_frame>one year</time_frame>
    <description>To assess the effect of vitamin D supplementation on bone mineral density in patients with CKD stage 1 and 2</description>
  </secondary_outcome>
  <secondary_outcome>
    <measure>vascular calcification score</measure>
    <time_frame>one year</time_frame>
    <description>To assess the effect of vitamin D supplementation on vascular calcification score through performing lateral abdominal radiography or CT-based techniques in patients with CKD stage 1 and 2</description>
  </secondary_outcome>
