  <brief_title>Functional Neuroimaging and Genetic Vulnerability to Suicidal Behavior</brief_title>
  <sponsors>
    <lead_sponsor>
      <agency>University Hospital, Montpellier</agency>
      <agency_class>Other</agency_class>
    </lead_sponsor>
  </sponsors>
