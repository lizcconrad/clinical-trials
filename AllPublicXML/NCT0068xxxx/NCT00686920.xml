  <brief_title>Safety Study for Patients With a History of Hepatic Encephalopathy</brief_title>
  <sponsors>
    <lead_sponsor>
      <agency>Valeant Pharmaceuticals International, Inc.</agency>
      <agency_class>Industry</agency_class>
