  <oversight_info>
    <has_dmc>Yes</has_dmc>
  </oversight_info>
  <brief_summary>
    <textblock>
      Premature infants with iron deficiency if supplemented with more elemental iron than the
      routine 2mg/kg/day will have improved brain development.
    </textblock>
  </brief_summary>
  <overall_status>Active, not recruiting</overall_status>
  <start_date>May 2008</start_date>
  <completion_date type="Anticipated">May 31, 2020</completion_date>
