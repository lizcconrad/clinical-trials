  <brief_title>Intermountain Risk Score and Trauma</brief_title>
  <official_title>The Intermountain Risk Score's Association With Mortality Prediction in Trauma Patients</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Intermountain Health Care, Inc.</agency>
