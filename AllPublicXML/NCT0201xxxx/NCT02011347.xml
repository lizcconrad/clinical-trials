  <brief_title>Ketamine and Closed-Loop Anesthesia System</brief_title>
  <acronym>LoopKeta</acronym>
  <official_title>Influence of Ketamine on a Closed-Loop Anesthesia System</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Hopital Foch</agency>
      <agency_class>Other</agency_class>
