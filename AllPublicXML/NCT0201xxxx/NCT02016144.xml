    <observational_model>Case-Only</observational_model>
    <time_perspective>Prospective</time_perspective>
  </study_design_info>
  <primary_outcome>
    <measure>optimal length of pre-inserted ETT for nasal fiberoptic intubation</measure>
    <time_frame>during endotracheal intubation for general anesthesia</time_frame>
  </primary_outcome>
  <enrollment type="Actual">150</enrollment>
  <condition>Nasal Fiberoptic Intubation</condition>
  <eligibility>
    <study_pop>
      <textblock>
        Patients scheduled to undergo an elective oral and maxillofacial surgery requiring a nasal
        intubation of ETT for general anesthesia
      </textblock>
    </study_pop>
    <sampling_method>Non-Probability Sample</sampling_method>
    <criteria>
      <textblock>
        Inclusion Criteria:

          -  ASA physical status I-II

          -  aged 20-65 yr (adults)

        Exclusion Criteria:

          -  rhinitis

          -  bleeding diatheses

          -  requirement of awake intubation

          -  a previous major oral and maxillofacial surgery history

          -  anatomical deformity of the face, neck and upper airway
      </textblock>
    </criteria>
    <gender>All</gender>
    <minimum_age>20 Years</minimum_age>
    <maximum_age>65 Years</maximum_age>
    <healthy_volunteers>No</healthy_volunteers>
  </eligibility>
