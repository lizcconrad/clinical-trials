  </study_design_info>
  <primary_outcome>
    <measure>Change in disease activity score (DAS 28)</measure>
    <time_frame>12 months</time_frame>
  </primary_outcome>
  <primary_outcome>
    <measure>Treatment patterns (frequency/dosage) and demographics of patients treated with RoActemra/Actemra in routine clinical practice</measure>
    <time_frame>36 months</time_frame>
  </primary_outcome>
  <secondary_outcome>
    <measure>Safety: Incidence of adverse events</measure>
    <time_frame>36 months</time_frame>
  </secondary_outcome>
  <secondary_outcome>
    <measure>Quality of life: Health assessment questionnaire Disease Index (HAQ-DI), Functional Assessment of Chronic Illness Therapy- Fatigue (FACIT-Fatigue) questionnaire</measure>
    <time_frame>12 months</time_frame>
  </secondary_outcome>
  <secondary_outcome>
    <measure>Rate of patients achieving remission (DAS &lt;2.6)</measure>
    <time_frame>36 months</time_frame>
  </secondary_outcome>
  <secondary_outcome>
    <measure>Change in blood lipids</measure>
    <time_frame>12 months</time_frame>
  </secondary_outcome>
  <secondary_outcome>
    <measure>Clinical response (DAS 28/blood chemistry/QoL) with or without methotrexate</measure>
    <time_frame>36 months</time_frame>
  </secondary_outcome>
