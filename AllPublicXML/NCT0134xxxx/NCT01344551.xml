  <brief_title>Effects of Cocoa Flavanols on Human Cognitive Function</brief_title>
  <sponsors>
    <lead_sponsor>
      <agency>University of Reading</agency>
      <agency_class>Other</agency_class>
    </lead_sponsor>
  </sponsors>
