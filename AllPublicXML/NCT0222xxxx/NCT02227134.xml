  </study_design_info>
  <primary_outcome>
    <measure>Hyo-mental distance</measure>
    <time_frame>intraoperative</time_frame>
    <description>The distance from the hyoid bone to the mentum to predict difficult airway.</description>
  </primary_outcome>
  <secondary_outcome>
    <measure>Tongue width</measure>
    <time_frame>intraoperative</time_frame>
    <description>Width of the tongue between the lingual arteries.</description>
  </secondary_outcome>
  <secondary_outcome>
    <measure>Tonsil Size</measure>
    <time_frame>intraoperative</time_frame>
    <description>Size of tonsil (bilateral)</description>
  </secondary_outcome>
