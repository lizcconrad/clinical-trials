  <arm_group>
    <arm_group_label>PrevinC</arm_group_label>
    <arm_group_type>Experimental</arm_group_type>
    <description>PrevinC contains isopropyl alcohol, sesame oil, aloe vera oil extract, and lemon oil.</description>
  </arm_group>
  <arm_group>
    <arm_group_label>Control solution</arm_group_label>
    <arm_group_type>Placebo Comparator</arm_group_type>
