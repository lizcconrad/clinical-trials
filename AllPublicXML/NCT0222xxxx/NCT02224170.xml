  <primary_outcome>
    <measure>QoR-40 score</measure>
    <time_frame>from baseline to 3 hours on the day after surgery</time_frame>
    <description>40-item quality-of-recovery scoring system</description>
  </primary_outcome>
  <secondary_outcome>
    <measure>Incidence and severity of postoperative nausea and vomiting</measure>
    <time_frame>from baseline to 3 hours on the day after surgery</time_frame>
    <description>10 cm-visual analogue scale</description>
  </secondary_outcome>
  <other_outcome>
    <measure>Time to first analgesic request</measure>
    <time_frame>from baseline to 3 hours on the day after surgery</time_frame>
  </other_outcome>
