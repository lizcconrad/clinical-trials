  <brief_title>Prevalence of BRCA in Patients With Ovarian Cancer</brief_title>
  <acronym>BRCA-Screening</acronym>
  <official_title>Prevalence of BRCA in Patients With Primary or Platinum Sensitive Recurrent Ovarian Cancer.</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>AGO Research GmbH</agency>
      <agency_class>Industry</agency_class>
    </lead_sponsor>
  </sponsors>
