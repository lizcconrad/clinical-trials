  <brief_title>Berodual® Respimat® Solution for Inhalation in Patients With Chronic Obstructive Airways Disease</brief_title>
  <official_title>Berodual® Respimat® 20/50µg/Dose Solution for Inhalation in Patients With Chronic Obstructive Airways Disease</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Boehringer Ingelheim</agency>
      <agency_class>Industry</agency_class>
    </lead_sponsor>
  </sponsors>
  <source>Boehringer Ingelheim</source>
  <brief_summary>
    <textblock>
      Tolerability, efficacy and handling of Berodual® Respimat® 20/50µg/dose solution for
      inhalation in patients with chronic obstructive airways disease in daily practice
    </textblock>
  </brief_summary>
  <overall_status>Completed</overall_status>
  <start_date>March 2004</start_date>
  <primary_completion_date type="Actual">December 2004</primary_completion_date>
  <study_type>Observational</study_type>
  <has_expanded_access>No</has_expanded_access>
  <study_design_info>
    <observational_model>Cohort</observational_model>
    <time_perspective>Prospective</time_perspective>
  </study_design_info>
  <primary_outcome>
    <measure>Change in overall severity rated on 3-point scale</measure>
    <time_frame>up to 4 weeks</time_frame>
  </primary_outcome>
  <primary_outcome>
    <measure>Change in reduction in breathlessness rated on a 4-point scale</measure>
    <time_frame>up to 4 weeks</time_frame>
  </primary_outcome>
  <primary_outcome>
    <measure>Change in restriction of activity due to breathlessness rated on a 4-point scale</measure>
    <time_frame>up to 4 weeks</time_frame>
  </primary_outcome>
  <primary_outcome>
    <measure>Number of awakening due to nocturnal breathlessness rated on 4-point scale</measure>
    <time_frame>up to 4 weeks</time_frame>
  </primary_outcome>
  <primary_outcome>
    <measure>Global assessment of efficacy by the patients rated on 5-point scale</measure>
    <time_frame>after 4 weeks</time_frame>
  </primary_outcome>
  <primary_outcome>
    <measure>Global assessment of efficacy by the investigator rated on 5-point scale</measure>
    <time_frame>after 4 weeks</time_frame>
  </primary_outcome>
  <primary_outcome>
    <measure>Number of patients with adverse drug reactions</measure>
    <time_frame>up to 4 weeks</time_frame>
  </primary_outcome>
