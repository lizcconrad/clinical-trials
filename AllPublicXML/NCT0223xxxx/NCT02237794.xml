  <primary_outcome>
    <measure>Longitudinal Myocardial Function</measure>
    <time_frame>Two Years</time_frame>
    <description>Analysis of longitudinal contractility of the heart by the calculation of the heart's strain factor before and after chronic medication treatment.</description>
  </primary_outcome>
  <number_of_groups>1</number_of_groups>
  <enrollment type="Anticipated">100</enrollment>
  <condition>Heart Function</condition>
  <arm_group>
