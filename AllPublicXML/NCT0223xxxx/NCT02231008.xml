  <brief_title>Evaluating the Effects of Tasimelteon vs Placebo on Sleep Disturbances in SMS</brief_title>
  <sponsors>
    <lead_sponsor>
      <agency>Vanda Pharmaceuticals</agency>
      <agency_class>Industry</agency_class>
