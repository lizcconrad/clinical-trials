  <primary_outcome>
    <measure>Improvement rate of gastric erosion</measure>
    <time_frame>14days after drug administrations</time_frame>
    <description>50% decreased on erosive grade</description>
  </primary_outcome>
  <secondary_outcome>
    <measure>cure rate of gastric erosion</measure>
    <time_frame>14days after drug administrations</time_frame>
    <description>0 erosion</description>
  </secondary_outcome>
  <secondary_outcome>
    <measure>Improvement rate of symptoms</measure>
    <time_frame>14days after drug administrations</time_frame>
    <description>50% decreased on the Subjective Symptoms total score</description>
  </secondary_outcome>
