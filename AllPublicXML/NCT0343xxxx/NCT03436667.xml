  <primary_outcome>
    <measure>Post-anesthesia care unit (PACU) length of stay</measure>
    <time_frame>Immediately post-op</time_frame>
    <description>The investigators hypothesize that spirometry performance will be associated with reduced PACU length of stay</description>
  </primary_outcome>
  <number_of_groups>1</number_of_groups>
  <enrollment type="Anticipated">30</enrollment>
