  <brief_title>Nicotine Patch - Bioequivalence Study</brief_title>
  <sponsors>
    <lead_sponsor>
      <agency>Pierre Fabre Medicament</agency>
      <agency_class>Industry</agency_class>
    </lead_sponsor>
