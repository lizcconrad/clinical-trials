  <brief_title>Progressive Exercise After Total Knee Arthroplasty (TKA)</brief_title>
  <official_title>Progressive Exercise After Total Knee Arthroplasty: A Randomised Controlled Trial</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Jyväskylä Central Hospital</agency>
      <agency_class>Other</agency_class>
    </lead_sponsor>
