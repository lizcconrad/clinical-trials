    <primary_purpose>Treatment</primary_purpose>
    <masking>Double (Participant, Investigator)</masking>
  </study_design_info>
  <primary_outcome>
    <measure>Change in FEV1 from baseline by spirometry</measure>
    <time_frame>at each post-treatment time point (15 min to 34 hr)</time_frame>
  </primary_outcome>
  <secondary_outcome>
    <measure>Change in FVC from baseline by spirometry</measure>
    <time_frame>at each post-treatment time point (15 min to 34 hr)</time_frame>
  </secondary_outcome>
  <secondary_outcome>
    <measure>Treatment emergent adverse events</measure>
    <time_frame>Post-treatment time points</time_frame>
  </secondary_outcome>
  <number_of_arms>2</number_of_arms>
  <enrollment type="Actual">52</enrollment>
  <condition>Asthma</condition>
  <arm_group>
    <arm_group_label>Inhaled loxapine @ 0 &amp; 10 h</arm_group_label>
    <arm_group_type>Experimental</arm_group_type>
    <description>Inhalation of 10 mg of loxapine at 0 and 10 hours</description>
  </arm_group>
  <arm_group>
    <arm_group_label>Inhaled placebo @ 2 &amp; 10 hours</arm_group_label>
    <arm_group_type>Placebo Comparator</arm_group_type>
    <description>Inhalation of 0 mg of loxapine (placebo) at 0 and 10 hours</description>
  </arm_group>
  <intervention>
    <intervention_type>Drug</intervention_type>
    <intervention_name>Inhaled loxapine @ 0 &amp; 10 h</intervention_name>
    <description>10 mg, 2 doses, 10 hours apart</description>
    <arm_group_label>Inhaled loxapine @ 0 &amp; 10 h</arm_group_label>
    <other_name>ADASUVE</other_name>
  </intervention>
  <intervention>
    <intervention_type>Drug</intervention_type>
    <intervention_name>Inhaled placebo @ 2 &amp; 10 hours</intervention_name>
    <description>placebo, 2 doses, 10 hours apart</description>
    <arm_group_label>Inhaled placebo @ 2 &amp; 10 hours</arm_group_label>
    <other_name>ADASUVE PLACEBO</other_name>
  </intervention>
  <eligibility>
    <criteria>
      <textblock>
        Inclusion Criteria:

          -  History of mild to moderate persistent asthma for at least 6 months with
             pre-bronchodilator FEV1 ≥60% of predicted value.

        Exclusion Criteria:

          -  History of COPD, or any other acute or chronic pulmonary disease
      </textblock>
    </criteria>
    <gender>All</gender>
    <minimum_age>18 Years</minimum_age>
    <maximum_age>65 Years</maximum_age>
    <healthy_volunteers>Accepts Healthy Volunteers</healthy_volunteers>
  </eligibility>
