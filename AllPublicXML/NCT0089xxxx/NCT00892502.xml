  <intervention>
    <intervention_type>Drug</intervention_type>
    <intervention_name>Bismuth tablets</intervention_name>
    <description>1000 mg x 2 for five days prior to chemotherapy/radiotherapy 500 mg x 2 for ten days during and after chemotherapy/radiotherapy</description>
    <arm_group_label>1</arm_group_label>
  </intervention>
