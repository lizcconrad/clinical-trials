  </intervention>
  <intervention>
    <intervention_type>Drug</intervention_type>
    <intervention_name>Chemotherapy</intervention_name>
    <description>5FU 1000 mg/m2/day as 96 hour infusion days 1-5 and 29-33; Mitomycin 10mg/m2 days 1 and 29</description>
