  <brief_title>Acupuncture as a Supplemental Treatment for Bipolar Depression</brief_title>
  <official_title>Adjunctive Acupuncture as a Treatment for Bipolar Depression</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>University of Texas Southwestern Medical Center</agency>
