  <brief_title>Healthy Aging and Memory Study</brief_title>
  <official_title>Alzheimer's Disease Prevention Instrument Protocol</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>National Institute on Aging (NIA)</agency>
      <agency_class>NIH</agency_class>
    </lead_sponsor>
