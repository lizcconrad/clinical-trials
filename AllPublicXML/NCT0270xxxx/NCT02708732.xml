  <brief_title>Utility Study in Diffuse Large B-Cell Lymphoma (DLBCL)</brief_title>
  <official_title>UK Utility Study in Diffuse Large B-Cell Lymphoma</official_title>
  <sponsors>
    <lead_sponsor>
