  <brief_title>Trauma Intervention for Affect Regulation, AIDS, and Substances</brief_title>
  <acronym>TIARAS</acronym>
  <official_title>Trauma Intervention for Affect Regulation, AIDS, and Substances</official_title>
  <sponsors>
