    <arm_group_label>Neutral Writing + Contingency Management</arm_group_label>
    <arm_group_label>Expressive Writing + Contingency Management</arm_group_label>
  </intervention>
  <eligibility>
    <criteria>
      <textblock>
        Inclusion Criteria:

          -  HIV positive

          -  woman or trans woman

          -  substance use

          -  elevated PTSD symptoms

          -  HIV care difficulties

        Exclusion Criteria:

          -  not HIV positive

          -  no substance use

          -  men

          -  no HIV care difficulties

          -  no history of trauma
      </textblock>
    </criteria>
    <gender>All</gender>
    <gender_based>Yes</gender_based>
    <gender_description>Identify as a woman (cisgender or transgender)</gender_description>
