  </study_design_info>
  <primary_outcome>
    <measure>Hamilton Anxiety Scale (HAMA) score changes from baseline to 6 weeks treatment</measure>
    <time_frame>6 weeks</time_frame>
    <description>Scores 14-21 indicate mild anxiety; scores 21-29 indicate moderate anxiety; scores over 29 indicate severe anxiety</description>
  </primary_outcome>
  <secondary_outcome>
    <measure>HAMA factor score changes after treatment</measure>
    <time_frame>6 weeks</time_frame>
  </secondary_outcome>
