  <brief_title>Radium-223 Dichloride Long-term Follow-up Program</brief_title>
  <official_title>A Phase 4 Long-term Follow-up Study to Define the Safety Profile of Radium-223 Dichloride</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Bayer</agency>
      <agency_class>Industry</agency_class>
    </lead_sponsor>
  </sponsors>
