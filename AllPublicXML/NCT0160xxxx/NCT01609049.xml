    <intervention_type>Drug</intervention_type>
    <intervention_name>Peginterferon alfa-2a</intervention_name>
    <description>Administration of treatment will be according to local recommendation under local labeling.</description>
    <arm_group_label>Participants with Chronic Hepatitis C</arm_group_label>
    <other_name>Pegasys</other_name>
  </intervention>
