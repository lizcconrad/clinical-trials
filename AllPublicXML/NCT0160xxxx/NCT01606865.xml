  <primary_outcome>
    <measure>increased risk of bleeding (according to TIMI definition)</measure>
    <time_frame>24hours postoperatively</time_frame>
  </primary_outcome>
  <number_of_groups>1</number_of_groups>
  <enrollment type="Actual">207</enrollment>
  <condition>Postoperative Bleeding</condition>
