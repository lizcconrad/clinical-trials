  <brief_title>Evaluation of Extended Intravenous of Beta-lactams in the Treatment of Serious Gram-negative Infections in Critically Ill Patients</brief_title>
  <sponsors>
    <lead_sponsor>
      <agency>National Taiwan University Hospital</agency>
      <agency_class>Other</agency_class>
    </lead_sponsor>
