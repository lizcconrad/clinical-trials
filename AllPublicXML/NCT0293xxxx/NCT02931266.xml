  <primary_outcome>
    <measure>Spinal stability</measure>
    <time_frame>12 months postoperatively</time_frame>
    <description>To evaluate though X-rays, the efficacy of the device to promote the stability of the instrumented segments.</description>
  </primary_outcome>
  <primary_outcome>
    <measure>Spinal fusion</measure>
    <time_frame>12 months postoperatively</time_frame>
    <description>Radiological assessment of bony fusion</description>
  </primary_outcome>
  <secondary_outcome>
