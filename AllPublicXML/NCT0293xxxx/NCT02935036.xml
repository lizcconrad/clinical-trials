  <primary_outcome>
    <measure>Percent change from baseline in the inflammatory lesion counts</measure>
    <time_frame>baseline to week 12 (study day 84)</time_frame>
    <description>inflammatory lesions: papules and pustules</description>
  </primary_outcome>
  <primary_outcome>
    <measure>Percent change from baseline in the non-inflammatory lesion counts</measure>
    <time_frame>baseline to week 12 (study day 84)</time_frame>
    <description>non-inflammatory lesions: open and closed comedones</description>
  </primary_outcome>
  <primary_outcome>
    <measure>The proportion of Subjects with a clinical response (IGA) of &quot;success&quot;</measure>
    <time_frame>week 12 (study day 84)</time_frame>
    <description>Success is defined as an IGA score that is at least 2 grades less than the baseline assessment</description>
  </primary_outcome>
