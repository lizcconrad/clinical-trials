    <intervention_model>Single Group Assignment</intervention_model>
    <primary_purpose>Treatment</primary_purpose>
    <masking>None (Open Label)</masking>
  </study_design_info>
  <primary_outcome>
    <measure>Cumulative amounts of radioactivity excreted in urine and faeces (% of dose)</measure>
    <time_frame>0 to 168 hours</time_frame>
  </primary_outcome>
  <primary_outcome>
    <measure>Pharmacokinetic (PK) of idalopirdine and radioactivity in plasma (Cmax, tmax, AUC, t1/2, oral clearance and apparant volume of distribution. (composite outcome measure)</measure>
    <time_frame>0 to 168 hours</time_frame>
    <description>PK parameter:</description>
  </primary_outcome>
  <number_of_arms>1</number_of_arms>
  <enrollment type="Actual">6</enrollment>
  <condition>Healthy</condition>
