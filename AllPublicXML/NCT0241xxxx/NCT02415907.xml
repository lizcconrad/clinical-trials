  <intervention>
    <intervention_type>Drug</intervention_type>
    <intervention_name>[ethyl-1-14C]-idalopirdine</intervention_name>
    <description>120 mg/2.40 MBq Lu AF67708 ([ethyl-1-14C]-idalopirdine) in one capsule for oral administration, single dose</description>
    <arm_group_label>Idalopirdine</arm_group_label>
    <other_name>Lu AF67708</other_name>
  </intervention>
  <intervention>
    <intervention_type>Drug</intervention_type>
    <intervention_name>[benzyl-7-14C]-idalopirdine</intervention_name>
    <description>120 mg/2.40 MBq Lu AF67709 ([benzyl-7-14C]-idalopirdine) in one capsule for oral administration, single dose</description>
    <arm_group_label>Idalopirdine</arm_group_label>
    <other_name>Lu AF67709</other_name>
  </intervention>
  <eligibility>
    <criteria>
      <textblock>
        Inclusion Criteria:

          -  Healthy men

          -  aged between 40-60 years (inclusive)

          -  BMI in the range 19 and 30 kg/m2 (minimum weight 60 kg)

        Exclusion Criteria:

          -  The subject has previously been dosed with idalopirdine.

        Other protocol defined inclusion and exclusion criteria do apply
      </textblock>
    </criteria>
    <gender>Male</gender>
    <minimum_age>40 Years</minimum_age>
    <maximum_age>60 Years</maximum_age>
