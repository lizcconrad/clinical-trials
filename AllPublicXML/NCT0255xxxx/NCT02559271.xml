  <primary_outcome>
    <measure>Sphere refraction measurement</measure>
    <time_frame>up to 6 months</time_frame>
    <description>the outcome include sphere refraction (in diopter) measurements by using both Smart Vision Labs autorefractor and subjective refraction</description>
  </primary_outcome>
  <primary_outcome>
    <measure>Cylinder refraction measurement</measure>
    <time_frame>up to 6 months</time_frame>
    <description>the outcome include cylinder refraction (in diopter) measurements by using both Smart Vision Labs autorefractor and subjective refraction</description>
  </primary_outcome>
  <primary_outcome>
    <measure>difference between two Sphere refraction measurements on the same patient</measure>
    <time_frame>up to 6 months</time_frame>
    <description>the outcome include the difference (in diopter) between two Sphere refraction measurements on the same patient by using smart vision labs autorefractor</description>
  </primary_outcome>
  <primary_outcome>
    <measure>difference between two cylinder refraction measurements on the same patient</measure>
    <time_frame>up to 6 months</time_frame>
    <description>the outcome include the difference (in diopter) between two cylinder refraction measurements on the same patient by using smart vision labs autorefractor</description>
  </primary_outcome>
  <enrollment type="Anticipated">40</enrollment>
  <condition>Ocular Refraction</condition>
  <eligibility>
    <study_pop>
      <textblock>
        pediatric population, between 5 and 16 years of age
      </textblock>
    </study_pop>
    <sampling_method>Non-Probability Sample</sampling_method>
    <criteria>
      <textblock>
        Inclusion Criteria:

          1. healthy children

          2. ages 5-16 year

          3. male and female

        Exclusion Criteria:

          1. presence of ocular disease

          2. refractive surgery

          3. amblyopia
      </textblock>
    </criteria>
    <gender>All</gender>
    <minimum_age>5 Years</minimum_age>
    <maximum_age>16 Years</maximum_age>
