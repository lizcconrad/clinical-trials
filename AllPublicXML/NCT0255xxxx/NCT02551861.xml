  <start_date>December 2015</start_date>
  <completion_date type="Anticipated">June 2017</completion_date>
  <primary_completion_date type="Anticipated">June 2016</primary_completion_date>
  <phase>Phase 2</phase>
  <study_type>Interventional</study_type>
  <has_expanded_access>No</has_expanded_access>
