  <primary_outcome>
    <measure>Sensitivity of an assay that detects circulating tumor DNA</measure>
    <time_frame>3 years</time_frame>
  </primary_outcome>
  <number_of_groups>2</number_of_groups>
  <enrollment type="Anticipated">50</enrollment>
  <condition>Ovarian Neoplasms</condition>
  <arm_group>
