  <primary_outcome>
    <measure>Glycemia</measure>
    <time_frame>up to 120 minutes</time_frame>
    <description>Glycemia (mg/dL) to -15, 30, 60 and 120 minutes, with respect to breakfast intake.</description>
  </primary_outcome>
  <primary_outcome>
    <measure>C peptide</measure>
    <time_frame>up to 60 minutes</time_frame>
    <description>C-peptide at -15 and 60 minutes with respect to breakfast intake</description>
  </primary_outcome>
  <primary_outcome>
    <measure>Satiety</measure>
    <time_frame>up to 120 minutes</time_frame>
    <description>Visual Analog Scale (VAS) was applied immediate and tardy postprandial (two hours after eating breakfast).</description>
  </primary_outcome>
