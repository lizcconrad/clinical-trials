  <brief_summary>
    <textblock>
      The goal of this study is to find the effect of holding a patient's hand on anxiety and pain
      during dermatologic procedures.
    </textblock>
  </brief_summary>
  <overall_status>Completed</overall_status>
  <start_date type="Actual">January 24, 2017</start_date>
  <completion_date type="Actual">April 26, 2017</completion_date>
  <primary_completion_date type="Actual">April 26, 2017</primary_completion_date>
  <phase>N/A</phase>
  <study_type>Interventional</study_type>
  <has_expanded_access>No</has_expanded_access>
  <study_design_info>
    <allocation>Randomized</allocation>
    <intervention_model>Parallel Assignment</intervention_model>
    <primary_purpose>Supportive Care</primary_purpose>
    <masking>None (Open Label)</masking>
  </study_design_info>
  <primary_outcome>
    <measure>Anxiety</measure>
    <time_frame>immediately after dermatologic procedure</time_frame>
    <description>Subjects will complete the 6-item State-Trait Anxiety Inventory (STAI)</description>
  </primary_outcome>
  <primary_outcome>
    <measure>Pain</measure>
    <time_frame>immediately after dermatologic procedure</time_frame>
    <description>Subjects will complete a visual analog scale for pain ranging from &quot;no pain at all&quot; to &quot;worst possible pain.&quot;</description>
  </primary_outcome>
  <number_of_arms>3</number_of_arms>
  <enrollment type="Actual">135</enrollment>
  <condition>Pain</condition>
  <condition>Anxiety</condition>
