  <start_date>April 2016</start_date>
  <completion_date type="Actual">November 30, 2017</completion_date>
  <primary_completion_date type="Actual">November 2017</primary_completion_date>
  <phase>Phase 3</phase>
  <study_type>Interventional</study_type>
  <has_expanded_access>No</has_expanded_access>
