  <eligibility>
    <criteria>
      <textblock>
        Inclusion Criteria:

          -  Aged between 19 and 74 years

          -  Patient with dyslipidemia and hypertension

        Exclusion Criteria:

          -  At screening, siSBP ≥ 200 mmHg or siDBP ≥ 120mmHg or LDL-C &gt; 250mg/dL or TG ≥ 400mg/dL

          -  At screening, siSBP difference is ≥ 20 mmHg or siDBP difference is ≥10 mmHg

          -  Secodary hypertension

          -  Type I or uncontrolled diabetes mellitus (HbA1c ≥ 9 %)
      </textblock>
    </criteria>
    <gender>All</gender>
    <minimum_age>19 Years</minimum_age>
    <maximum_age>74 Years</maximum_age>
    <healthy_volunteers>No</healthy_volunteers>
  </eligibility>
