  <brief_summary>
    <textblock>
      This is a protocol for prescreening of participants who would like to be in clinical studies
      in our Center at Stanford.
    </textblock>
  </brief_summary>
  <overall_status>Not yet recruiting</overall_status>
  <start_date type="Anticipated">June 10, 2018</start_date>
  <completion_date type="Anticipated">December 10, 2018</completion_date>
