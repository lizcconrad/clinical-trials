  <primary_outcome>
    <measure>Outcome of standardized food challenges</measure>
    <time_frame>1 year</time_frame>
    <description>Standardized Oral food challenges will occur in a staged manner to diagnose food allergies</description>
  </primary_outcome>
  <secondary_outcome>
    <measure>skin testing will occur to evaluate food allergen responses</measure>
    <time_frame>1 year</time_frame>
    <description>Standardized skin testing will be performed to detect sensitivity to food allergens</description>
  </secondary_outcome>
  <enrollment type="Anticipated">200</enrollment>
  <condition>Food Allergy</condition>
  <biospec_retention>Samples Without DNA</biospec_retention>
  <biospec_descr>
    <textblock>
      Blood will be collected
    </textblock>
  </biospec_descr>
  <eligibility>
    <study_pop>
      <textblock>
        Ages 0-100 yrs will be screened and enrolled in this study to determine if they have a
        clinically-relevant food allergy. If so, they could be eligible for interventional clinical
        trials in the future.
      </textblock>
    </study_pop>
    <sampling_method>Non-Probability Sample</sampling_method>
    <criteria>
      <textblock>
        Inclusion Criteria:

          -  Any individual with possible food allergy (as per their clinical history) who is
             interested in performing the gold standard food challenge for diagnosis.

        Exclusion Criteria:

          -  Any individual who does not consent

          -  Any individual who is currently taking oral steroids

          -  Any individual with moderate to severe asthma (FEV1&lt;80%)
      </textblock>
    </criteria>
    <gender>All</gender>
    <minimum_age>N/A</minimum_age>
    <maximum_age>100 Years</maximum_age>
    <healthy_volunteers>No</healthy_volunteers>
  </eligibility>
