  <primary_outcome>
    <measure>Change in volume of plaque at 1 year post heart transplant</measure>
    <time_frame>Baseline and one year</time_frame>
    <description>Measured change in coronary artery plaque volume(MM3), measured by Intravascular Ultrasound at time of coronary arteriogram within 4-8 weeks post transplant( baseline) and one year after transplant</description>
  </primary_outcome>
  <secondary_outcome>
    <measure>Change in LDL-C</measure>
    <time_frame>Baseline, 3, 6 and 12 months</time_frame>
    <description>measure differences in LDL-C lipid particle values between the two arms at baseline, 3, 6 and 12 months</description>
  </secondary_outcome>
  <secondary_outcome>
    <measure>Change in lipoprotein (a)</measure>
    <time_frame>Baseline, 3, 6 and 12</time_frame>
