  <brief_title>Iperia/Sentus QP Study</brief_title>
  <official_title>Iperia Family / Sentus QP Master Study</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Biotronik SE &amp; Co. KG</agency>
      <agency_class>Industry</agency_class>
