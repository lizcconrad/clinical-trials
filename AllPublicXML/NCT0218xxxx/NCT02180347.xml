  <primary_outcome>
    <measure>Accommodative response</measure>
    <time_frame>Up to two hours</time_frame>
    <description>Accommodative response will be measured subjectively and objectively using the push-up technique and photorefraction.</description>
  </primary_outcome>
  <primary_outcome>
    <measure>Binocular posture status</measure>
    <time_frame>Up to two hours</time_frame>
    <description>Binocular posture will be measured using Modified Thorington,</description>
  </primary_outcome>
