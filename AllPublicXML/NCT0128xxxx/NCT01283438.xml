  <brief_title>A Prospective, Randomized, Multicenter Study to Demonstrate the Superiority of the Barricaid to Discectomy for Primary Lumbar Disc Herniation</brief_title>
  <official_title>A Prospective, Randomized, Multicenter Study to Demonstrate the Superiority of the Barricaid to Discectomy for Primary Lumbar Disc Herniation</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Intrinsic Therapeutics</agency>
      <agency_class>Industry</agency_class>
    </lead_sponsor>
  </sponsors>
