  <brief_title>In-Hospital Comprehensive Geriatric Assessment in Aged Acute Medical Patients</brief_title>
  <sponsors>
    <lead_sponsor>
      <agency>University of Aarhus</agency>
      <agency_class>Other</agency_class>
    </lead_sponsor>
  </sponsors>
