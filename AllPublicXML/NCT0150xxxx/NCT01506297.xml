  <brief_summary>
    <textblock>
      Subjective measures of satiety are correlated with biologic mechanisms of appetite control.
    </textblock>
  </brief_summary>
  <overall_status>Completed</overall_status>
  <start_date type="Actual">July 2012</start_date>
  <completion_date type="Actual">August 2014</completion_date>
