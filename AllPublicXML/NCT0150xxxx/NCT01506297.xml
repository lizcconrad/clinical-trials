  <primary_outcome>
    <measure>Correlation of subjective and objective satiety responses</measure>
    <time_frame>measures at -30, -15, 0, 15, 30, 60, 90, 120, 150, 180, 210, 240, 300 minutes</time_frame>
    <description>Comparison of subjective responses and gut hormone responses of satiety</description>
  </primary_outcome>
  <secondary_outcome>
    <measure>Repeatability of subjective and objective measures of satiety</measure>
    <time_frame>measures at -30, -15, 0, 15, 30, 60, 90, 120, 150, 180, 210, 240, 300 minutes</time_frame>
    <description>Repeated assessment (3 times) of subjective and objective responses to food intake</description>
  </secondary_outcome>
