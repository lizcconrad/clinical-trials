  <primary_outcome>
    <measure>Pulmonary hypertension prevalence and incidence</measure>
    <time_frame>1 year</time_frame>
    <description>The main goal is to describe Pulmonary hypertension prevalence and incidence in our community as well as depict its risk factors, symptoms, prognosis and treatment response.</description>
  </primary_outcome>
  <secondary_outcome>
    <measure>Mortality rate</measure>
    <time_frame>1 year</time_frame>
  </secondary_outcome>
  <enrollment type="Anticipated">100000</enrollment>
  <condition>Death</condition>
  <eligibility>
    <study_pop>
      <textblock>
        Adults 17 yo or older, Any type of Pulmonary Hypertension except type II
      </textblock>
    </study_pop>
    <sampling_method>Non-Probability Sample</sampling_method>
    <criteria>
      <textblock>
        Inclusion Criteria:

          -  More 17

          -  Pulmonary Hypertension

          -  Systolic Pulmonary Pressure &gt;40 mmhg measured in a doppler echocardiogram,

          -  Systolic artery pressure &lt;25 in a pulmonary angiography

        Exclusion Criteria:

          -  Non accept to participate

          -  Pulmonary Hypertension type II (Left cardiac disease)
      </textblock>
    </criteria>
    <gender>All</gender>
    <minimum_age>17 Years</minimum_age>
    <maximum_age>N/A</maximum_age>
    <healthy_volunteers>No</healthy_volunteers>
  </eligibility>
