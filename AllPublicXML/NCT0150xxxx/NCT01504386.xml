  </arm_group>
  <arm_group>
    <arm_group_label>Placebo TAP block</arm_group_label>
    <arm_group_type>Placebo Comparator</arm_group_type>
    <description>Sham block with saline</description>
  </arm_group>
  <intervention>
    <intervention_type>Procedure</intervention_type>
    <intervention_name>TAP block</intervention_name>
    <description>Bilateral UL-guided TAP block with 20 ml of ropivacaine 0.5 %</description>
    <arm_group_label>TAP block</arm_group_label>
    <other_name>Naropin 0.5%</other_name>
  </intervention>
  <intervention>
    <intervention_type>Procedure</intervention_type>
    <intervention_name>Placebo TAP block</intervention_name>
    <description>Bilateral placement of 20 ml of saline 0.9 % in the transversus abdominis plane</description>
    <arm_group_label>Placebo TAP block</arm_group_label>
    <other_name>Saline 0.9%</other_name>
  </intervention>
