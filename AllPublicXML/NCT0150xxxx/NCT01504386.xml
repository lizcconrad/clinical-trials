  </study_design_info>
  <primary_outcome>
    <measure>Total opioid consumption</measure>
    <time_frame>0-24 hours</time_frame>
    <description>Opioid consumption via PCA-pump</description>
  </primary_outcome>
  <secondary_outcome>
    <measure>Pain during rest and cough</measure>
    <time_frame>1,2,4,8,18 and 24 hours</time_frame>
    <description>VAS-pain score at rest and at cough</description>
  </secondary_outcome>
  <secondary_outcome>
    <measure>Postoperative nausea and vomiting</measure>
    <time_frame>1,2,4,8,18 and 24 hours</time_frame>
    <description>Nausea score 0-3 No. of vomits</description>
  </secondary_outcome>
  <number_of_arms>2</number_of_arms>
