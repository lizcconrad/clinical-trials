  <primary_outcome>
    <measure>Reduction in diarrhea</measure>
    <time_frame>One week</time_frame>
    <description>Measurement of number of vomiting and diarrhea bowel movements before and after intervention</description>
  </primary_outcome>
  <secondary_outcome>
    <measure>Number of days until no diarrhea bowel movements</measure>
    <time_frame>1 week</time_frame>
    <description>Measurement of number of days until diarrhea is gone</description>
  </secondary_outcome>
