  <oversight_info>
    <has_dmc>No</has_dmc>
  </oversight_info>
  <brief_summary>
    <textblock>
      The purpose of this study is to determine the effect of remote ischemic preconditioning on
      exercise capacity in patients with heart failure.
    </textblock>
  </brief_summary>
  <overall_status>Completed</overall_status>
  <start_date>October 2009</start_date>
  <completion_date type="Actual">June 2011</completion_date>
  <primary_completion_date type="Actual">June 2011</primary_completion_date>
  <phase>N/A</phase>
  <study_type>Interventional</study_type>
