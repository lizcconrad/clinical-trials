  <brief_title>Masimo CO-Oximeter Study</brief_title>
  <official_title>Use of the Masimo Rainbow SET Pulse CO-Oximeter in Patients Undergoing Isovolemic Hemodilution</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Nationwide Children's Hospital</agency>
      <agency_class>Other</agency_class>
    </lead_sponsor>
  </sponsors>
