  <primary_outcome>
    <measure>radiation side effects</measure>
    <time_frame>5 years after the end of radiotherapy</time_frame>
    <description>Describe, in real situation, the ionisant radiation effects on the healthy tissues in patients receiving anastrazole in association or sequential with radiotherapy</description>
  </primary_outcome>
  <number_of_groups>2</number_of_groups>
  <enrollment type="Actual">490</enrollment>
  <condition>Breast Cancer</condition>
  <arm_group>
