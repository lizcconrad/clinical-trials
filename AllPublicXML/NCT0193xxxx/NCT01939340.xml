  <brief_title>Prevalence of Cachexia in Patients Undergoing Chemotherapy</brief_title>
  <official_title>Prevalence and Impact of Cachexia in Cancer Patients Undergoing Chemotherapy</official_title>
  <sponsors>
    <lead_sponsor>
