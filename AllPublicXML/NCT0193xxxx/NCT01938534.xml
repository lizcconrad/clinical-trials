  <arm_group>
    <arm_group_label>Experimental</arm_group_label>
    <arm_group_type>Experimental</arm_group_type>
    <description>Omeprazole 30mg twice Clarithromycin 500mg twice Amoxicillin 1000mg twice
for 10 days</description>
  </arm_group>
