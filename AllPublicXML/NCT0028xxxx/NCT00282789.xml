  <brief_title>BiPAP for Cardiomyopathy With Central Sleep Apnea</brief_title>
  <sponsors>
    <lead_sponsor>
      <agency>Nagoya University</agency>
      <agency_class>Other</agency_class>
    </lead_sponsor>
