  <primary_outcome>
    <measure>clinical improvement as manifested by resolution of fever and length of hospital admission.</measure>
    <time_frame>participants will be followed for the duration of hospital stay, an expected average of 10 days</time_frame>
  </primary_outcome>
  <secondary_outcome>
    <measure>clinical improvement as manifested by respiratory parameters (tachypnea, dyspnea, Fio2),and inflammatory markers.</measure>
    <time_frame>participants will be followed for the duration of hospital stay, an expected average of 10 days</time_frame>
  </secondary_outcome>
  <number_of_arms>2</number_of_arms>
  <enrollment type="Anticipated">40</enrollment>
  <condition>Pleuro-pneumonia</condition>
  <arm_group>
    <arm_group_label>ibuprofen</arm_group_label>
    <arm_group_type>Experimental</arm_group_type>
  </arm_group>
  <arm_group>
    <arm_group_label>acetaminophen</arm_group_label>
