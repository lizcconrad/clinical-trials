  <primary_outcome>
    <measure>Intradialytic symptomatic hypotension</measure>
    <time_frame>all dialysis sessions, three per week, for 2 years</time_frame>
    <description>Intradialytic symptomatic hypotension was defined as a rapid symptomatic fall of the systolic blood pressure by at least 30 mmHg or that required nursing and/or medical intervention</description>
  </primary_outcome>
  <secondary_outcome>
    <measure>Resistance to erythropoiesis-stimulating agents</measure>
    <time_frame>Monthly for 2 years</time_frame>
    <description>Resistance to erythropoiesis-stimulating agents was measured as (EPO therapy in IU/week)/(Hb in g/dL*body wheight in kg)</description>
  </secondary_outcome>
  <secondary_outcome>
    <measure>Calcium-phosphate metabolism</measure>
    <time_frame>Monthly for 2 years</time_frame>
    <description>Outcome measures: phosphatemia, calcemia and PTH</description>
  </secondary_outcome>
  <secondary_outcome>
    <measure>Beta2 microglobulin</measure>
    <time_frame>Every six months for 2 years</time_frame>
  </secondary_outcome>
