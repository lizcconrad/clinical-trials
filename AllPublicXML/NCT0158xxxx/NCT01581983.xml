  <brief_title>Mindfulness Meditation Format Pilot Study</brief_title>
  <official_title>Mindfulness Meditation Format Pilot Study</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Oregon Health and Science University</agency>
