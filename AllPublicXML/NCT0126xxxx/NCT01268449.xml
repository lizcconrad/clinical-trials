  <brief_title>Evaluation of Low Dose Laser in Treatment of Tinnitus</brief_title>
  <official_title>Phase 1 Evaluation of Low Dose Laser in Treatment of Tinnitus</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Islamic Azad University of Mashhad</agency>
      <agency_class>Other</agency_class>
