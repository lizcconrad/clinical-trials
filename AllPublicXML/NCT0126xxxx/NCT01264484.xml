  <brief_title>ADVANTAGE® Prosthetic Heart Valve Long-term Follow-up Trial</brief_title>
  <official_title>ADVANTAGE Prosthetic Heart Valve Long Term Follow Up</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Medtronic Bakken Research Center</agency>
      <agency_class>Industry</agency_class>
