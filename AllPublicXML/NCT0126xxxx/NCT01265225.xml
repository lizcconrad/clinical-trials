  <enrollment type="Actual">0</enrollment>
  <condition>Breast Cancer</condition>
  <eligibility>
    <study_pop>
      <textblock>
        100 tumor specimens from women with grade 0-11 ductal breast cancer
      </textblock>
    </study_pop>
    <sampling_method>Non-Probability Sample</sampling_method>
    <criteria>
      <textblock>
        Inclusion Criteria:

          -  Ductal Carcinoma in Situ

          -  DCIS + Microinvasion stages 1 or 11 without positive lymph nodes

        Exclusion Criteria:

          -  tumor specimen with higher than grade II

          -  BRACA 1 or BRACA 2 mutation

          -  Neoadjuvant chemotherapy
      </textblock>
    </criteria>
    <gender>Female</gender>
    <minimum_age>18 Years</minimum_age>
    <maximum_age>N/A</maximum_age>
