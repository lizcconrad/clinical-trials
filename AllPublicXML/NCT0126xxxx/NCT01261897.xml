  <primary_outcome>
    <measure>Pain during 45 degrees active flexion of the knee</measure>
    <time_frame>1 hour postoperative</time_frame>
    <description>0-100 mm at a visual analogue scale (VAS), at 1 hour postoperative</description>
  </primary_outcome>
  <secondary_outcome>
    <measure>Pain during 45 degrees active flexion of the knee</measure>
    <time_frame>0-6 hours postoperative</time_frame>
    <description>0-100 mm at a visual analogue scale (VAS), registered at the intervals 1, 2, 3, 4, 5 and 6 hours postoperative, calculated as &quot;the area under the curve&quot; (AUC) for the interval 1-6 hours postoperative.</description>
  </secondary_outcome>
  <secondary_outcome>
    <measure>Pain during rest</measure>
    <time_frame>1-6 hours postoperative</time_frame>
