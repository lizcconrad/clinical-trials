  <brief_title>Study Evaluating Novel Biomarkers of AKI (Acute Kidney Injury) in Post-operative Patients</brief_title>
  <official_title>A PILOT Study Evaluating Novel Biomarkers of AKI in Post-operative Patients Undergoing Major Intra-Abdominal Surgery</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Universitair Ziekenhuis Brussel</agency>
      <agency_class>Other</agency_class>
    </lead_sponsor>
