  <brief_title>Martial Arts Therapy in Autism Spectrum Disorders</brief_title>
  <official_title>The Effect of Karate Techniques Training on Communication Deficit of Children With Autism Spectrum Disorders</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>University of Isfahan</agency>
      <agency_class>Other</agency_class>
