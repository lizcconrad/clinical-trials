  <primary_outcome>
    <measure>Objective sleep duration and quality</measure>
    <time_frame>up to 1 month</time_frame>
    <description>Measured through actigraphy</description>
  </primary_outcome>
  <primary_outcome>
    <measure>Subjective sleep duration and quality</measure>
