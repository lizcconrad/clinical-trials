  <brief_title>Performance Enhancement and Non-Invasive Brain Stimulation</brief_title>
  <sponsors>
    <lead_sponsor>
      <agency>Bruyere Research Institute</agency>
      <agency_class>Other</agency_class>
    </lead_sponsor>
