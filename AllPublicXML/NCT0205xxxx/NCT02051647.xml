  <has_expanded_access>No</has_expanded_access>
  <study_design_info>
    <time_perspective>Prospective</time_perspective>
  </study_design_info>
  <primary_outcome>
    <measure>Change in copeptin levels upon examination stress comparing copeptin levels prior and after examination</measure>
    <time_frame>4 hours</time_frame>
  </primary_outcome>
  <secondary_outcome>
    <measure>Correlation between copeptin levels prior to an exam and exam success</measure>
    <time_frame>4 hours</time_frame>
  </secondary_outcome>
  <secondary_outcome>
    <measure>Correlation to cortisol as the classical stress marker</measure>
    <time_frame>4 hours</time_frame>
  </secondary_outcome>
  <enrollment type="Actual">42</enrollment>
  <condition>Healthy</condition>
  <biospec_descr>
