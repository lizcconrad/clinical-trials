    <intervention_name>Monovalent live attenuated pandemic influenza vaccine</intervention_name>
    <description>One dose</description>
    <arm_group_label>Influenza vaccination</arm_group_label>
    <other_name>FluMist Novel H1N1, MedImmune Vaccines, Inc.</other_name>
  </intervention>
