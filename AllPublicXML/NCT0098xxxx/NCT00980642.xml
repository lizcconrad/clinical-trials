  <brief_title>Accuracy of the Drager Dual-sensor Temperature Measurement System</brief_title>
  <official_title>Accuracy of the Draeger Dual-sensor Temperature Measurement System in The Perioperative Period</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>The Cleveland Clinic</agency>
      <agency_class>Other</agency_class>
