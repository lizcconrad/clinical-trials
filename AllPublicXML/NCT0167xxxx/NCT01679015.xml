    <time_frame>up to 2 years</time_frame>
  </primary_outcome>
  <secondary_outcome>
    <measure>Prevalence of allergic patients with moderate to severe ocular signs and symptoms</measure>
    <time_frame>up to 2 years</time_frame>
  </secondary_outcome>
