  <brief_title>Effectiveness and Safety Study of LAP-BAND Treatment in Subjects With BMI &gt;/= 30 kg/m2 and &lt; 40 kg/m2</brief_title>
  <sponsors>
    <lead_sponsor>
      <agency>Apollo Endosurgery, Inc.</agency>
      <agency_class>Industry</agency_class>
    </lead_sponsor>
