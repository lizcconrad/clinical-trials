  <brief_title>Can CT Enteroclysis Predict the Outcome of Crohn's Disease</brief_title>
  <official_title>Can CT Enteroclysis Predict the Response to Therapy and Outcome in Patient With Crohn's Disease</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Indiana University</agency>
      <agency_class>Other</agency_class>
    </lead_sponsor>
  </sponsors>
