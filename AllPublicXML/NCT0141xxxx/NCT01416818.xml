  <brief_title>Treatment of Depression in Parkinson's Disease</brief_title>
  <official_title>A Randomized, Double-Blind, Placebo-Controlled Study of &quot;Xiaoyao Pill&quot; Treatment of Depression in Patients With Parkinson's Disease</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Xuanwu Hospital, Beijing</agency>
      <agency_class>Other</agency_class>
    </lead_sponsor>
  </sponsors>
