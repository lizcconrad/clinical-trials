  </study_design_info>
  <primary_outcome>
    <measure>Pain during cough</measure>
    <time_frame>6 hours</time_frame>
    <description>VAS-pain score</description>
  </primary_outcome>
  <secondary_outcome>
    <measure>Pain during rest</measure>
    <time_frame>1,2,4,6,12 and 24 hours</time_frame>
    <description>VAS-pain score at rest</description>
  </secondary_outcome>
  <secondary_outcome>
    <measure>Total opioid consumption</measure>
    <time_frame>0-24 hours</time_frame>
    <description>Opioid consumption via PCA-pump.</description>
  </secondary_outcome>
  <secondary_outcome>
    <measure>Postoperative nausea and vomiting</measure>
    <time_frame>1,2,4,6,12,18 and 24 hours</time_frame>
    <description>Nausea score 0-3 No. of vomits</description>
  </secondary_outcome>
