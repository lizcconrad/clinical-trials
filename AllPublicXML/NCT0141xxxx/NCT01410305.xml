  <primary_outcome>
    <measure>Vitamin D levels</measure>
    <time_frame>One time point at entry</time_frame>
    <description>To perform a cross-sectional analysis of blood vitamin D status among the HIV-infected children and young adults to evaluated the point prevalence fo plasma 25(OH)D levels indicating vitamin D insufficiency, deficiency and severe deficiency, and to compare the prevalence to a matched uninfected healthy control group.</description>
  </primary_outcome>
  <number_of_groups>2</number_of_groups>
  <enrollment type="Actual">290</enrollment>
  <condition>Vitamin D Deficiency</condition>
  <arm_group>
    <arm_group_label>HIV+</arm_group_label>
    <description>HIV Positive children or young people between the ages of 8 and 25</description>
  </arm_group>
  <arm_group>
    <arm_group_label>HIV Negative</arm_group_label>
    <description>HIV Negative matched controls by age and race</description>
  </arm_group>
