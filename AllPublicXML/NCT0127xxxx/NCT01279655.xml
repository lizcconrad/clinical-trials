    <intervention_type>Device</intervention_type>
    <intervention_name>tDCS</intervention_name>
    <description>20 min, 1mA, 8 weeks (5 days a week, 20 min a day)</description>
    <arm_group_label>tDCS and training</arm_group_label>
    <arm_group_label>Sham tDCS + Training</arm_group_label>
