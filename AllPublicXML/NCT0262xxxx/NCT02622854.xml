    <primary_purpose>Treatment</primary_purpose>
    <masking>None (Open Label)</masking>
  </study_design_info>
  <primary_outcome>
    <measure>decrease in triglycerides</measure>
    <time_frame>within first 24 h after admission</time_frame>
    <description>as % of starting value</description>
  </primary_outcome>
  <secondary_outcome>
    <measure>time until triglycerides drop to &lt;10 mmol/l</measure>
    <time_frame>by the end of hospital stay, up to 100 days</time_frame>
    <description>expressed in days</description>
  </secondary_outcome>
  <secondary_outcome>
    <measure>highest C-reactive protein (CRP)</measure>
    <time_frame>by the end of hospital stay, up to 100 days</time_frame>
  </secondary_outcome>
  <secondary_outcome>
    <measure>% of patients with severe pancreatitis</measure>
    <time_frame>by the end of hospital stay, up to 100 days</time_frame>
  </secondary_outcome>
  <number_of_arms>2</number_of_arms>
  <enrollment type="Anticipated">20</enrollment>
  <condition>Acute Pancreatitis</condition>
  <arm_group>
    <arm_group_label>plasma exchange</arm_group_label>
    <arm_group_type>Experimental</arm_group_type>
    <description>plasma exchange, with 1.5 estimated plasma volume exchanged with albumin solution, using citrate anticoagulation, performed daily until triglycerides &lt;=10 mmol/l</description>
  </arm_group>
  <arm_group>
    <arm_group_label>conservative treatment</arm_group_label>
    <arm_group_type>Active Comparator</arm_group_type>
    <description>infusion of 5% glucose and insulin, to maintain blood glucose at 5-8 mmol/l</description>
  </arm_group>
  <intervention>
    <intervention_type>Procedure</intervention_type>
    <intervention_name>plasma exchange</intervention_name>
    <description>see arm description</description>
    <arm_group_label>plasma exchange</arm_group_label>
  </intervention>
  <intervention>
    <intervention_type>Drug</intervention_type>
    <intervention_name>conservative treatment</intervention_name>
    <description>see arm description</description>
    <arm_group_label>conservative treatment</arm_group_label>
    <other_name>glucose and insulin</other_name>
  </intervention>
  <eligibility>
    <criteria>
      <textblock>
        Inclusion Criteria:

          -  mild acute hypertriglyceridemic pancreatitis

          -  triglycerides &gt;15 but &lt; 40 mmol/l

        Exclusion Criteria:

          -  pregnancy

          -  severe course of pancreatitis
      </textblock>
    </criteria>
    <gender>All</gender>
