  <brief_title>Prospective Comparison of Indirect Pulp Therapy and Mineral Trioxide Aggregate Pulpotomy in Decayed Primary Molars</brief_title>
  <official_title>Prospective Comparison of Indirect Pulp Therapy and Mineral Trioxide Aggregate Pulpotomy in Decayed Primary Molars</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>University of Michigan</agency>
      <agency_class>Other</agency_class>
