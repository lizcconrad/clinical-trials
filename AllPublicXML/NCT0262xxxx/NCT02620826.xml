  </arm_group>
  <intervention>
    <intervention_type>Procedure</intervention_type>
    <intervention_name>Indirect pulp therapy</intervention_name>
    <description>Decayed dentin is lined with a resin-modified glass ionomer (Vitrebond Plus)</description>
    <arm_group_label>Indirect pulp therapy</arm_group_label>
  </intervention>
  <intervention>
    <intervention_type>Procedure</intervention_type>
    <intervention_name>Pulpotomy</intervention_name>
