  <brief_title>Hsv 1 and 2 Gowey Protocol Versus Placebo</brief_title>
  <official_title>Phase II Clinical Trial of Versabase/Sarracenia Purpurea Versus Placebo</official_title>
  <sponsors>
    <lead_sponsor>
