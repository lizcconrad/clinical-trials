  <brief_title>Treatment Adherence of Tuberculosis Medicines</brief_title>
  <acronym>TBAD</acronym>
  <official_title>Interventions to Promote Adherence to Tuberculosis Treatment Among Patients Attending Basic Medical Unit of Taluka Gambat, Pakistan</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Gambat Institute of Medical Sciences</agency>
