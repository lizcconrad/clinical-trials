  <primary_outcome>
    <measure>Evaluation of the restoration of respiratory functions</measure>
    <time_frame>one year</time_frame>
    <description>4 items will be used:
0: no dyspnea
1: moderate dyspnea
2: significant dyspnea
3: major dyspnea</description>
  </primary_outcome>
  <primary_outcome>
    <measure>Evaluation of the restoration of the ability to swallow by nasofibroscopy</measure>
    <time_frame>one year</time_frame>
    <description>3 items will be used:
1: no aspiration
2: moderate aspiration
3: massive aspiration</description>
  </primary_outcome>
  <enrollment type="Anticipated">5</enrollment>
  <condition>Carcinomatous Disease</condition>
  <intervention>
    <intervention_type>Device</intervention_type>
