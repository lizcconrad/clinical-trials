  <primary_outcome>
    <measure>Adenosine induced vasodilation</measure>
    <time_frame>following a three day treatment with either heme arginate or L arginine</time_frame>
  </primary_outcome>
  <secondary_outcome>
    <measure>heme oxygenase expression and activity</measure>
    <time_frame>assessed during and following a three day treatment with either heme arginate or L-arginine</time_frame>
  </secondary_outcome>
