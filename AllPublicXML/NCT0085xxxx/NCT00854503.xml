  <brief_title>Metabolic and Vascular Effects of Statins in Untreated Dyslipidemic Diabetic Patients</brief_title>
  <sponsors>
    <lead_sponsor>
      <agency>University of Rome Tor Vergata</agency>
      <agency_class>Other</agency_class>
