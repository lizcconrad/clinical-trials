  </study_design_info>
  <primary_outcome>
    <measure>Serum IL-6 and CRP levels before and after operation</measure>
    <time_frame>0, 2, 12, 24, 48 hours after surgery</time_frame>
  </primary_outcome>
  <primary_outcome>
    <measure>Visual Analogue Scale (VAS) score</measure>
    <time_frame>2, 12, 24, 48 hours after surgery</time_frame>
  </primary_outcome>
  <primary_outcome>
    <measure>Cosmetic outcomes after surgery</measure>
    <time_frame>3 months after surgery</time_frame>
  </primary_outcome>
