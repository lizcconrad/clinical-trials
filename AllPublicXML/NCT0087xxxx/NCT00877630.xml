  <brief_title>Minimal Invasiveness of Endoscopic Thyroidectomy</brief_title>
  <official_title>Minimal Invasiveness of Endoscopic Thyroidectomy</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Second Military Medical University</agency>
      <agency_class>Other</agency_class>
    </lead_sponsor>
