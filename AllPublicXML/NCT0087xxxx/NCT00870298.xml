  <primary_outcome>
    <measure>Reduce concomitant orders for warfarin and tmp/smx</measure>
    <time_frame>7 months</time_frame>
  </primary_outcome>
  <secondary_outcome>
    <measure>Determine if computerized stop order will increase risk for inadvertent cessation of warfarin</measure>
    <time_frame>7 months</time_frame>
  </secondary_outcome>
  <secondary_outcome>
    <measure>Determine if computerized stop order will increase risk of delay of treatment with tmp/sulfa when determined to be necessary for treatment</measure>
    <time_frame>7 months</time_frame>
  </secondary_outcome>
