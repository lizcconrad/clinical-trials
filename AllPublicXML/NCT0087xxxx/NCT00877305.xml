  <brief_title>Effect of Remote Ischemic Preconditioning on Cognitive Function After Cardiac Surgery</brief_title>
  <sponsors>
    <lead_sponsor>
      <agency>Patrick Meybohm</agency>
      <agency_class>Other</agency_class>
    </lead_sponsor>
    <collaborator>
      <agency>University of Schleswig-Holstein</agency>
      <agency_class>Other</agency_class>
    </collaborator>
