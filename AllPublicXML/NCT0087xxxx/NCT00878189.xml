  <brief_summary>
    <textblock>
      This is a phase 1, dose escalating study to determine the safety of PF-03084014 in patients
      with advanced cancer and leukemia
    </textblock>
  </brief_summary>
  <overall_status>Completed</overall_status>
  <start_date type="Actual">June 2009</start_date>
  <completion_date type="Actual">November 2016</completion_date>
  <primary_completion_date type="Actual">January 2013</primary_completion_date>
  <phase>Phase 1</phase>
  <study_type>Interventional</study_type>
  <has_expanded_access>No</has_expanded_access>
