    <primary_purpose>Prevention</primary_purpose>
  </study_design_info>
  <primary_outcome>
    <measure>bacterial count from skin swabs</measure>
    <time_frame>Immediately post-surgery</time_frame>
  </primary_outcome>
  <number_of_arms>2</number_of_arms>
  <condition>Surgical Wound Infection</condition>
  <arm_group>
