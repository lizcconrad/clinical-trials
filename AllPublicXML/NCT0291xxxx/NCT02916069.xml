  <brief_title>Multi Modal Brain Monitoring and Cardiac Surgery</brief_title>
  <official_title>The Impact Multi Modal Brain Monitoring on Patient Out Come After Adult Cardiac Surgery</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Assiut University</agency>
      <agency_class>Other</agency_class>
