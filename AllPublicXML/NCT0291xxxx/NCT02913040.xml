  <brief_title>High Flow in Infants With Bronchiolitis</brief_title>
  <official_title>High Flow Nasal Cannula Therapy for Infants With Bronchiolitis</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Princess Amalia Children's Clinic</agency>
      <agency_class>Other</agency_class>
    </lead_sponsor>
