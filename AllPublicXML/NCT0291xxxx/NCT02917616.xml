  <brief_title>The Effect of Drinking-Water pH on the Human Gut Microbiota</brief_title>
  <sponsors>
    <lead_sponsor>
      <agency>The Novo Nordisk Foundation Center for Basic Metabolic Research</agency>
      <agency_class>Other</agency_class>
