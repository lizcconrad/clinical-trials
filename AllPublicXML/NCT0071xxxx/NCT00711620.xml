  </arm_group>
  <intervention>
    <intervention_type>Drug</intervention_type>
    <intervention_name>Thymosin alpha 1</intervention_name>
    <description>1.6 mg s.c injection twice per day for 5 days, then 1.6 mg s.c injection once per day for 2 days.</description>
    <arm_group_label>Thymosin alpha 1+Standard Therapy</arm_group_label>
    <arm_group_label>normal saline+standard therapy</arm_group_label>
