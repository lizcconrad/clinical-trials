  </study_design_info>
  <enrollment type="Actual">20</enrollment>
  <condition>Type 2 Diabetes</condition>
  <eligibility>
    <study_pop>
      <textblock>
        Type 2 diabetic patients accessing the Diabetologic Centre
      </textblock>
    </study_pop>
    <sampling_method>Non-Probability Sample</sampling_method>
    <criteria>
      <textblock>
        Inclusion Criteria:

          -  Duration of type 2 diabetes for at least 12 months

          -  BMI &lt;40 kg/m2

          -  HbA1c &gt;7.5%

          -  Requiring basal insulin replacement and previously treated with NPH insulin
      </textblock>
    </criteria>
    <gender>All</gender>
    <minimum_age>N/A</minimum_age>
    <maximum_age>N/A</maximum_age>
    <healthy_volunteers>No</healthy_volunteers>
  </eligibility>
