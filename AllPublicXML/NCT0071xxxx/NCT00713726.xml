  <primary_outcome>
    <measure>Pain assessment wuth CRIES and NFCS pain scales during the first 72 hours after surgical procedure</measure>
    <time_frame>Every 2-4h during the first 72 hours after surgical procedure</time_frame>
  </primary_outcome>
  <secondary_outcome>
    <measure>Time between surgical procedure and successful extubation</measure>
    <time_frame>Hospital stay</time_frame>
  </secondary_outcome>
  <secondary_outcome>
    <measure>Time between surgical procedure and achievement of 100 mL/kg of enteral feeding</measure>
    <time_frame>hospital stay</time_frame>
  </secondary_outcome>
