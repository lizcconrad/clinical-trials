    <time_frame>12 months</time_frame>
  </primary_outcome>
  <secondary_outcome>
    <measure>Frequency of withdrawal (according to reasons)</measure>
    <time_frame>12 months</time_frame>
  </secondary_outcome>
  <secondary_outcome>
    <measure>Frequency of dose modifications</measure>
    <time_frame>12 months</time_frame>
  </secondary_outcome>
  <secondary_outcome>
