  <primary_outcome>
    <measure>Boston Bowel Preparation Scale value</measure>
    <time_frame>at time of colonscopy</time_frame>
    <description>evaluated by two endoscopists who are blinded to treatment assigned at randomization</description>
  </primary_outcome>
  <primary_outcome>
    <measure>patient reported acceptability score</measure>
    <time_frame>just prior to colonscopy</time_frame>
    <description>using visual analog scale</description>
  </primary_outcome>
  <secondary_outcome>
