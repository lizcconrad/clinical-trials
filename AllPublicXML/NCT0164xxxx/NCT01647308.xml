  <primary_outcome>
    <measure>Total apoC-III</measure>
    <time_frame>91 Days</time_frame>
    <description>The effect of treatment with ISIS ISIS-APOCIIIRX or Placebo on fasting total apoC-III levels.</description>
  </primary_outcome>
  <secondary_outcome>
    <measure>Insulin Sensitivity</measure>
    <time_frame>Day 92</time_frame>
    <description>Change from baseline in insulin sensitivity</description>
  </secondary_outcome>
