    <time_perspective>Prospective</time_perspective>
  </study_design_info>
  <target_duration>8 Days</target_duration>
  <primary_outcome>
    <measure>cardiac and pulmonary functions</measure>
    <time_frame>1 hour</time_frame>
    <description>cardiac and pulmonary functions will be evaluated by cardiac and pulmonary ultrasound exams for all patient whom have a more than 1 hour surgical intervention</description>
  </primary_outcome>
  <enrollment type="Anticipated">325</enrollment>
  <condition>Intensive Care, Surgical</condition>
  <eligibility>
    <study_pop>
      <textblock>
        patients hospatilized for a major surgery
      </textblock>
    </study_pop>
    <sampling_method>Probability Sample</sampling_method>
    <criteria>
      <textblock>
        Inclusion Criteria:

          -  Physical status score &gt; 1

          -  Anesthesia of duration &gt; 1 hour

          -  Visceral, orthopaedic, vascular, thoracic surgery, neurosurgery

        Exclusion Criteria:

          -  Technical incapacity of accessibility to the ultrasound window

          -  Cardiac or pulmonary transplant
      </textblock>
    </criteria>
    <gender>All</gender>
    <minimum_age>18 Years</minimum_age>
    <maximum_age>N/A</maximum_age>
