  <source>University Hospital, Motol</source>
  <brief_summary>
    <textblock>
      The purpose of this study is to analyze occurence of bleeding complications during invasive
      procedures in septic patients with normal tromboelastometry results despite prolonged
      standard coagulation tests results
    </textblock>
  </brief_summary>
  <overall_status>Completed</overall_status>
  <start_date>January 2013</start_date>
  <completion_date type="Actual">October 2016</completion_date>
  <primary_completion_date type="Actual">October 2016</primary_completion_date>
  <study_type>Observational</study_type>
  <has_expanded_access>No</has_expanded_access>
  <study_design_info>
    <observational_model>Cohort</observational_model>
    <time_perspective>Retrospective</time_perspective>
  </study_design_info>
  <primary_outcome>
    <measure>incidence of bleeding complications</measure>
    <time_frame>2013 - 2016</time_frame>
  </primary_outcome>
  <enrollment type="Actual">76</enrollment>
  <condition>Thrombelastography</condition>
  <condition>Sepsis</condition>
  <eligibility>
    <study_pop>
      <textblock>
        ICU patients with sepsis who underwent invasive procedures
      </textblock>
    </study_pop>
    <sampling_method>Non-Probability Sample</sampling_method>
    <criteria>
      <textblock>
        Inclusion Criteria:

          -  sepsis/septic shock

          -  prolonged PT-INR (international normalized ratio) ≥ 1.3

          -  normal ROTEM-EXTEM results.

        Exclusion Criteria:

          -  patients on antiplatelet drugs or anticoagulant therapy (heparin, vitamin K
             antagonists…)

          -  patients with cirrhosis
      </textblock>
    </criteria>
    <gender>All</gender>
    <minimum_age>24 Years</minimum_age>
    <maximum_age>89 Years</maximum_age>
    <healthy_volunteers>No</healthy_volunteers>
  </eligibility>
