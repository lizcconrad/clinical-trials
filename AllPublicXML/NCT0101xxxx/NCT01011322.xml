  <brief_title>A Study to Investigate the Efficacy of LT-02 in Patients With Mesalazine Refractory Ulcerative Colitis</brief_title>
  <sponsors>
    <lead_sponsor>
      <agency>Lipid Therapeutics GmbH</agency>
      <agency_class>Industry</agency_class>
    </lead_sponsor>
