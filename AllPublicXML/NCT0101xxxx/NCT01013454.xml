  </study_design_info>
  <primary_outcome>
    <measure>Varenicline area under the curve from 0 to infinity (AUCinf) and varenicline area under the curve from 0 to the last quantifiable concentration (AUClast), as data permit</measure>
    <time_frame>8 days</time_frame>
  </primary_outcome>
  <secondary_outcome>
    <measure>Evaluation of adverse events (including skin irritation)</measure>
    <time_frame>8 days</time_frame>
  </secondary_outcome>
  <number_of_arms>1</number_of_arms>
  <enrollment type="Actual">12</enrollment>
  <condition>Smoking Cessation</condition>
  <arm_group>
    <arm_group_label>Varenicline transdermal delivery system</arm_group_label>
