    <time_frame>01.08.2009 - 31.07.2012</time_frame>
  </primary_outcome>
  <enrollment type="Anticipated">20</enrollment>
  <condition>Crohn's Disease</condition>
  <intervention>
    <intervention_type>Procedure</intervention_type>
    <intervention_name>Colonoscopy</intervention_name>
    <description>During the colonoscopy, we instill Acetylcystein and Doxycyline into the fistula.</description>
  </intervention>
  <eligibility>
    <criteria>
      <textblock>
        Inclusion criteria:

          -  fistulizing CD

          -  CD &lt; 6 months

          -  at least one insufficient fistula closure try

        Exclusion criteria:

          -  CDAI &gt; 200

          -  Abscesses

          -  CRP &gt; 100
      </textblock>
    </criteria>
    <gender>All</gender>
    <minimum_age>18 Years</minimum_age>
    <maximum_age>65 Years</maximum_age>
