  <brief_title>Progression to Impaired Glucose Tolerance and Type 2 Diabetes in the Korean People-based KNDP Study</brief_title>
  <sponsors>
    <lead_sponsor>
      <agency>Korea University Guro Hospital</agency>
      <agency_class>Other</agency_class>
    </lead_sponsor>
  </sponsors>
