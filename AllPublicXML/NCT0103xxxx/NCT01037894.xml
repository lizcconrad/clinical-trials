  <brief_title>Can Acupuncture Benefit Surgical Patients With Haemorrhagic Stroke?</brief_title>
  <official_title>Can Acupuncture Benefit Surgical Patients With Haemorrhagic Stroke?</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Chinese University of Hong Kong</agency>
      <agency_class>Other</agency_class>
    </lead_sponsor>
  </sponsors>
