  <brief_title>Neural and Cognitive Mechanisms of Depression and Anxiety: a Multimodal MRI Study</brief_title>
  <official_title>Neural and Cognitive Mechanisms of Depression and Anxiety: a Multimodal MRI Study</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>University of Electronic Science and Technology of China</agency>
      <agency_class>Other</agency_class>
    </lead_sponsor>
