  <brief_title>IL 6 Measurement Using a New Densitometric Bedside (POC) Test</brief_title>
  <sponsors>
    <lead_sponsor>
      <agency>Charite University, Berlin, Germany</agency>
      <agency_class>Other</agency_class>
