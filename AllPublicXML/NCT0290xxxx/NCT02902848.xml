  </study_design_info>
  <primary_outcome>
    <measure>correlation ratio between point-of-care PT/INR value and standard laboratory assessement</measure>
    <time_frame>5 months</time_frame>
  </primary_outcome>
  <enrollment type="Anticipated">30</enrollment>
  <condition>Haemodialysis</condition>
