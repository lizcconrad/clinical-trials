  <primary_outcome>
    <measure>Incidence of sores in ischiatic zone</measure>
    <time_frame>30 days</time_frame>
  </primary_outcome>
  <enrollment type="Anticipated">60</enrollment>
  <condition>Pressure Ulcer</condition>
  <eligibility>
    <study_pop>
      <textblock>
        Persons who are hospitalized in CHU of Nîmes with high risk of sores (Norton &lt;9)
      </textblock>
    </study_pop>
    <sampling_method>Non-Probability Sample</sampling_method>
    <criteria>
      <textblock>
        Inclusion Criteria:

          -  Norton Index &lt;9,

          -  No sores in ischiatic zone,

          -  Sitting position not less than 2 hours per day

        Exclusion Criteria:

          -  Sores in ischiatic zone,

          -  Sitting position &gt;2 hours per day
      </textblock>
    </criteria>
    <gender>All</gender>
    <minimum_age>20 Years</minimum_age>
    <maximum_age>98 Years</maximum_age>
    <healthy_volunteers>No</healthy_volunteers>
  </eligibility>
