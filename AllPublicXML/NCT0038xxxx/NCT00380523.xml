  <study_design_info>
    <allocation>Non-Randomized</allocation>
    <intervention_model>Single Group Assignment</intervention_model>
    <primary_purpose>Treatment</primary_purpose>
    <masking>None (Open Label)</masking>
  </study_design_info>
  <primary_outcome>
    <measure>Evaluate pain using the verbal analog scale (evaluate pain before starting treatment and then evaluate pain every day after had taken arcoxia up to three days)</measure>
  </primary_outcome>
  <secondary_outcome>
    <measure>Patient satisfaction with the drug therapy using PGART scale</measure>
  </secondary_outcome>
  <secondary_outcome>
    <measure>Patient satisfaction was obtained at the end of treatment(on third day)</measure>
  </secondary_outcome>
  <enrollment type="Anticipated">237</enrollment>
  <condition>Pain</condition>
  <intervention>
    <intervention_type>Drug</intervention_type>
    <intervention_name>MK0663, Arcoxia, etoricoxib / Duration of Treatment: 3 Days</intervention_name>
  </intervention>
  <eligibility>
    <criteria>
      <textblock>
        Inclusion Criteria:

          -  Diagnosis of acute pain susceptible of pharmacological treatment

          -  Greater than 18 years of age

          -  Voluntary acceptance to participate in the study and signature of the informed consent
             form

        Exclusion Criteria:

          -  Allergy to etoricoxib or any of its components

          -  Less than 18 years old

          -  Patient is taking anticoagulants

          -  Patient that already has taken any drug as analgesic
      </textblock>
    </criteria>
    <gender>All</gender>
    <minimum_age>18 Years</minimum_age>
    <maximum_age>N/A</maximum_age>
    <healthy_volunteers>No</healthy_volunteers>
  </eligibility>
