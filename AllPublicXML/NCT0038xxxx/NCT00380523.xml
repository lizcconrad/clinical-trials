      <agency>Merck Sharp &amp; Dohme Corp.</agency>
      <agency_class>Industry</agency_class>
    </lead_sponsor>
  </sponsors>
  <source>Merck Sharp &amp; Dohme Corp.</source>
  <brief_summary>
    <textblock>
      Allow physicians to test the efficacy of arcoxia in patients with acute pain.
    </textblock>
  </brief_summary>
  <overall_status>Completed</overall_status>
  <start_date>April 2005</start_date>
  <completion_date type="Actual">May 2005</completion_date>
