    <primary_purpose>Treatment</primary_purpose>
    <masking>None (Open Label)</masking>
  </study_design_info>
  <primary_outcome>
    <measure>Proportion of patients with viral load below 20 copies/ml in plasma and lymphoid tissue at 12 months.</measure>
  </primary_outcome>
  <secondary_outcome>
    <measure>Degree and kinetics of recovery of the immune system.</measure>
  </secondary_outcome>
  <secondary_outcome>
    <measure>New CDC C events</measure>
  </secondary_outcome>
  <secondary_outcome>
    <measure>Mortality</measure>
  </secondary_outcome>
  <enrollment>60</enrollment>
  <condition>HIV Infection</condition>
  <intervention>
    <intervention_type>Drug</intervention_type>
    <intervention_name>tenofovir + abacavir + lopinavir/ritonavir</intervention_name>
  </intervention>
  <intervention>
    <intervention_type>Drug</intervention_type>
    <intervention_name>tenofovir + abacavir + efavirenz</intervention_name>
  </intervention>
  <eligibility>
    <criteria>
      <textblock>
        Inclusion Criteria:

          -  HIV-infection

          -  Antiretroviral-naive

          -  CD4 cell count below 100 cells/mm3

        Exclusion Criteria:

          -  Pregnancy

          -  Current opportunistic infection requiring parenteral therapy

          -  Current malignancies requiring parenteral chemotherapy

          -  Any contraindication to the study drugs
      </textblock>
    </criteria>
    <gender>All</gender>
    <minimum_age>18 Years</minimum_age>
    <maximum_age>N/A</maximum_age>
    <healthy_volunteers>No</healthy_volunteers>
  </eligibility>
