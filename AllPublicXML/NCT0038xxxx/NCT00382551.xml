  <primary_outcome>
    <measure>Changes in flow-mediated vasodilation after 2 weeks intervention compared with baseline</measure>
  </primary_outcome>
  <secondary_outcome>
    <measure>Lipid status after 2 weeks intervention compared with baseline</measure>
  </secondary_outcome>
  <secondary_outcome>
    <measure>Effects in Coagulation factors after 2 weeks intervention</measure>
  </secondary_outcome>
  <secondary_outcome>
    <measure>Effects on markers of inflammation after 2 weeks intervention</measure>
  </secondary_outcome>
  <secondary_outcome>
    <measure>Effects on markers of endothelial function after 2 weeks intervention</measure>
  </secondary_outcome>
  <secondary_outcome>
    <measure>Changes in the overall antioxidant activity in plasma after 2 weeks intervention</measure>
  </secondary_outcome>
  <enrollment type="Actual">49</enrollment>
  <condition>Coronary Heart Disease</condition>
