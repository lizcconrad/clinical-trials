  <brief_title>Nicotine as an Adjuvant Analgesic for Third Molar Surgery</brief_title>
  <official_title>Effect of Nicotine on Pain After Third Molar Extraction.</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Columbia University</agency>
      <agency_class>Other</agency_class>
