  <primary_outcome>
    <measure>Perception of menstrual pain, through the analog verbal scale during three days.</measure>
  </primary_outcome>
  <secondary_outcome>
    <measure>Quality of life measures during three days.</measure>
  </secondary_outcome>
  <enrollment>337</enrollment>
