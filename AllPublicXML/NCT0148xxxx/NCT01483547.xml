  <intervention>
    <intervention_type>Device</intervention_type>
    <intervention_name>Bispectral Index (BIS Vista, Covidien)</intervention_name>
    <description>BIS values at LOC, PI, ROC.</description>
    <arm_group_label>Neurosurgical</arm_group_label>
    <arm_group_label>Non-neurosurgical</arm_group_label>
  </intervention>
  <eligibility>
    <study_pop>
      <textblock>
        patients undergoing elective craniotomy and elective spinal cord and column surgery.
      </textblock>
    </study_pop>
    <sampling_method>Non-Probability Sample</sampling_method>
    <criteria>
      <textblock>
        Inclusion Criteria:

          -  BIS &gt; 90 at baseline (awake)

          -  ASA I or II

        Exclusion Criteria:

          -  GSC &lt; 15

          -  anticipated difficult ventilation and/or intubation

          -  BMI &gt; 30

          -  surgical site that does not allow BIS monitoring

          -  bilateral hearing loss

          -  not speaking Italian Language
      </textblock>
    </criteria>
    <gender>All</gender>
    <minimum_age>18 Years</minimum_age>
    <maximum_age>65 Years</maximum_age>
    <healthy_volunteers>No</healthy_volunteers>
