  <brief_title>Reliability of BIS Monitoring in Neurosurgical Patients</brief_title>
  <official_title>Reliability of Bispectral Index for Depth of Anesthesia Monitoring in Neurosurgical Patients</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Fondazione I.R.C.C.S. Istituto Neurologico Carlo Besta</agency>
      <agency_class>Other</agency_class>
