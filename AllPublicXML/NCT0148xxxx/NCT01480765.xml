    <arm_group_label>Control: Placebo + Placebo</arm_group_label>
    <arm_group_type>Placebo Comparator</arm_group_type>
    <description>Placebo capsules and Placebo infusion</description>
  </arm_group>
  <arm_group>
    <arm_group_label>Pregabalin and Placebo infusion</arm_group_label>
    <arm_group_type>Active Comparator</arm_group_type>
    <description>Pregabalin capsules and Placebo infusion</description>
  </arm_group>
  <arm_group>
    <arm_group_label>Pregabalin + Ketamine infusion</arm_group_label>
