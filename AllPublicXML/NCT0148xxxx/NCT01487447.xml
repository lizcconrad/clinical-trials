    <primary_purpose>Treatment</primary_purpose>
    <masking>None (Open Label)</masking>
  </study_design_info>
  <primary_outcome>
    <measure>Change in score of tinnitus loudness</measure>
    <time_frame>0, 1 minute; 1 hour; 1, 2, 4 and 6 months</time_frame>
  </primary_outcome>
  <primary_outcome>
    <measure>Change in score of tinnitus annoyance</measure>
    <time_frame>0, 1 minute; 1 hour; 1, 2, 4 and 6 months</time_frame>
  </primary_outcome>
  <primary_outcome>
    <measure>Change in residual inhibition</measure>
    <time_frame>1 minute; 1 hour; 1, 2, 4 and 6 months</time_frame>
  </primary_outcome>
  <primary_outcome>
    <measure>Change in score of Tinnitus Handicap Inventory (THI)</measure>
    <time_frame>0, 1, 2, 4 and 6 months</time_frame>
  </primary_outcome>
