  <primary_outcome>
    <measure>Change in time to complete the third of 3 consecutive 3km time trials on bike</measure>
    <time_frame>baseline and 1 week</time_frame>
  </primary_outcome>
  <secondary_outcome>
    <measure>Performance on the 3 consecutive 3km time trials on bike</measure>
    <time_frame>baseline and 1 week</time_frame>
    <description>Performance measures: peak power (watts/kg), mean power (watts/kg), time to peak power (sec), total work (kJ) and maximum cadence (RPMmax)</description>
  </secondary_outcome>
  <other_outcome>
    <measure>Fatigue perception after each of the 3 consecutive 3km time trials on bike</measure>
    <time_frame>baseline and 1 week</time_frame>
    <description>Post-exercise fatigue perception on visual analog scale (VAS)</description>
  </other_outcome>
  <other_outcome>
    <measure>Peak Vo2 consumption during each of the 3km time trials on bike</measure>
    <time_frame>baseline and 1 week</time_frame>
  </other_outcome>
  <number_of_arms>2</number_of_arms>
