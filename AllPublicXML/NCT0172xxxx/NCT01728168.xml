  <primary_outcome>
    <measure>Evidence of a sensitization to legume proteins</measure>
    <time_frame>20 minutes after skin prick</time_frame>
    <description>Evidence of a sensitization to one or more legume proteins (lupin, peanut, soy, and pea)</description>
  </primary_outcome>
  <number_of_groups>2</number_of_groups>
