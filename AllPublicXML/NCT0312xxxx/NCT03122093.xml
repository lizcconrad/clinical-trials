  <brief_title>Celiac Disease and Diabetes Longitudinal Follow-up and Evaluation Study</brief_title>
  <acronym>CD-LiFE</acronym>
  <official_title>Celiac Disease and Diabetes Longitudinal Follow-up and Evaluation Study (CD-LiFE)</official_title>
  <sponsors>
    <lead_sponsor>
