    <arm_group_type>Experimental</arm_group_type>
  </arm_group>
  <intervention>
    <intervention_type>Drug</intervention_type>
    <intervention_name>imidafenacin, KRP-197/ONO-8025</intervention_name>
    <description>0.1 mg BID for 52 weeks</description>
    <arm_group_label>E1</arm_group_label>
  </intervention>
  <intervention>
    <intervention_type>Drug</intervention_type>
    <intervention_name>imidafenacin, KRP-197/ONO-8025</intervention_name>
    <description>0.1 mg BID for 12 weeks and 0.2 mg BID for 52 weeks</description>
    <arm_group_label>E2</arm_group_label>
  </intervention>
  <eligibility>
    <criteria>
      <textblock>
        Inclusion Criteria:

          -  Men and Woman equal or &gt; 20 years old

          -  Patients with urgency, urinary frequency and urgency incontinence

        Exclusion Criteria:

          -  Patients with genuine stress incontinence

          -  Patients suffering from complications such as bladder tumor, urinary tract stone and
             symptomatic urinary tract infection

          -  Patients suffering from complications contraindicating the use of antimuscarinic
             medication

          -  Patients with polyuria
      </textblock>
    </criteria>
    <gender>All</gender>
    <minimum_age>20 Years</minimum_age>
    <maximum_age>N/A</maximum_age>
    <healthy_volunteers>No</healthy_volunteers>
  </eligibility>
