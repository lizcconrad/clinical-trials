  <brief_title>Effect of Cranial Osteopathy on Visual Function</brief_title>
  <official_title>Effect of Cranial Osteopathy on Visual Function</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Nova Southeastern University</agency>
      <agency_class>Other</agency_class>
    </lead_sponsor>
  </sponsors>
