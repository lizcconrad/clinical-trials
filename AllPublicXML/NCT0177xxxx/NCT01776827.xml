  <primary_outcome>
    <measure>Recurrence of hiatal hernia or GERD symptoms</measure>
    <time_frame>3+ years after initial surgery</time_frame>
    <description>Patients will be questioned concerning their gastroesophageal reflux symptoms and hernia recurrence will be assessed using a barium swallow and x-rays.</description>
  </primary_outcome>
  <enrollment type="Actual">69</enrollment>
  <condition>Gastroesophageal Reflux Disease</condition>
  <condition>Hiatal Hernia</condition>
