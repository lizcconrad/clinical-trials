  <brief_title>Does Block Play Improve Language Acquisition: A Randomized Trial</brief_title>
  <official_title>Clinical Trial of Building Block Distribution in Children</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>University of Washington</agency>
      <agency_class>Other</agency_class>
    </lead_sponsor>
