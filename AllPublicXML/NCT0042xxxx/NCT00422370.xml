    <masking>Double</masking>
  </study_design_info>
  <primary_outcome>
    <measure>Improvement in dry mouth symptom</measure>
  </primary_outcome>
  <enrollment type="Anticipated">20</enrollment>
  <condition>Xerostomia</condition>
  <intervention>
    <intervention_type>Device</intervention_type>
    <intervention_name>lipid based additives based on vegetable oil &amp; lecithin</intervention_name>
  </intervention>
  <eligibility>
