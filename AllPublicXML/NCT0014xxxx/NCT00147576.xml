    <primary_purpose>Treatment</primary_purpose>
    <masking>Double</masking>
  </study_design_info>
  <primary_outcome>
    <measure>The amount of alcohol consumed will be based on the total number of standardized drinks consumed during a two-hour laboratory-based self-administration procedure following 7 days of treatment with study medication.</measure>
  </primary_outcome>
  <enrollment type="Actual">88</enrollment>
  <condition>Alcoholism</condition>
