  <brief_title>A Study of Recombinant Human Erythropoietin in Anemic Cancer Patients Undergoing Chemotherapy</brief_title>
  <official_title>A Multicenter, Open-Label Study of Recombinant Human Erythropoietin in Anemic Cancer Patients Undergoing Chemotherapy</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Chugai Pharmaceutical</agency>
      <agency_class>Industry</agency_class>
    </lead_sponsor>
  </sponsors>
  <source>Chugai Pharmaceutical</source>
  <oversight_info>
    <has_dmc>No</has_dmc>
  </oversight_info>
  <brief_summary>
    <textblock>
      The purpose of this study is to evaluate the effectiveness and safety of recombinant human
      erythropoietin in anemic cancer patients undergoing chemotherapy.
    </textblock>
  </brief_summary>
  <overall_status>Completed</overall_status>
  <start_date>February 2004</start_date>
  <completion_date type="Actual">May 2005</completion_date>
  <primary_completion_date type="Actual">November 2004</primary_completion_date>
  <phase>Phase 3</phase>
  <study_type>Interventional</study_type>
  <has_expanded_access>No</has_expanded_access>
  <study_design_info>
    <allocation>Non-Randomized</allocation>
    <intervention_model>Single Group Assignment</intervention_model>
    <primary_purpose>Treatment</primary_purpose>
    <masking>None (Open Label)</masking>
  </study_design_info>
  <primary_outcome>
    <measure>The increase in Hb concentration</measure>
    <time_frame>Day 28th or later</time_frame>
  </primary_outcome>
  <secondary_outcome>
    <measure>Changes in QOL scores</measure>
    <time_frame>84 days</time_frame>
  </secondary_outcome>
  <number_of_arms>2</number_of_arms>
  <enrollment type="Actual">104</enrollment>
  <condition>Chemotherapy Induced Anemia</condition>
  <arm_group>
    <arm_group_label>1</arm_group_label>
    <arm_group_type>Experimental</arm_group_type>
    <description>patient whose ΔHb is less than 1.0g/dL on the day of 7th administration</description>
  </arm_group>
  <arm_group>
    <arm_group_label>2</arm_group_label>
    <arm_group_type>Experimental</arm_group_type>
    <description>patient whose ΔHb is 1.0g/dL or above on the day of 7th administration</description>
  </arm_group>
  <intervention>
    <intervention_type>Drug</intervention_type>
    <intervention_name>recombinant human erythropoietin</intervention_name>
    <description>3600IU(s.c.)/week for 7 weeks and 54000IU(s.c.)/week for 5 weeks</description>
    <arm_group_label>1</arm_group_label>
  </intervention>
  <intervention>
    <intervention_type>Drug</intervention_type>
    <intervention_name>recombinant human erythropoietin</intervention_name>
    <description>36000IU(s.c.)/week for 12 weeks</description>
    <arm_group_label>2</arm_group_label>
  </intervention>
  <eligibility>
    <criteria>
      <textblock>
        Inclusion Criteria:

          -  Cancer patients

        Exclusion Criteria:

          -  a history of myocardial, cerebral or pulmonary infarction

          -  severe hypertension beyond control by drugs
      </textblock>
    </criteria>
    <gender>All</gender>
    <minimum_age>20 Years</minimum_age>
    <maximum_age>79 Years</maximum_age>
    <healthy_volunteers>No</healthy_volunteers>
  </eligibility>
  <overall_official>
    <last_name>Yoshiharu Ishikura</last_name>
    <role>Study Director</role>
    <affiliation>Chugai Pharmaceutical</affiliation>
  </overall_official>
