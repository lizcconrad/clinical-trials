  <brief_title>Study of MRA for Polyarticular Juvenile Idiopathic Arthritis (pJIA)</brief_title>
  <official_title>An Open-Label, Phase III Study to Evaluate the Efficacy, Safety and PK of MRA in Patients With pJIA</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Chugai Pharmaceutical</agency>
      <agency_class>Industry</agency_class>
    </lead_sponsor>
  </sponsors>
