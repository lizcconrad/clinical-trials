    <primary_purpose>Treatment</primary_purpose>
    <masking>Double</masking>
  </study_design_info>
  <primary_outcome>
    <measure>Continuous abstinence Weeks 13 -24.</measure>
  </primary_outcome>
  <secondary_outcome>
    <measure>Continuous abstinence Weeks 13-52</measure>
  </secondary_outcome>
  <secondary_outcome>
    <measure>Long term quit rate at Week 52</measure>
  </secondary_outcome>
  <secondary_outcome>
    <measure>7-day Point Prevalence of abstinence at Weeks 24, 52</measure>
  </secondary_outcome>
  <secondary_outcome>
    <measure>4-week Point Prevalence of abstinence at Week 52</measure>
