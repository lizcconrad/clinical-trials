    <primary_purpose>Treatment</primary_purpose>
    <masking>None (Open Label)</masking>
  </study_design_info>
  <primary_outcome>
    <measure>Patients fron MRA Group of previous study:The frequency of amelioration of at least 20% in terms of the ACR criteria compared to the beginning of the treatment in previous study(MRA012JP)</measure>
    <time_frame>0W,4W,8W,12W,LOBS</time_frame>
  </primary_outcome>
  <primary_outcome>
    <measure>Patients fron non-MRA Group of previous study:The frequency of amelioration of at least 20% in terms of the ACR criteria</measure>
    <time_frame>0W,4W,8W,12W,LOBS</time_frame>
  </primary_outcome>
  <secondary_outcome>
    <measure>Time courses of DAS28, frequencies of amelioration of at least 20%, 50%, and 70% in terms of the ACR criteria, each item in the ACR core set</measure>
    <time_frame>0W,4W,8W,12W,LOBS</time_frame>
  </secondary_outcome>
  <secondary_outcome>
    <measure>Frequency, severity, and seriousness of adverse events and adverse drug reactions</measure>
    <time_frame>Throughout study</time_frame>
  </secondary_outcome>
