  <primary_outcome>
    <measure>Comparison of MAO between the two formulations.</measure>
  </primary_outcome>
  <secondary_outcome>
    <measure>Comparison of BAO and pH parameters between the two formulations.</measure>
  </secondary_outcome>
  <enrollment type="Actual">97</enrollment>
  <condition>Gastroesophageal Reflux</condition>
  <condition>Esophagitis</condition>
  <intervention>
    <intervention_type>Drug</intervention_type>
    <intervention_name>Pantoprazole for approximately 9 weeks</intervention_name>
  </intervention>
  <eligibility>
    <criteria>
      <textblock>
        Inclusion Criteria:

          -  GERD and a history of Erosive Esophagitis documented by endoscopy

          -  H. pylori negative

        Exclusion Criteria:

          -  Gastrointestinal conditions such as esophageal stricture, esophageal varices, previous
             vagotomy

          -  Achlorhydria
      </textblock>
    </criteria>
    <gender>All</gender>
    <minimum_age>18 Years</minimum_age>
    <maximum_age>65 Years</maximum_age>
    <healthy_volunteers>No</healthy_volunteers>
