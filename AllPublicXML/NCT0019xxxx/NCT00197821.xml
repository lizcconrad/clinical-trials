  <brief_title>Evaluation of the Immunogenicity and Reactogenicity of a Pneumococcal Conjugate Vaccine in Healthy Adults</brief_title>
  <sponsors>
    <lead_sponsor>
      <agency>Public Health England</agency>
      <agency_class>Other</agency_class>
