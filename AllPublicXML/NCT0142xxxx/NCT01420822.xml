  <brief_title>Special Drug Use Investigation for ALLERMIST (Long Term)</brief_title>
  <official_title>Special Drug Use Investigation for ALLERMIST (Long Term)</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>GlaxoSmithKline</agency>
      <agency_class>Industry</agency_class>
