  <brief_title>Effect of Consumption of Dairy Product on Upper Gastric Discomfort</brief_title>
  <official_title>Effect of Consumption of Dairy Product on Upper Gastric Discomfort</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Danone Research</agency>
      <agency_class>Industry</agency_class>
    </lead_sponsor>
  </sponsors>
