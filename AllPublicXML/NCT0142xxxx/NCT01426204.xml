  <brief_title>Efficacy, Safety and Adherence of Patients Infected With Hepatitis C Virus in Retreat With INFERGEN (Interferon Alfacon1)</brief_title>
  <acronym>OBSERVER</acronym>
  <sponsors>
    <lead_sponsor>
      <agency>Closter Pharma</agency>
      <agency_class>Industry</agency_class>
    </lead_sponsor>
  </sponsors>
