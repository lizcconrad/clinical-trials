    <has_dmc>No</has_dmc>
  </oversight_info>
  <brief_summary>
    <textblock>
      Stem cell mobilization procedures after chemotherapy and G-CSf performed at our Institution
      between 2002 and 2013 were reviewed in order to define prognostic factors for optimal harvest
    </textblock>
  </brief_summary>
  <overall_status>Completed</overall_status>
  <start_date>January 2002</start_date>
  <completion_date type="Actual">October 2013</completion_date>
  <primary_completion_date type="Actual">October 2013</primary_completion_date>
  <study_type>Observational</study_type>
  <has_expanded_access>No</has_expanded_access>
  <study_design_info>
    <observational_model>Cohort</observational_model>
    <time_perspective>Retrospective</time_perspective>
  </study_design_info>
  <primary_outcome>
    <measure>Blood Stem cell harvest failure rate</measure>
    <time_frame>7 days from hematological recovery</time_frame>
    <description>Patients not able to harvest at least 2x10e6 CD34+/Kg in the specified time frame are considered failures</description>
  </primary_outcome>
  <number_of_groups>1</number_of_groups>
  <enrollment type="Actual">250</enrollment>
  <condition>Blood Stem Cell Harvest Failure</condition>
  <arm_group>
    <arm_group_label>Study group</arm_group_label>
    <description>All patients who underwent stem cell mobilization after chemotherapy and G-CSF at our institution between 2002 and 2013</description>
  </arm_group>
  <eligibility>
    <study_pop>
      <textblock>
        Patients who underwent mobilization
      </textblock>
    </study_pop>
    <sampling_method>Non-Probability Sample</sampling_method>
    <criteria>
      <textblock>
        Inclusion Criteria:

          -  Mobilization with chemotherapy and G-CSF

          -  Years 2002-2013

        Exclusion Criteria:

          -  mobilization with G-CSF alone

          -  mobilization with plerixafor
      </textblock>
    </criteria>
    <gender>All</gender>
    <minimum_age>16 Years</minimum_age>
    <maximum_age>75 Years</maximum_age>
    <healthy_volunteers>No</healthy_volunteers>
  </eligibility>
