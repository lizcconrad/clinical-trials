  <intervention>
    <intervention_type>Device</intervention_type>
    <intervention_name>Width 1000 HU/Level -450 HU</intervention_name>
    <description>Double-lumen tube size is selected according to the internal diameter of the left mainstem bronchus measured in the chest computed tomography with width 1000 HU and level -450 HU.</description>
    <arm_group_label>Width 1000 HU/Level -450 HU</arm_group_label>
  </intervention>
  <intervention>
    <intervention_type>Device</intervention_type>
    <intervention_name>Width 400 HU/Level 25 HU</intervention_name>
