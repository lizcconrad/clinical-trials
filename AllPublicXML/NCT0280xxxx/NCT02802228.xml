  <primary_outcome>
    <measure>Safety (incidence and severity of adverse events)</measure>
    <time_frame>Through 97 days</time_frame>
    <description>safety will be assessed by the incidence and severity of adverse events</description>
  </primary_outcome>
  <secondary_outcome>
    <measure>Hepatic venous pressure gradient (HVPG)</measure>
    <time_frame>Baseline and 90 days</time_frame>
    <description>The HVPG will be measured through Day 90 and will be compared to baseline</description>
  </secondary_outcome>
  <secondary_outcome>
    <measure>Aspartate Aminotransferase (AST)</measure>
    <time_frame>Baseline and 90 days</time_frame>
    <description>AST values through Day 90 will be compared to baseline</description>
  </secondary_outcome>
  <secondary_outcome>
