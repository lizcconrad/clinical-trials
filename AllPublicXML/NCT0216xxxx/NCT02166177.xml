  <brief_title>Safety and Efficacy Study of Regulatory T Cell Therapy in Liver Transplant Patients</brief_title>
  <acronym>ThRIL</acronym>
  <official_title>Pilot Study Evaluating the Safety and Efficacy Profile of Regulatory T Cell Therapy in Liver Transplant Recipients</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Guy's and St Thomas' NHS Foundation Trust</agency>
      <agency_class>Other</agency_class>
