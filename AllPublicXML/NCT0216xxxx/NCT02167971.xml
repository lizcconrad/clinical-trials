  <brief_title>Brain Stimulation for Traumatic Brain Injury</brief_title>
  <acronym>TMS/DAI</acronym>
  <official_title>Evaluation of Repetitive Transcranial Magnetic Stimulation on the Cognitive Rehabilitation After Traumatic Diffuse Axonal Injury.</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>University of Sao Paulo</agency>
      <agency_class>Other</agency_class>
