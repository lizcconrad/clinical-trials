  <brief_summary>
    <textblock>
      Study to determine the effectiveness of the PresVIEW Scleral Implant to improve near vision
      in patients who require reading glasses.
    </textblock>
  </brief_summary>
  <overall_status>Completed</overall_status>
  <start_date>December 2003</start_date>
  <completion_date type="Actual">March 2015</completion_date>
  <primary_completion_date type="Actual">March 2015</primary_completion_date>
