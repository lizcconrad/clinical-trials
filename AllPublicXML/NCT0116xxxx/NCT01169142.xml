  <brief_title>Study of Vitamin D in the Severely Mentally Ill</brief_title>
  <official_title>A Pilot Study of Vitamin D Supplementation in Bronx Psychiatric Patients</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Bronx Psychiatric Center</agency>
      <agency_class>Other</agency_class>
