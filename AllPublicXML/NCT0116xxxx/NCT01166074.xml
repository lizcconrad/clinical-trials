  <brief_summary>
    <textblock>
      This study is a retrospective chart review of the use of subcutaneous IgG (SCIG) in infants
      less than two years old.
    </textblock>
  </brief_summary>
  <overall_status>Completed</overall_status>
  <start_date>May 2010</start_date>
  <completion_date type="Actual">December 2010</completion_date>
  <primary_completion_date type="Actual">December 2010</primary_completion_date>
