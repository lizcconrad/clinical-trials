    <intervention_model>Parallel Assignment</intervention_model>
    <primary_purpose>Diagnostic</primary_purpose>
    <masking>Single (Investigator)</masking>
  </study_design_info>
  <primary_outcome>
    <measure>Colon cleanliness</measure>
    <time_frame>one week from capsule examination</time_frame>
  </primary_outcome>
  <secondary_outcome>
    <measure>Tolerability of preparations</measure>
    <time_frame>within 1 day of completing preparation</time_frame>
  </secondary_outcome>
