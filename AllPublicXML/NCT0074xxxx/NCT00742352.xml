  <brief_title>PET FDG Assessment of Change in Atherosclerotic Plaques After Chemotherapy</brief_title>
  <sponsors>
    <lead_sponsor>
      <agency>Tel-Aviv Sourasky Medical Center</agency>
      <agency_class>Other</agency_class>
