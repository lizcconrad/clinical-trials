  <primary_outcome>
    <measure>Proportion of patients with metabolic non-response assessed by FDG-PET standardized uptake value (SUV) 3 weeks and 6 weeks after starting platinum-based therapy</measure>
    <time_frame>Baseline, Week 3, Week 6</time_frame>
  </primary_outcome>
  <primary_outcome>
    <measure>Progression free proportion</measure>
    <time_frame>40 Weeks</time_frame>
  </primary_outcome>
