  <brief_title>Rheos HOPE4HF (Health Outcomes Prospective Evaluation for Heart Failure With Ejection Fraction (EF) ≥ 40%) Trial</brief_title>
  <acronym>HOPE4HF</acronym>
  <official_title>Health Outcomes Prospective Evaluation for Heart Failure With EF ≥ 40%</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>CVRx, Inc.</agency>
      <agency_class>Industry</agency_class>
    </lead_sponsor>
  </sponsors>
