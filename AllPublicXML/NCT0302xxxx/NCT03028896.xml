  <brief_title>90° Rotation Technique for LMA FlexibleTM Insertion</brief_title>
  <official_title>Comparison of Standard Versus 90° Rotation Technique for LMA FlexibleTM Insertion</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Seoul National University Bundang Hospital</agency>
      <agency_class>Other</agency_class>
    </lead_sponsor>
