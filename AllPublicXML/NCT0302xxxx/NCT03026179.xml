  <brief_title>Education of Parents About Discipline in a Way That is Culturally Sensitive</brief_title>
  <official_title>Education of Parents About Discipline in a Way That is Culturally Sensitive</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Vanderbilt University</agency>
      <agency_class>Other</agency_class>
    </lead_sponsor>
  </sponsors>
