  <primary_outcome>
    <measure>Change in postoperative pain, assessed with a numeric rating scale</measure>
    <time_frame>4, 12, 24, 36 and 48 hours after surgery</time_frame>
    <description>A questionnaire with a numeric rating scale (NRS) is used to evaluate pain intensity at 4, 12, 24, 36 and 48 hours postoperatively to assess pain intensity.</description>
  </primary_outcome>
  <secondary_outcome>
    <measure>Change in postoperative nausea, assessed with a questionnaire</measure>
    <time_frame>4, 12, 24, 36 and 48 hours after surgery</time_frame>
    <description>A questionnaire is used to evaluate nausea at 4, 12, 24, 36 and 48 hours postoperatively.</description>
  </secondary_outcome>
  <number_of_arms>2</number_of_arms>
  <enrollment type="Actual">200</enrollment>
