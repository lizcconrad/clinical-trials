  <brief_title>Gut Microbiota and Immune Recovery</brief_title>
  <official_title>Impact of Gut Microbiota on the Immune Recovery in HIV-infection</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Shanghai Public Health Clinical Center</agency>
      <agency_class>Other</agency_class>
    </lead_sponsor>
  </sponsors>
