  <brief_title>Orthostatic Hypotension in Elderly Nursing Home Residents</brief_title>
  <sponsors>
    <lead_sponsor>
      <agency>Medical Research Foundation, The Netherlands</agency>
      <agency_class>Other</agency_class>
