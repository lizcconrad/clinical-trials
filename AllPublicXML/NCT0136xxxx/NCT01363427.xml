  <has_expanded_access>No</has_expanded_access>
  <study_design_info>
    <observational_model>Case-Only</observational_model>
    <time_perspective>Retrospective</time_perspective>
  </study_design_info>
  <primary_outcome>
    <measure>Response to Mesalazine: measured by time to step up therapy</measure>
    <time_frame>12 to 48 months</time_frame>
  </primary_outcome>
  <secondary_outcome>
    <measure>Identification and characterisation of the responding sub-population</measure>
    <time_frame>12 to 48 months</time_frame>
    <description>measured by: (a) Age at diagnosis, (b) Proportion of patients with minor endoscopic lesions, (c) Lack of severe mucosal lesions (Adapted Rutgeerts Score &lt; 2)</description>
  </secondary_outcome>
  <number_of_groups>1</number_of_groups>
