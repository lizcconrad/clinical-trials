  <brief_title>CARES Lumbar Artificial Disc Registry</brief_title>
  <official_title>The Centers for Arthroplasty Research and Education in Spine (CARES) Lumbar Artificial Disc Registry Protocol</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>DePuy Spine</agency>
      <agency_class>Industry</agency_class>
    </lead_sponsor>
  </sponsors>
