    <intervention_type>Procedure</intervention_type>
    <intervention_name>mirror therapy</intervention_name>
    <description>During a session, the child performs a series of 10 single, bilateral and synchronous movements while viewing the reflected image</description>
    <arm_group_label>mirror therapy</arm_group_label>
  </intervention>
