  <brief_title>BDx 7 Day ECG Patch: Electrode Adhesion Clinical Study</brief_title>
  <official_title>BDx 7 Day ECG Patch: Electrode Adhesion Clinical Study</official_title>
  <sponsors>
    <lead_sponsor>
