  <primary_outcome>
    <measure>post-operative pain</measure>
    <time_frame>48 hours</time_frame>
    <description>measured with VAS for pain, drugs for relief pain</description>
  </primary_outcome>
  <secondary_outcome>
    <measure>Functional knee score</measure>
    <time_frame>3 month</time_frame>
    <description>measured with WOMAC, KSS</description>
  </secondary_outcome>
  <secondary_outcome>
    <measure>post-operative nausea and vomiting</measure>
    <time_frame>48 hours</time_frame>
    <description>measured with amount of nausea/vomiting and drugs requiring for fixed its.</description>
  </secondary_outcome>
  <secondary_outcome>
    <measure>complication of preoperative dexamethasone</measure>
    <time_frame>2 weeks</time_frame>
    <description>measured with wound complication, blood sugar level, WBC count</description>
  </secondary_outcome>
  <other_outcome>
    <measure>Knee range of motion</measure>
    <time_frame>3 months</time_frame>
    <description>measuring range of motion with goniometer</description>
  </other_outcome>
