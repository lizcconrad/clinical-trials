  <primary_outcome>
    <measure>Change in quadriceps muscle cross-sectional area</measure>
    <time_frame>One day before and directly after cessation of bed rest.</time_frame>
  </primary_outcome>
  <secondary_outcome>
    <measure>Change in lower back cross-sectional area</measure>
    <time_frame>One day before and directly after cessation of bed rest.</time_frame>
