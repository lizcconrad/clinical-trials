  <primary_outcome>
    <measure>Blood loss</measure>
    <time_frame>48 hours</time_frame>
    <description>- detected total blood loss from hemoglobin at 24,48 hours after surgery, maximum Hb drop and blood loss collected in radivac drain</description>
  </primary_outcome>
  <secondary_outcome>
    <measure>inflammation</measure>
    <time_frame>48 hours</time_frame>
    <description>determine inflammatory response with C-rective protein (CRP) at post-op 48 hours</description>
  </secondary_outcome>
  <secondary_outcome>
    <measure>Knee function</measure>
    <time_frame>3 months</time_frame>
    <description>measured with WOMAC</description>
  </secondary_outcome>
  <secondary_outcome>
    <measure>knee range of motion</measure>
    <time_frame>3 months</time_frame>
  </secondary_outcome>
