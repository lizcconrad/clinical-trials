  <primary_outcome>
    <measure>Change in Fugl-Meyer Assessment Scale after training</measure>
    <time_frame>1) up to 7 weeks, 2) 3 months after participants finish the training</time_frame>
  </primary_outcome>
  <number_of_arms>1</number_of_arms>
  <enrollment type="Actual">24</enrollment>
  <condition>Stroke</condition>
  <arm_group>
