    <time_perspective>Prospective</time_perspective>
  </study_design_info>
  <primary_outcome>
    <measure>Mean Mini-Mental State Examination (MMSE) score</measure>
    <time_frame>At Week 12</time_frame>
  </primary_outcome>
  <primary_outcome>
