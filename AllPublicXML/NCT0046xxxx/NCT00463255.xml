  <brief_title>Diet and the Aging Brain</brief_title>
  <official_title>Phase IV Interventional Study: Effect of Diet on Brain Function in Elderly Healthy People</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>University Hospital Muenster</agency>
      <agency_class>Other</agency_class>
    </lead_sponsor>
