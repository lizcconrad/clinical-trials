  <brief_title>Using of Irradiated Amnion Dressing for the Treatment of Skin Ulcer</brief_title>
  <official_title>Using of Irradiated Amnion Dressing for the Treatment of Skin Ulcer</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Egyptian Atomic Energy Authority</agency>
      <agency_class>Other</agency_class>
    </lead_sponsor>
