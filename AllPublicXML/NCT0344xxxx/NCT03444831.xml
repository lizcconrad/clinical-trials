  <brief_title>Buspirone Plus Omeprazole for Functional Dyspepsia</brief_title>
  <official_title>Buspirone Plus Omeprazole for Functional Dyspepsia: A Randomised Placebo Clinical Trial</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Isfahan University of Medical Sciences</agency>
      <agency_class>Other</agency_class>
    </lead_sponsor>
  </sponsors>
