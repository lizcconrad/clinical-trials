  <brief_title>A Study of S5G4T-1 in the Treatment of Papulopustular Rosacea</brief_title>
  <official_title>A Phase 3 Multi-Center, Double-Blind, Randomized, Vehicle-Controlled Study of S5G4T-1 in the Treatment of Papulopustular Rosacea</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Sol-Gel Technologies, Ltd.</agency>
      <agency_class>Industry</agency_class>
    </lead_sponsor>
  </sponsors>
