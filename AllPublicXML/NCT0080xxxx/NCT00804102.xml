  <brief_title>Transcorneal Electrical Stimulation Therapy for Retinal Disease</brief_title>
  <official_title>Transcorneal Electrical Stimulation Therapy for Retinal Disease - A Randomized, Single-blind Pilot Study</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Okuvision GmbH</agency>
      <agency_class>Industry</agency_class>
    </lead_sponsor>
  </sponsors>
