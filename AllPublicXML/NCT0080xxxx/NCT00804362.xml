  <primary_outcome>
    <measure>Correlation with validated measures of pain interference, function, quality of life, and mood.</measure>
    <time_frame>Quarterly</time_frame>
  </primary_outcome>
  <enrollment type="Actual">131</enrollment>
  <condition>Sickle Cell Disease</condition>
  <condition>Pain</condition>
  <eligibility>
    <study_pop>
      <textblock>
        Children and adolescents diagnosed with sickle cell disease.
      </textblock>
    </study_pop>
    <sampling_method>Non-Probability Sample</sampling_method>
    <criteria>
      <textblock>
        Inclusion Criteria:

          -  Documented sickle cell disease

          -  7 years old or greater

          -  Primary caregiver present at the first visit for children &lt; 18 years of age

        Exclusion Criteria:

          -  Primary language spoken other than English

          -  Patient is in acute pain episode at time of initial visit
      </textblock>
    </criteria>
    <gender>All</gender>
    <minimum_age>7 Years</minimum_age>
    <maximum_age>21 Years</maximum_age>
    <healthy_volunteers>No</healthy_volunteers>
  </eligibility>
