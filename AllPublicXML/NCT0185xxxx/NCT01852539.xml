  <brief_title>Dexmedetomidine for Laryngeal Mask Airway Insertion</brief_title>
  <official_title>Optimal Dose of Dexmedetomidine for Laryngeal Mask Airway Insertion During Propofol Induction</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Ajou University School of Medicine</agency>
      <agency_class>Other</agency_class>
    </lead_sponsor>
