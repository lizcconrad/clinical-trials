  </arm_group>
  <arm_group>
    <arm_group_label>Mobile Community Later</arm_group_label>
    <arm_group_type>Experimental</arm_group_type>
    <description>Participants will not be registered to a mobile community at first. After 6 weeks, They will be registered to the mobile community.</description>
  </arm_group>
  <intervention>
    <intervention_type>Device</intervention_type>
    <intervention_name>Mobile community</intervention_name>
    <description>A mobile community based on smartphone application (WalkOn) which gives participants to information about their own steps and others'.</description>
    <arm_group_label>Mobile Community First</arm_group_label>
    <arm_group_label>Mobile Community Later</arm_group_label>
  </intervention>
  <eligibility>
    <criteria>
      <textblock>
        Inclusion Criteria:

          -  Stage 0-III breast cancer

        Exclusion Criteria:

          -  Stage IV breast cancer

          -  Breast cancer recurrence or metastasis

          -  Severe medical illness
      </textblock>
    </criteria>
    <gender>Female</gender>
    <minimum_age>20 Years</minimum_age>
    <maximum_age>60 Years</maximum_age>
    <healthy_volunteers>No</healthy_volunteers>
