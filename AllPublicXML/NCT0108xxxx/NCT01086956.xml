    <allocation>Randomized</allocation>
    <primary_purpose>Diagnostic</primary_purpose>
  </study_design_info>
  <primary_outcome>
    <measure>plasma glucose, insulin, cortisol, epinephrine, norepinephrine, prolactin</measure>
    <time_frame>from preoperative baseline to postoperative 24 hours</time_frame>
  </primary_outcome>
  <enrollment type="Actual">60</enrollment>
  <condition>Prostatic Cancer</condition>
  <intervention>
    <intervention_type>Drug</intervention_type>
    <intervention_name>epidural infusion of saline, ropivecaine, or ropivacaine and sufentanil</intervention_name>
  </intervention>
  <eligibility>
    <criteria>
      <textblock>
        Inclusion Criteria:

          -  elective RRP for prostatic cancer scheduled in the morning (9-11 a.m.)

          -  patients aged more than 65 years

          -  ASA physical status I or II

          -  absence of contraindications to epidural approach

          -  absence of a history of chronic pain or opioid medication

        Exclusion Criteria:

          -  contraindication to epidural catheterization
      </textblock>
    </criteria>
    <gender>All</gender>
    <minimum_age>65 Years</minimum_age>
