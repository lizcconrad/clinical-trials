  <brief_title>The Role of Expectations in Experimentally Induced Sadness</brief_title>
  <official_title>The Role of Expectations in Experimentally Induced Sadness</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Philipps University Marburg Medical Center</agency>
      <agency_class>Other</agency_class>
    </lead_sponsor>
