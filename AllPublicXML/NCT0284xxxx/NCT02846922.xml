  <brief_title>Catheter Ablation and Rate Control of Atrial Fibrillation in Patients With Heart Failure</brief_title>
  <sponsors>
    <lead_sponsor>
      <agency>Nanjing Medical University</agency>
      <agency_class>Other</agency_class>
