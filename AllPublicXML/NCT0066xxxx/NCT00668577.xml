  <primary_outcome>
    <measure>The absence of primary and accumulated dermal irritability and dermal sensitivity will be evaluated using International Contact Dermatitis Research Group (ICDRG) scale.</measure>
    <time_frame>six weeks</time_frame>
  </primary_outcome>
  <enrollment type="Actual">52</enrollment>
  <condition>Healthy</condition>
