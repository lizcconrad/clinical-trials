  <primary_outcome>
    <measure>Erectile function (EF) domain score of the International Index of Erectile Function (IIEF)calculated as the sum of scores from Questions 1 to 5 and 15</measure>
    <time_frame>At Week 12 using the Last Observation Carried Forward (LOCF) method to account for dropouts.</time_frame>
  </primary_outcome>
  <secondary_outcome>
    <measure>Success in penetration and maintenance as recorded in subject diaries</measure>
    <time_frame>At Weeks 4, 8 and 12 (as observed and at LOCF)</time_frame>
  </secondary_outcome>
  <secondary_outcome>
    <measure>Scores for questions 3 and 4 of the IIEF</measure>
    <time_frame>At Weeks 4, 8 and 12 (as observed and at LOCF)</time_frame>
  </secondary_outcome>
  <secondary_outcome>
    <measure>Other IIEF domain scores</measure>
    <time_frame>At Week 12 (observed and at LOCF)</time_frame>
  </secondary_outcome>
  <secondary_outcome>
    <measure>Global Assessment Question (GAQ) responses</measure>
    <time_frame>At Weeks 4, 8 and 12 (as observed and at LOCF)</time_frame>
  </secondary_outcome>
  <secondary_outcome>
    <measure>Rates of premature termination, adverse events, laboratory abnormalities, ECG abnormalities, and concomitant medication use.</measure>
    <time_frame>At Weeks 4, 8 and 12 (as observed and at LOCF)</time_frame>
  </secondary_outcome>
