  <brief_title>Evaluation of the Safety and Effectiveness of Sepraspray™ in Reducing Post-surgical Adhesions</brief_title>
  <official_title>Evaluation of the Safety and Effectiveness of Sepraspray™ in Limiting the Formation of Postoperative Adhesions to Serosal Tissue (Abdominal Surgery)</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Genzyme, a Sanofi Company</agency>
      <agency_class>Industry</agency_class>
    </lead_sponsor>
  </sponsors>
