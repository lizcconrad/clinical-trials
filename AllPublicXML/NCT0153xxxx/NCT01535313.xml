  <study_design_info>
    <allocation>Randomized</allocation>
    <intervention_model>Parallel Assignment</intervention_model>
    <primary_purpose>Diagnostic</primary_purpose>
    <masking>None (Open Label)</masking>
  </study_design_info>
  <primary_outcome>
    <measure>Diagnostic usefulness (yes/no) of biopsy cylinder</measure>
    <time_frame>within 1 week of biopsy</time_frame>
    <description>The bone marrow biopsy cylinder is assessed by a pathologist who rates either &quot;diagnostic&quot; or &quot;non diagnostic&quot;</description>
  </primary_outcome>
  <secondary_outcome>
    <measure>patient pain during procedure</measure>
    <time_frame>day 1 (two time points) and day 3-5</time_frame>
    <description>patients underdoing biopsy rate the pain during, 15 min after and 3-5 days after the proceedure</description>
  </secondary_outcome>
  <number_of_arms>2</number_of_arms>
  <enrollment type="Actual">60</enrollment>
  <condition>Bone Marrow Biopsy</condition>
  <arm_group>
    <arm_group_label>Manual (Hospital Systems TRAP Needle)</arm_group_label>
