    <measure>Changes in arterial pressure and creatinine</measure>
    <time_frame>4 months</time_frame>
  </primary_outcome>
  <secondary_outcome>
    <measure>Changes in plasmatic renin activity and aldosterone and noradrenaline concentration.</measure>
