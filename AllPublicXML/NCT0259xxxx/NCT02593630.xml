    <arm_group_label>Unicirc circumcision</arm_group_label>
  </intervention>
  <eligibility>
    <criteria>
      <textblock>
        Inclusion Criteria:

          -  healthy boys desiring circumcision

        Exclusion Criteria:

          -  current illness

          -  bleeding disorder

          -  reaction to local anaesthetic

          -  infection

          -  any penile abnormality potentially complicating circumcision
      </textblock>
    </criteria>
    <gender>Male</gender>
    <minimum_age>12 Years</minimum_age>
    <maximum_age>15 Years</maximum_age>
