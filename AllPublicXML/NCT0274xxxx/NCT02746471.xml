  <brief_title>Reveal LINQ Registry</brief_title>
  <official_title>Medtronic Reveal LINQ Insertable Cardiac Monitor Registry</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Medtronic Cardiac Rhythm and Heart Failure</agency>
