  <primary_outcome>
    <measure>Change in Choroidal thickness</measure>
    <time_frame>before and 1 week, 1 month, 3 months and 6 months after non penetrating deep sclerectomy</time_frame>
    <description>Choroidal thickness measured by optic coherence tomography</description>
  </primary_outcome>
  <primary_outcome>
    <measure>Change in Intraocular pressure</measure>
    <time_frame>before and 1 week, 1 month, 3 months and 6 months after non penetrating deep sclerectomy</time_frame>
