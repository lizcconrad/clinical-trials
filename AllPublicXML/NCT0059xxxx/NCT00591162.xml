  <brief_title>Bone Disease in Severely Burned Children</brief_title>
  <official_title>Bone Disease in Severely Burned Children</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>The University of Texas Medical Branch, Galveston</agency>
