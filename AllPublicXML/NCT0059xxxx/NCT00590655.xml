    <measure>weight result</measure>
    <time_frame>2 years after weight loss phase</time_frame>
  </primary_outcome>
  <secondary_outcome>
    <measure>quality of life and eating behavior</measure>
    <time_frame>2 years after active weight loss</time_frame>
  </secondary_outcome>
