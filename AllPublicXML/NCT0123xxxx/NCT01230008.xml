  <brief_title>Radiotherapy in Primary Mediastinal Lymphoma</brief_title>
  <acronym>pml</acronym>
  <official_title>Adjuvant Radiotherapy in Primary Mediastinal Lymphoma in Patients That Received R-CHOP</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Instituto Mexicano del Seguro Social</agency>
