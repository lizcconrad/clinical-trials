  <primary_outcome>
    <measure>Risk of Clinical Malaria</measure>
    <time_frame>1 year</time_frame>
    <description>Fever(temperature greater or equal to 37.5 degrees centigrade or history of fever in past 24 hours) in presence of parasitemia.</description>
  </primary_outcome>
  <primary_outcome>
    <measure>Cognitive function tests</measure>
    <time_frame>1 year</time_frame>
    <description>Mean score in the cognitive function tests (Raven's Matrices test and Code transmission test)</description>
  </primary_outcome>
