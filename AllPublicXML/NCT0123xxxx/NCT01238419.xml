  <brief_title>Physiotulle vs Urgotul in the Treatment of Leg Ulcer</brief_title>
  <official_title>Clinical Assessment of Physiotulle Dressing Compared to Urgotul Dressing in the Treatment of Leg Ulcer</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Coloplast A/S</agency>
      <agency_class>Industry</agency_class>
    </lead_sponsor>
  </sponsors>
