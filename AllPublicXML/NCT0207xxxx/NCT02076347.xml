    <intervention_type>Behavioral</intervention_type>
    <intervention_name>Electronic Message Intervention</intervention_name>
    <description>Pharmacist communicates need for monitoring directly to patients and instructs them to obtain monitoring on their own time without need for an office visit with physician</description>
    <arm_group_label>Electronic message-based intervention</arm_group_label>
  </intervention>
  <eligibility>
