    <allocation>Randomized</allocation>
    <intervention_model>Parallel Assignment</intervention_model>
    <primary_purpose>Treatment</primary_purpose>
    <masking>Quadruple (Participant, Care Provider, Investigator, Outcomes Assessor)</masking>
  </study_design_info>
  <primary_outcome>
    <measure>Change in the levels of glycosylated hemoglobin (HbA1c)</measure>
    <time_frame>At baseline and at treatment week 16</time_frame>
  </primary_outcome>
  <secondary_outcome>
    <measure>Change in fasting plasma glucose levels</measure>
    <time_frame>At baseline and at treatment week 16</time_frame>
  </secondary_outcome>
  <secondary_outcome>
    <measure>Change in plasma glucose levels measured 2 hours after a standard meal</measure>
    <time_frame>At baseline and at treatment week 16</time_frame>
  </secondary_outcome>
  <secondary_outcome>
    <measure>Change in fasting serum insulin levels</measure>
    <time_frame>At baseline and at treatment week 16</time_frame>
  </secondary_outcome>
  <secondary_outcome>
    <measure>Responder rates</measure>
    <time_frame>At week 16</time_frame>
    <description>Defined as the percentage of subjects who achieve optimal glycemic control, defined by hemoglobin A1c of 1) &lt; 7%, and 2) &lt; 6.5%</description>
  </secondary_outcome>
  <secondary_outcome>
    <measure>Number of participants with AEs</measure>
    <time_frame>Up to 16 weeks</time_frame>
  </secondary_outcome>
  <number_of_arms>2</number_of_arms>
  <enrollment type="Anticipated">286</enrollment>
  <condition>Diabetes Mellitus, Type 2</condition>
  <arm_group>
    <arm_group_label>Acarbose plus metformin arm</arm_group_label>
    <arm_group_type>Experimental</arm_group_type>
    <description>Loose combination of acarbose and metformin given 3 times daily (together with main meals; breakfast, lunch, dinner). Acarbose dose will be started at a low dose and increased within 2 weeks to the target dose.</description>
  </arm_group>
  <arm_group>
    <arm_group_label>Metformin plus placebo arm</arm_group_label>
    <arm_group_type>Active Comparator</arm_group_type>
    <description>Loose combination of placebo and metformin given 3 times daily (together with main meals; breakfast, lunch, dinner).</description>
  </arm_group>
  <intervention>
    <intervention_type>Drug</intervention_type>
    <intervention_name>Acarbose</intervention_name>
    <description>Acarbose will be started at a lower daily dose of 50 mg, which will be increased to 100 mg at week 2 and to 150 mg at week 3.</description>
    <arm_group_label>Acarbose plus metformin arm</arm_group_label>
  </intervention>
  <intervention>
    <intervention_type>Drug</intervention_type>
    <intervention_name>Metformin</intervention_name>
    <description>Single tablets of metformin 500 mg tablet will be given three times daily together with main meals (breakfast, lunch, dinner).</description>
    <arm_group_label>Acarbose plus metformin arm</arm_group_label>
    <arm_group_label>Metformin plus placebo arm</arm_group_label>
  </intervention>
  <intervention>
    <intervention_type>Drug</intervention_type>
    <intervention_name>Placebo</intervention_name>
    <description>Acarbose placebo tablets will be given at breakfast and lunch during week 1 and at lunch during week 2 in experimental arm; In active comparator arm, Acarbose placebo tablets will be given three times daily together with main meals(breakfast, lunch, dinner)</description>
    <arm_group_label>Acarbose plus metformin arm</arm_group_label>
    <arm_group_label>Metformin plus placebo arm</arm_group_label>
  </intervention>
  <eligibility>
    <criteria>
      <textblock>
        Inclusion Criteria:

          -  Males and females, aged 18 to less than 80 years

          -  Diabetes mellitus type 2, that is insufficently controlled with metformin defined by
             HbA1c between 7.0 % and 10.0%, inclusive

          -  Body mass index between 22 and 45 kg/mÂ², inclusive

          -  Women and men of reproductive potential must agree to use adequate contraception when
             sexually active

        Exclusion Criteria:

          -  Fasting plasma glucose &gt; 14.0 mmol/l

          -  Severe metabolic diabetic complications
      </textblock>
    </criteria>
    <gender>All</gender>
    <minimum_age>18 Years</minimum_age>
    <maximum_age>79 Years</maximum_age>
    <healthy_volunteers>No</healthy_volunteers>
  </eligibility>
