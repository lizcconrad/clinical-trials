  <brief_summary>
    <textblock>
      The purpose of this study is to investigate the feasibility of using quantitative
      ultrasonography (US) evaluation to determine the severity of osteoarthritic femoral condyle
      cartilage erosion.
    </textblock>
  </brief_summary>
  <overall_status>Completed</overall_status>
  <study_type>Observational</study_type>
  <has_expanded_access>No</has_expanded_access>
  <condition>Osteoarthritis</condition>
  <eligibility>
    <study_pop>
      <textblock>
        patients with knee OA who were going to receive total knee arthroplasty
      </textblock>
    </study_pop>
    <sampling_method>Probability Sample</sampling_method>
    <criteria>
      <textblock>
        Inclusion Criteria:

          -  Patients with knee OA who were going to receive total knee arthroplasty

        Exclusion Criteria:

          -  Patients with inflammatory arthritis (e.g. rheumatic arthritis) and infectious disease
             (e.g. hepatitis B)
      </textblock>
    </criteria>
    <gender>All</gender>
    <minimum_age>40 Years</minimum_age>
    <maximum_age>90 Years</maximum_age>
    <healthy_volunteers>No</healthy_volunteers>
