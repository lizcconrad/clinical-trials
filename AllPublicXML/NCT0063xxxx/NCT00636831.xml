  </study_design_info>
  <primary_outcome>
    <measure>infectious complication</measure>
    <time_frame>two year</time_frame>
  </primary_outcome>
  <secondary_outcome>
    <measure>Recurrence of inguinal hernia</measure>
    <time_frame>two year</time_frame>
  </secondary_outcome>
  <number_of_arms>2</number_of_arms>
  <enrollment type="Actual">400</enrollment>
