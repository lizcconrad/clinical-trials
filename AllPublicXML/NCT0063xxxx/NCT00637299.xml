    <intervention_type>Other</intervention_type>
    <intervention_name>sham osteopathic treatment (SOT+PR)</intervention_name>
    <description>Only soft manipulation was performed</description>
    <arm_group_label>SOT + PR</arm_group_label>
    <other_name>SOT+PR</other_name>
  </intervention>
