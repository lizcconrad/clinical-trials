  <primary_outcome>
    <measure>Bone mineral density of lumbar spine at 12 months as measured by DEXA.</measure>
  </primary_outcome>
  <secondary_outcome>
    <measure>Bone mineral density of femoral neck at 12 months as measured by DEXA.</measure>
  </secondary_outcome>
  <enrollment type="Actual">56</enrollment>
  <condition>Osteopenia</condition>
  <condition>Complications of Heart-lung Transplant</condition>
  <condition>Other Complications of Lung Transplant</condition>
  <intervention>
    <intervention_type>Drug</intervention_type>
    <intervention_name>zoledronic acid vs pamidronate</intervention_name>
  </intervention>
  <eligibility>
    <criteria>
      <textblock>
        Inclusion Criteria:

          -  reduced bone density as indicated by a bone density T score &lt;-1.in either the lumbar
             spine or femoral neck

          -  have undergone or are on the waiting list for heart or lung transplantation

          -  are receiving adequate calcium and vitamin D therapy

          -  have provided written informed consent prior to participation in the trial

        Exclusion Criteria:

          -  untreated hypogonadism, hypothyroidism or hyperthyroidism

          -  acute or major organ rejection or intercurrent illness

          -  pregnancy or breastfeeding
      </textblock>
    </criteria>
    <gender>All</gender>
    <minimum_age>18 Years</minimum_age>
    <maximum_age>N/A</maximum_age>
    <healthy_volunteers>No</healthy_volunteers>
  </eligibility>
