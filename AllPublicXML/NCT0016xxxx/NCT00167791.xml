  <intervention>
    <intervention_type>Drug</intervention_type>
    <intervention_name>rituximab</intervention_name>
    <description>Rituximab 375mg/m2 IV weekly times 4 weeks</description>
  </intervention>
  <eligibility>
    <criteria>
      <textblock>
        Inclusion Criteria:

          -  Active status on a kidney transplant waiting list with positive cross match against a
             living donor

        Exclusion Criteria:

          -  Receipt of a live vaccine within 4 weeks prior to randomization

          -  Previous Treatment with Rituximab
      </textblock>
    </criteria>
