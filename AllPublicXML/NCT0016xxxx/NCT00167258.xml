  <brief_title>Effectiveness and Costs of Enhanced Cocaine Treatments</brief_title>
  <sponsors>
    <lead_sponsor>
      <agency>University of Pennsylvania</agency>
      <agency_class>Other</agency_class>
    </lead_sponsor>
