  <brief_title>Use of Probiotic Bacteria in Prevention of Allergic Disease in Children 1999-2008</brief_title>
  <sponsors>
    <lead_sponsor>
      <agency>Helsinki University</agency>
      <agency_class>Other</agency_class>
