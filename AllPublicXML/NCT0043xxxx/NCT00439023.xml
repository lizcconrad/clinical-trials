  <brief_title>Glucose in Dialysis Water in Non-diabetics</brief_title>
  <official_title>Effect of Glucose in Dialysis Water on Blood Pressure and Vasoactive Hormones in Dialysis Patients</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Regional Hospital Holstebro</agency>
      <agency_class>Other</agency_class>
    </lead_sponsor>
  </sponsors>
