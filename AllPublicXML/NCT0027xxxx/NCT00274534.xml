    <time_frame>up to day 90</time_frame>
  </secondary_outcome>
  <secondary_outcome>
    <measure>Occurrence of adverse events</measure>
    <time_frame>up to day 90</time_frame>
  </secondary_outcome>
  <secondary_outcome>
    <measure>Pulse rate and sitting blood pressure in conjunction with spirometry</measure>
    <time_frame>up to day 90</time_frame>
  </secondary_outcome>
