  <brief_title>Treatment Resistant Bipolar Depression</brief_title>
  <official_title>Six Week Double Blind, Randomized Trial of Escitalopram Add On for Treatment Resistant Bipolar Depression</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Queen's University</agency>
      <agency_class>Other</agency_class>
