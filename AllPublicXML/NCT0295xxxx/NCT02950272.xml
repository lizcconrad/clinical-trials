  <eligibility>
    <study_pop>
      <textblock>
        Chinese adolescents with diabetes aged 14-30.
      </textblock>
    </study_pop>
    <sampling_method>Non-Probability Sample</sampling_method>
    <criteria>
      <textblock>
        Inclusion Criteria:

          -  diagnosed diabetes

          -  aged 14-30

          -  signed the informed consent

        Exclusion Criteria:

          -  taking part in other drug research

          -  gestational diabetes

          -  diagnosed with tumor or cardiovascular disease
      </textblock>
    </criteria>
    <gender>All</gender>
    <minimum_age>14 Years</minimum_age>
    <maximum_age>30 Years</maximum_age>
