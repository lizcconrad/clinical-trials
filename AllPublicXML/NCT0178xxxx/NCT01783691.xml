  <primary_outcome>
    <measure>Safety as assessed by (1) adverse events (2) laboratory values (3) vital signs and (4) physical exam.</measure>
    <time_frame>180 days</time_frame>
  </primary_outcome>
  <secondary_outcome>
    <measure>Pharmacokinetics assessed by plasma drug concentration levels</measure>
    <time_frame>0; 15, 30, 60 minutes; 3,6, hours; 1,2,3,7,14,30,60,90 days</time_frame>
  </secondary_outcome>
  <secondary_outcome>
