    <time_frame>0, 0.25, 1, 2, 7, 14, 30, 60, 90, 120 days</time_frame>
  </secondary_outcome>
  <other_outcome>
    <measure>Pain scores as assessed by daily electronic diary</measure>
    <time_frame>Daily for 120 days</time_frame>
  </other_outcome>
  <other_outcome>
