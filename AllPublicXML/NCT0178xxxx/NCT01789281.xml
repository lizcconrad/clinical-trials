  </study_design_info>
  <primary_outcome>
    <measure>Frequency and severity of AEs/SAEs</measure>
    <time_frame>10 years</time_frame>
  </primary_outcome>
  <secondary_outcome>
    <measure>Percentage of patients with clinical benefit</measure>
