  </study_design_info>
  <primary_outcome>
    <measure>Clinical benefit of the Polyflex Esophageal Stent as a means to maintain oral nutrition during chemotherapy and/or radiation</measure>
    <time_frame>8 - 10 weeks</time_frame>
  </primary_outcome>
  <number_of_groups>1</number_of_groups>
  <enrollment type="Anticipated">26</enrollment>
  <condition>Esophageal Cancer</condition>
