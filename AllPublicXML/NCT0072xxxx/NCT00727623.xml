  <condition>Acute Myocardial Infarction</condition>
  <eligibility>
    <study_pop>
      <textblock>
        Patients with acute ST elevation myocardial infarction admitted in Belgian hospitals.
      </textblock>
    </study_pop>
    <sampling_method>Probability Sample</sampling_method>
    <criteria>
      <textblock>
        Inclusion Criteria:

          -  clinical diagnosis of acute myocardial infarction with ST elevation or left bundle
             branch blok pattern on ECG

        Exclusion Criteria:

          -  acute myocardial infarction as an acute complication of coronary intervention
      </textblock>
    </criteria>
    <gender>All</gender>
    <minimum_age>N/A</minimum_age>
