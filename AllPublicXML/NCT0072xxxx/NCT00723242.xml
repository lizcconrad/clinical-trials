  <brief_title>The Role of Dendritic Cells in Hepatitis C Infection</brief_title>
  <sponsors>
    <lead_sponsor>
      <agency>University College, London</agency>
      <agency_class>Other</agency_class>
    </lead_sponsor>
    <collaborator>
