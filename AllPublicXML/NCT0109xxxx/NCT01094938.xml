  <brief_title>Cardiac Output Monitoring in Aortic Aneurysm Surgery</brief_title>
  <sponsors>
    <lead_sponsor>
      <agency>NHS Lothian</agency>
      <agency_class>Other</agency_class>
    </lead_sponsor>
