  <primary_outcome>
    <measure>flap elevation time: from identification of skin perforator to completion of dissection to main pedicle</measure>
    <time_frame>1 hour after completion of flap elevation</time_frame>
  </primary_outcome>
  <secondary_outcome>
    <measure>intraoperative complications: bleeding, perforator injury (thermal, mechanical)</measure>
    <time_frame>1 hour after completion of flap elevation</time_frame>
  </secondary_outcome>
  <secondary_outcome>
    <measure>postoperative drainage amount</measure>
    <time_frame>1 week after flap inset</time_frame>
  </secondary_outcome>
  <secondary_outcome>
    <measure>postoperative pain measured by visual analogue scale (VAS)</measure>
    <time_frame>1 week after completion of flap elevation</time_frame>
  </secondary_outcome>
