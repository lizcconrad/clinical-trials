  </study_design_info>
  <primary_outcome>
    <measure>Responder rate in patients who achieved low-density lipoprotein cholesterol (LDL-C) level</measure>
    <time_frame>Week 8</time_frame>
  </primary_outcome>
  <secondary_outcome>
    <measure>Percentage of patients achieving LDL goal at 2 and 4 weeks</measure>
    <time_frame>Weeks 2 and 4</time_frame>
  </secondary_outcome>
  <secondary_outcome>
    <measure>Lipid changes at week 4 &amp; 8</measure>
    <time_frame>Weeks 4 and 8</time_frame>
  </secondary_outcome>
