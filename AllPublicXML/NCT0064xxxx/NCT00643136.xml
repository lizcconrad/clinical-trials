  </study_design_info>
  <primary_outcome>
    <measure>Change from baseline in polysomnographic (PSG) sleep efficiency in the efficacy evaluable population</measure>
    <time_frame>Endpoint</time_frame>
  </primary_outcome>
  <secondary_outcome>
    <measure>Change from baseline in total sleep time</measure>
    <time_frame>Endpoint</time_frame>
  </secondary_outcome>
