  <brief_title>Efficiency Study of Clarithromycin and Bismuth-containing Quadruple Therapy to Treat H.Pylori</brief_title>
  <sponsors>
    <lead_sponsor>
      <agency>Shanghai Jiao Tong University School of Medicine</agency>
      <agency_class>Other</agency_class>
    </lead_sponsor>
  </sponsors>
