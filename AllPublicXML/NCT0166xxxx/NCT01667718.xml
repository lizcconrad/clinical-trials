  <brief_title>Bismuth Improves the Efficacy of Levofloxacin-containing Triple Therapy for Helicobacter Pylori Treatment</brief_title>
  <official_title>Levofloxacin-containing Therapy for Helicobacter Pylori Treatment</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Shanghai Jiao Tong University School of Medicine</agency>
      <agency_class>Other</agency_class>
    </lead_sponsor>
