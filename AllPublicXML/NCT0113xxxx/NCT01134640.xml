    <observational_model>Cohort</observational_model>
    <time_perspective>Prospective</time_perspective>
  </study_design_info>
  <primary_outcome>
    <measure>Safety and toxicity of Erbitux in clinical practice</measure>
    <time_frame>Till 28 days after last dose of Erbitux</time_frame>
    <description>To obtain safety information on the use of Erbitux in subjects with metastatic colorectal cancer.</description>
  </primary_outcome>
  <enrollment type="Actual">286</enrollment>
  <condition>Metastatic Colorectal Cancer</condition>
  <eligibility>
    <study_pop>
      <textblock>
        EGFR expressing, KRAS wild-type subjects with metastatic colorectal cancer, who are
        indicated for Erbitux treatment according to the nationally authorized label (in
        combination with irinotecan, metastatic colorectal cancer after failure of
        irinotecan-including cytotoxic therapy)
      </textblock>
    </study_pop>
    <sampling_method>Non-Probability Sample</sampling_method>
    <criteria>
      <textblock>
        Inclusion Criteria:

          -  EGFR expressing, KRAS wild-type subjects with metastatic colorectal cancer, who are
             indicated for Erbitux treatment according to the nationally authorized label (in
             combination with irinotecan, metastatic colorectal cancer after failure of
             irinotecan-including cytotoxic therapy)

        Exclusion Criteria:

          -  Subjects who are not eligible for Erbitux treatment according to the indication in
             national label; or with hypersensitivity reactions (grade 3 or 4) to Erbitux
      </textblock>
    </criteria>
    <gender>All</gender>
    <minimum_age>N/A</minimum_age>
    <maximum_age>N/A</maximum_age>
    <healthy_volunteers>No</healthy_volunteers>
  </eligibility>
