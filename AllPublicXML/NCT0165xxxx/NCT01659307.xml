    <description>Aspirin 75mg once daily for 7 days. Administered by mouth.</description>
  </arm_group>
  <arm_group>
    <arm_group_label>Aspirin 1200mg</arm_group_label>
    <arm_group_type>Active Comparator</arm_group_type>
    <description>Asprin 600mg twice daily for 7 days. Administered by mouth.</description>
  </arm_group>
  <arm_group>
    <arm_group_label>Lactose powder</arm_group_label>
    <arm_group_type>Placebo Comparator</arm_group_type>
