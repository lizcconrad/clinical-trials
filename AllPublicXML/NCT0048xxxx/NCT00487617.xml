  <intervention>
    <intervention_type>Procedure</intervention_type>
    <intervention_name>Fruit juice or placebo absorption</intervention_name>
    <description>absorption of 300 ml of fruit juice ; 24 hours later, absorption of 300 ml of placebo.</description>
    <arm_group_label>fruit juice</arm_group_label>
    <arm_group_label>placebo</arm_group_label>
  </intervention>
