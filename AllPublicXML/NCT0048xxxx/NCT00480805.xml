  <phase>Phase 3</phase>
  <study_type>Interventional</study_type>
  <has_expanded_access>No</has_expanded_access>
  <study_design_info>
    <allocation>Randomized</allocation>
    <intervention_model>Parallel Assignment</intervention_model>
    <primary_purpose>Treatment</primary_purpose>
    <masking>Double</masking>
  </study_design_info>
  <primary_outcome>
    <measure>To determine the antihypertensive effectiveness of HYZAAR as compared to Ramipril as measure by SiSBP at Week 4</measure>
  </primary_outcome>
  <secondary_outcome>
    <measure>To determine the safety anf tolerability of HYZAAR as compared to Ramipril as seen in overall adverse experiences for the duration of the study</measure>
  </secondary_outcome>
  <enrollment type="Actual">312</enrollment>
