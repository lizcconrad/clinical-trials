  <brief_title>HYZAAR vs. Ramipril for Diabetes (0954A-245)(COMPLETED)</brief_title>
  <official_title>HYZAAR Versus Ramipril Diabetic Patients</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Merck Sharp &amp; Dohme Corp.</agency>
      <agency_class>Industry</agency_class>
