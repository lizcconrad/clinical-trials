  <primary_outcome>
    <measure>Improvement of asthma with MK0476 and Fluticasone as measured by number of asthma rescue-free days</measure>
    <time_frame>Duration of Trial</time_frame>
  </primary_outcome>
  <secondary_outcome>
    <measure>Improved effect of MK0476 and fluticasone on FEV1 values</measure>
    <time_frame>Duration of Trial</time_frame>
  </secondary_outcome>
