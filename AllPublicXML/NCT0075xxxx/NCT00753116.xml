  <primary_outcome>
    <measure>Safety - complications associated with delivery and/or use of the Ardian Catheter, adverse renal events, electrolyte disturbances, hemodynamic events.</measure>
    <time_frame>Through 1 year</time_frame>
  </primary_outcome>
  <secondary_outcome>
    <measure>Physiologic response to denervation (e.g., blood pressure reduction)</measure>
    <time_frame>Through 1 year</time_frame>
  </secondary_outcome>
  <enrollment type="Anticipated">20</enrollment>
  <condition>Kidney Failure, Chronic</condition>
  <condition>Renal Dialysis</condition>
  <intervention>
    <intervention_type>Device</intervention_type>
    <intervention_name>Renal Denervation with a catheter-based procedure</intervention_name>
    <description>Disruption of the renal nerves with a catheter-based procedure</description>
  </intervention>
  <eligibility>
    <criteria>
      <textblock>
        Inclusion Criteria:

          -  Systolic blood pressure of 160 mmHg or greater

          -  On 3 or more antihypertensive medications

          -  On dialysis for more than 6 months

        Exclusion Criteria:

          -  Renal artery abnormalities

          -  Known secondary hypertension attributable to a cause other than sleep apnea

          -  MI, angina, CVA within 6 months

          -  Others
      </textblock>
    </criteria>
    <gender>All</gender>
    <minimum_age>18 Years</minimum_age>
    <maximum_age>N/A</maximum_age>
    <healthy_volunteers>No</healthy_volunteers>
