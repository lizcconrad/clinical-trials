    <time_perspective>Prospective</time_perspective>
  </study_design_info>
  <primary_outcome>
    <measure>Blood-Retinal Barrier (BRB) function measured by Retinal Leakage Analysis (RLA).</measure>
  </primary_outcome>
  <number_of_groups>2</number_of_groups>
  <enrollment type="Actual">90</enrollment>
  <condition>Age-Related Maculopathy</condition>
  <condition>Diabetic Macular Edema</condition>
