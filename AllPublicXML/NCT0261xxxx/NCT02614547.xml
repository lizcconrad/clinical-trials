  <start_date>November 2015</start_date>
  <completion_date type="Actual">July 2016</completion_date>
  <primary_completion_date type="Actual">June 2016</primary_completion_date>
  <phase>Phase 2</phase>
  <study_type>Interventional</study_type>
  <has_expanded_access>No</has_expanded_access>
