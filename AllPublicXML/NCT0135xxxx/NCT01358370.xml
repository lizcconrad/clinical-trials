  <brief_title>A Retrospective Natural History Study of Patients With Lysosomal Acid Lipase Deficiency/Wolman Phenotype</brief_title>
  <official_title>A Retrospective Natural History Study of Patients With Lysosomal Acid Lipase Deficiency/Wolman Phenotype</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Alexion Pharmaceuticals</agency>
      <agency_class>Industry</agency_class>
    </lead_sponsor>
  </sponsors>
