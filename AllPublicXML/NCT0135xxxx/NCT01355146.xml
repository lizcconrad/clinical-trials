  <brief_title>Home Therapy With Replagal in Fabry Disease</brief_title>
  <official_title>Non Interventional Study of Replagal® Home Therapy in Patients With Fabry Disease</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Shire</agency>
      <agency_class>Industry</agency_class>
