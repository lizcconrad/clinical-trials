  <brief_title>PPI Test in GP Patients</brief_title>
  <official_title>The Proton Pump Inhibitor Test in Reflux Disease: a Study Using Nexium in General Practice Patients</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>AstraZeneca</agency>
      <agency_class>Industry</agency_class>
