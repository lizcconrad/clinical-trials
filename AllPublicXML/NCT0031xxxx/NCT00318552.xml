  <primary_outcome>
    <measure>Number of days from randomization to recovery from sepsis among those patients who survived the trial period</measure>
  </primary_outcome>
  <primary_outcome>
    <measure>Endpoint considered in conjunction with observed mortality rates to determine whether any reduction in time to recovery from sepsis</measure>
  </primary_outcome>
  <secondary_outcome>
    <measure>Number of days from randomization to ready to discharge from the ICU</measure>
  </secondary_outcome>
  <secondary_outcome>
    <measure>Number of days from randomization until patient is discharged from the ICU</measure>
  </secondary_outcome>
