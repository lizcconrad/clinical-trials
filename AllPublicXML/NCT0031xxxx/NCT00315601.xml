  <brief_title>Intrapulmonary Pharmacokinetics of Antibiotics</brief_title>
  <official_title>Comparison of the Intrapulmonary and Plasma Concentrations of Telithromycin and Azithromycin in Healthy Adult Subjects</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>University of Illinois at Chicago</agency>
      <agency_class>Other</agency_class>
