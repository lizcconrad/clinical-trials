  <brief_title>Early Revalvulation After Fallot Repair Improves Clinical Outcome</brief_title>
  <sponsors>
    <lead_sponsor>
      <agency>Universitaire Ziekenhuizen Leuven</agency>
      <agency_class>Other</agency_class>
    </lead_sponsor>
  </sponsors>
