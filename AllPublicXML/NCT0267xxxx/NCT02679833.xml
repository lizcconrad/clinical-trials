  <primary_outcome>
    <measure>The change in plasma concentrations of methylmalonic acid</measure>
    <time_frame>Baseline, 3 months</time_frame>
    <description>Lowering methylmalonic acid in the B12 arm compared with the placebo arm</description>
  </primary_outcome>
  <primary_outcome>
    <measure>The change in plasma concentrations of holotranscobalamin</measure>
    <time_frame>Baseline, 3 months</time_frame>
    <description>The effect on increasing holotranscobalamin in the B12 arm compared with the placebo arm</description>
  </primary_outcome>
