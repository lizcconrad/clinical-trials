  <primary_outcome>
    <measure>cluster of differentiation (CD4/CD25) ratio</measure>
    <time_frame>3 months</time_frame>
  </primary_outcome>
  <primary_outcome>
    <measure>cluster of differentiation (CD33/CD11b/Lin) ratio</measure>
