  <eligibility>
    <study_pop>
      <textblock>
        Neonates for whom healthcare was provided.
      </textblock>
    </study_pop>
    <sampling_method>Non-Probability Sample</sampling_method>
    <criteria>
      <textblock>
        Inclusion Criteria:

          -  Neonates for whom healthcare was provided

          -  Born alive

          -  Neonate greater than or equal to 22 0/7 weeks estimated gestational age

        Exclusion Criteria:

          -  Stillborn

          -  Fetal demise

          -  Neonates less than or equal to 21 6/7 weeks estimated gestational age
      </textblock>
    </criteria>
    <gender>All</gender>
    <minimum_age>22 Weeks</minimum_age>
    <maximum_age>44 Weeks</maximum_age>
