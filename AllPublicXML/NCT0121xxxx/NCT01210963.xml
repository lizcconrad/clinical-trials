  <brief_title>Central Corneal Thickness With SENSIMED Triggerfish</brief_title>
  <acronym>09/08</acronym>
  <official_title>Central Corneal Thickness After Overnight IOP Monitoring With SENSIMED Triggerfish</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Sensimed AG</agency>
      <agency_class>Industry</agency_class>
    </lead_sponsor>
  </sponsors>
