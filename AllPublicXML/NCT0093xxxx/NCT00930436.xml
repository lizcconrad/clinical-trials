  <eligibility>
    <criteria>
      <textblock>
        Inclusion Criteria:

          -  Candidate for angiography

          -  Stage 3B, 4 or 5 Chronic kidney disease (i.e. eGFR &lt;=44)

          -  Either sex over 18 years of age

        Exclusion Criteria:

          -  Pregnant or breast feeding

          -  On any kidney replacement list

          -  Gastric tube in place or gastric drainage

          -  Uncorrected hypoglycemia
      </textblock>
    </criteria>
    <gender>All</gender>
    <minimum_age>18 Years</minimum_age>
    <maximum_age>N/A</maximum_age>
    <healthy_volunteers>No</healthy_volunteers>
  </eligibility>
