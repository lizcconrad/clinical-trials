  <primary_outcome>
    <measure>accuracy of serology</measure>
    <time_frame>2 years</time_frame>
    <description>To determine the sensitivity or specificity of serology in diagnosis of temporomandibular joint arthritis</description>
  </primary_outcome>
  <secondary_outcome>
    <measure>Rheumatoid factor</measure>
    <time_frame>2 years</time_frame>
    <description>To be measured in a blood sample with (IU/mL) unit as The normal reference range for RF is less than 15 IU/mL</description>
  </secondary_outcome>
  <secondary_outcome>
    <measure>C-reactive protein</measure>
    <time_frame>2 years</time_frame>
