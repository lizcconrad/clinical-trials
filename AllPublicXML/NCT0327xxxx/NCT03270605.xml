  <brief_title>Caesarean Myomectomy; A Retrospective Cohort Study</brief_title>
  <official_title>Myomectomy During Caesarean Section; A Retrospective Cohort Study</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Mansoura University</agency>
      <agency_class>Other</agency_class>
    </lead_sponsor>
  </sponsors>
  <source>Mansoura University</source>
  <oversight_info>
    <is_fda_regulated_drug>No</is_fda_regulated_drug>
    <is_fda_regulated_device>No</is_fda_regulated_device>
  </oversight_info>
  <brief_summary>
    <textblock>
      Cesarean Myomectomy for safety regarding operative blood loss and need for further
      interventions and postoperative hospital stay.
    </textblock>
  </brief_summary>
  <overall_status>Completed</overall_status>
  <start_date type="Actual">January 1, 2015</start_date>
  <completion_date type="Actual">February 1, 2017</completion_date>
  <primary_completion_date type="Actual">January 9, 2017</primary_completion_date>
  <study_type>Observational</study_type>
  <has_expanded_access>No</has_expanded_access>
  <study_design_info>
    <observational_model>Cohort</observational_model>
    <time_perspective>Retrospective</time_perspective>
  </study_design_info>
  <primary_outcome>
    <measure>Mean change in Haemoglobin in gm/dl</measure>
    <time_frame>24 hours</time_frame>
    <description>pre-operative Haemoglobin minus post-operative Haemoglobin level</description>
  </primary_outcome>
  <secondary_outcome>
    <measure>Duration of operation in hours</measure>
    <time_frame>2 hours</time_frame>
    <description>time to complete the procedure</description>
  </secondary_outcome>
  <secondary_outcome>
    <measure>postoperative hospital stay</measure>
    <time_frame>3 days</time_frame>
    <description>time from the operation to discharge from hospital</description>
  </secondary_outcome>
  <number_of_groups>2</number_of_groups>
  <enrollment type="Actual">85</enrollment>
  <condition>Cesarean Section</condition>
  <condition>Uterine Fibroid</condition>
  <arm_group>
    <arm_group_label>Cesarean Myomectomy</arm_group_label>
    <description>patient with uterine fibroid during pregnancy and subjected to myomectomy during delivery by cesarean section</description>
  </arm_group>
  <arm_group>
    <arm_group_label>Cesarean section</arm_group_label>
    <description>patient with uterine fibroid during pregnancy and delivered by cesarean section without myomectomy</description>
  </arm_group>
  <intervention>
    <intervention_type>Procedure</intervention_type>
    <intervention_name>myomectomy</intervention_name>
    <description>surgical removal of uterine fibroid at the time of cesarean section</description>
    <arm_group_label>Cesarean Myomectomy</arm_group_label>
  </intervention>
  <eligibility>
    <study_pop>
      <textblock>
        all pregnant women with documented uterine fibroid during index pregnancy either by
        ultrasound scanning during antenatal follow and planned to be delivered by cesarean
        section.
      </textblock>
    </study_pop>
    <sampling_method>Non-Probability Sample</sampling_method>
    <criteria>
      <textblock>
        Inclusion Criteria:

          -  documented fibroid during the index pregnancy by antenatal ultrasound or at surgery

          -  delivery by Caesarean

        Exclusion Criteria:

          -  no evidence of antenatal bleeding

          -  no other procedure at Caesarean apart from myomectomy
      </textblock>
    </criteria>
    <gender>Female</gender>
    <minimum_age>18 Years</minimum_age>
    <maximum_age>41 Years</maximum_age>
  </eligibility>
