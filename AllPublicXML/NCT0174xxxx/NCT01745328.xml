  <brief_title>Treatment of Recurrent Urinary Tract Infection (RUTI) by Traditional Chinese Medicine</brief_title>
  <official_title>Study on Treatment of Recurrent Urinary Tract Infection by Traditional Chinese Medicine</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Beijing Institute of Disease Control and Prevention</agency>
      <agency_class>Other</agency_class>
    </lead_sponsor>
  </sponsors>
