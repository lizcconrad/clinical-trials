    <time_frame>During liver transection</time_frame>
  </secondary_outcome>
  <secondary_outcome>
    <measure>Pringle time</measure>
    <time_frame>Intra-operative</time_frame>
  </secondary_outcome>
  <other_outcome>
    <measure>Quality of Life (EQ-5D)</measure>
    <time_frame>Pre-operative, 2 weeks post-operative, 4-6 weeks post-operative</time_frame>
  </other_outcome>
  <other_outcome>
    <measure>Morphine consumption</measure>
    <time_frame>Day of surgery and postoperative days 1-7</time_frame>
  </other_outcome>
  <other_outcome>
    <measure>IV Fluid volume</measure>
    <time_frame>Day of Surgery and postoperative days 1-7</time_frame>
  </other_outcome>
  <other_outcome>
    <measure>Complications</measure>
