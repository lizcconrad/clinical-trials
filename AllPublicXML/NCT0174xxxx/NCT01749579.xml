  <intervention>
    <intervention_type>Drug</intervention_type>
    <intervention_name>Propofol</intervention_name>
    <description>Propofol 1 mg/kg bolus then 500 microg/kg every 2 minutes until sedation level equivalent to Ramsey 3</description>
