  <brief_title>Effects of Short-term Atorvastatin Treatment on Vaccination Efficacy in Nonresponder Persons to Hepatitis B Vaccine</brief_title>
  <official_title>Effects of Short-term Atorvastatin Treatment on Vaccination Efficacy in Nonresponder Persons to Hepatitis B Vaccine</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Nematollah Jonaidi Jafari</agency>
      <agency_class>Other</agency_class>
    </lead_sponsor>
  </sponsors>
  <source>Baqiyatallah Medical Sciences University</source>
